@model UfePlusCardControlModel
@using (Html.BeginForm("PayWithCreditCard", "UfePlusCard", FormMethod.Post, new { role = "form", @class = "form", enctype = "multipart/form-data" }))
{
    <div class="list">
        <table cellpadding="0" cellspacing="0" class="table-1">
            <tr>
                <td>SİPARİŞ TUTARI</td>
                <td>@(Model.SaleSummary.BalanceAmount?.ToString("N2")) ₺</td>
            </tr>
            <tr>
                <td>YÜKLÜ KREDİ</td>
                <td><b>50,00 ₺</b></td>
            </tr>
        </table>
        <table cellpadding="0" cellspacing="0" class="table-2">
            <tr>
                <td>KULLANILACAK KREDİ</td>
                <td><input type="text" class="input-c"></td>
            </tr>
            <tr>
                <td>KALAN BAKİYE</td>
                <td><input type="text" class="input-c" value="00,00" readonly></td>
            </tr>
        </table>
    </div>
    <div class="credit-btn">
        <button type="button" class="credit-upload">
            KREDİ YÜKLE
        </button>
        <button type="button" class="credit-use">
            KREDİ KULLAN
        </button>
    </div>
}