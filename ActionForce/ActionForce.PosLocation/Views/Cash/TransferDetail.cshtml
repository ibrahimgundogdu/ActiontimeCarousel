@model CashControlModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UFE POS</title>
    <meta name="description" content="UFE POS">
    <meta name="keywords" content="UFE POS">
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/scss/global.css">
</head>
<body>
    <div class="main">
        <div class="container">
            <div class="header">
                <div class="menu">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="49.778" viewBox="0 0 64 49.778">
                        <path d="M59.889,40.556v7.111H10.111V40.556H59.889M67,5H3v7.111H67Zm0,14.222H3v7.111H67Zm0,14.222H3V54.778H67Z" transform="translate(-3 -5)" fill="currentColor" />
                    </svg>
                    <!-- menu -->
                </div>
                <div class="logo">
                    <a href="javascript:;">UFE POS</a>
                    <div class="date">@(DateTime.Now.ToLongDateString())</div>
                </div>
                <div class="homepage">
                    <a href="/">
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 50 50">
                            <path d="M4,16.5H16.5V4H4ZM22.75,54h12.5V41.5H22.75ZM4,54H16.5V41.5H4ZM4,35.25H16.5V22.75H4Zm18.75,0h12.5V22.75H22.75ZM41.5,4V16.5H54V4ZM22.75,16.5h12.5V4H22.75ZM41.5,35.25H54V22.75H41.5ZM41.5,54H54V41.5H41.5Z" transform="translate(-4 -4)" fill="currentColor" />
                        </svg>
                        <!-- homepage -->
                    </a>
                </div>
            </div><!-- header -->
            <div class="side-menu-overlay"></div>
            <div class="side-menu">
                @{ Html.RenderPartial("_PartialMenu");}
            </div><!-- side-menu -->
            <div class="content">
                <div class="card-transactions">
                    <div class="head">
                        <h1>Havale / EFT Detayı</h1>
                    </div>
                    <div class="currency-exchange-information">
                        <div class="cei dolar"><b>$</b>: <span>@(Model.Exchange.USDA?.ToString("N4"))</span></div>
                        <div class="cei euro"><b>€</b>: <span>@(Model.Exchange.EURA?.ToString("N4"))</span></div>
                    </div>

                    @using (Html.BeginForm("UpdateTransfer", "Cash", FormMethod.Post, new { role = "form", @class = "form", enctype = "multipart/form-data" }))
                    {

                        <div class="form-group">
                            <div class="row">

                                <label class="col-4 col-form-label">Numarası</label>
                                <div class="col-8">
                                    <label class="form-control font-weight-bold mb-0 bg-body"> @(Model.BankTransfer.DocumentNumber)</label>
                                    <input id="Hidden1" name="UID" type="hidden" value="@(Model.BankTransfer.UID)" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group row mb-1">
                            <label class="col-4 col-form-label">Tarihi</label>
                            <div class="col-8">
                                <label class="form-control font-weight-bold mb-0 bg-body"> @(Model.BankTransfer.Date?.ToString("yyyy-MM-dd"))</label>
                                <input id="DocumentDate" name="DocumentDate" type="hidden" value="@(Model.BankTransfer.Date?.ToString("yyyy-MM-dd"))">
                            </div>
                        </div>

                        <div class="form-group row mb-1">
                            <label class="col-4 col-form-label pr-0">Referans Kodu</label>
                            <div class="col-8">
                                <label class="form-control font-weight-bold mb-0 bg-body text-primary"> @(Model.BankTransfer.ReferenceCode)</label>
                                <input id="ReferenceCode" name="ReferenceCode" type="hidden" value="@(Model.BankTransfer.ReferenceCode)">
                            </div>
                        </div>

                        <div class="form-group row mb-1">
                            <label class="col-4 col-form-label pr-0">Banka</label>
                            <div class="col-8">
                                <select class="custom-select font-weight-bold" name="BankAccountID">
                                    @foreach (var item in Model.BankAccountList)
                                    {
                                        <option value="@(item.ID)" @(item.ID == Model.BankTransfer.ToBankAccountID ? "selected" : "")>@(item.Name)</option>
                                    }
                                </select>
                            </div>
                        </div>


                        <div class="form-group row mb-1">
                            <label class="col-4 col-form-label">Tutarı</label>
                            <div class="col-5 pr-1">
                                <input id="Amount" name="Amount" type="text" class="form-control font-weight-bold text-right money" value="@(Model.BankTransfer.Amount?.ToString("N2"))" required>
                            </div>
                            <div class="col-3 pl-1">
                                <select class="custom-select" name="Currency">
                                    @foreach (var item in Model.Currencies)
                                    {
                                        <option value="@(item.Code)" @(item.Code == Model.BankTransfer.Currency ? "selected" : "")>@(item.Sign)</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group row mb-1">
                            <label class="col-4 col-form-label">Komisyonu</label>
                            <div class="col-5 pr-1">
                                <input id="Commission" name="Commission" type="text" class="form-control font-weight-bold text-right money" value="@(Model.BankTransfer.Commission?.ToString("N2"))" required>
                            </div>

                        </div>

                        <div class="form-group row mb-1">
                            <label class="col-4 col-form-label">Fiş No</label>
                            <div class="col-8">
                                <input id="ReceiptNumber" type="text" name="ReceiptNumber" class="form-control font-weight-bold" value="@(Model.BankTransfer.SlipNumber)" required />
                            </div>
                        </div>

                        <div class="form-group row mb-1">
                            <label class="col-4 col-form-label">Fiş Tarihi</label>
                            <div class="col-8">
                                <input id="ReceiptDate" name="ReceiptDate" type="date" class="form-control font-weight-bold" placeholder="Date" value="@(Model.BankTransfer.SlipDate?.ToString("yyyy-MM-dd"))" required>
                            </div>
                        </div>

                        <div class="form-group row mb-1">
                            <label class="col-4 col-form-label">Fiş Saati</label>
                            <div class="col-8">
                                <input id="ReceiptTime" name="ReceiptTime" type="time" class="form-control font-weight-bold" step="1" placeholder="Time" value="@(Model.BankTransfer.SlipDate?.ToString("HH\\:mm\\:ss"))" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-4 col-form-label">Açıklama</label>
                            <div class="col-8">
                                <textarea id="event-desc" name="Description" class="form-control" rows="2">@(Model.BankTransfer.Description)</textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                @if (!Request.IsLocal)
                                {
                                    <img src="@($"http://action.ufegrup.com/Document/Bank/{Model.BankTransfer.SlipDocument}")" alt="@(Model.BankTransfer.SlipDocument)" style="width:100%" />
                                }
                                else
                                {
                                    <img src="@($"/Documents/{Model.BankTransfer.SlipDocument}")" alt="@(Model.BankTransfer.SlipDocument)" style="width:100%" />
                                }
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <input id="ReceiptFile" name="ReceiptFile" class="form-control" type="file" style="width:100%;" />
                            </div>
                        </div>

                        <div class="form-group row mb-1">
                            <label class="col-4 col-form-label">Durum</label>
                            <div class="col-8">
                                <select class="custom-select" name="StatusID">
                                    @foreach (var item in Model.TransferStatus)
                                    {
                                        <option value="@(item.ID)" @(item.ID == Model.BankTransfer.StatusID ? "selected" : "")>@(item.StatusName)</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group row mb-1">
                            <label class="col-4 col-form-label">Takip No</label>
                            <div class="col-8">
                                <input id="TrackingNumber" type="text" name="TrackingNumber" class="form-control font-weight-bold" value="@(Model.BankTransfer.TrackingNumber)" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col col-4">
                                    <label>Aktif?</label>
                                </div>
                                <div class="col col-8">
                                    <div class="checkbox-group">
                                        <label for="inp-active">
                                            <input type="checkbox" id="inp-active" name="IsActive" value="1" @(Model.BankTransfer.IsActive == true ? "checked" : "")><span>Aktif</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group-btn">
                            <div class="row">
                                <div class="col col-4"></div>
                                <div class="col col-8">
                                    @if (Model.IsUpdatible)
                                    {
                                        <button type="submit">Güncelle</button>
                                    }
                                    else
                                    {
                                        <button type="button">Salt Okunur</button>
                                    }

                                </div>
                            </div>
                        </div>



                        <div class="form-group row mb-1">
                            <div class="col-12 p-0 text-center">
                                <small class="text-muted"> @($"{Model.EmployeeRecorded} - {Model.BankTransfer.RecordDate}")</small>
                            </div>
                        </div>
                        <div class="form-group row mb-1">
                            <div class="col-12 p-0 text-center">
                                <small class="text-muted"> @($"{Model.EmployeeUpdated} - {Model.BankTransfer.UpdateDate}")</small>
                            </div>
                        </div>


                    }
                </div>
            </div><!-- content -->
            <div class="fixed-footer">
                <div class="container">
                    <div class="footer-up">
                        <div class="clean clean-2">
                            <a href="/Cash/BankTransfer">
                                <svg xmlns="http://www.w3.org/2000/svg" width="87.52" height="65.64" viewBox="0 0 87.52 65.64">
                                    <path d="M80.227,3h-54.7a6.864,6.864,0,0,0-5.8,3.209L0,35.82,19.728,65.394a6.9,6.9,0,0,0,5.8,3.246h54.7a7.315,7.315,0,0,0,7.293-7.293V10.293A7.315,7.315,0,0,0,80.227,3Zm0,58.347H25.782L8.752,35.82,25.745,10.293H80.227ZM37.962,54.053,51.053,40.962,64.145,54.053l5.142-5.142L56.2,35.82,69.287,22.728l-5.142-5.142L51.053,30.678,37.962,17.587,32.82,22.728,45.912,35.82,32.82,48.912Z" transform="translate(0 -3)" fill="currentColor" />
                                </svg>
                                <!-- clean -->
                                <span>GERİ</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div><!-- fixed-footer -->
        </div>
    </div><!-- main -->
    <script src="/assets/js/jquery-3.5.1.min.js"></script>
    <script src="/assets/js/global.js"></script>
    <script>
        $(function () {


            const open = 'open';
            const $menu = $('.header .menu');
            const $listBtn = $('.bot-list-btn');

            $menu.on('click', function () {
                let $this = $(this);
                if (($this).hasClass(open)) {
                    $this.removeClass(open);
                    $('.side-menu,.side-menu-overlay').removeClass(open);
                } else {
                    $this.addClass(open);
                    $('.side-menu,.side-menu-overlay').addClass(open);
                }
            });
            $('.side-menu-overlay').on('click', function () {
                $menu.removeClass(open);
                $('.side-menu,.side-menu-overlay').removeClass(open);
            });

            $listBtn.on('click', function () {
                let $this = $(this);
                if ($this.hasClass(open)) {
                    $this.removeClass(open);
                    $('.fixed-footer-overlay').removeClass(open);
                    $('.footer-basket').stop().slideUp();
                } else {
                    $this.addClass(open);
                    $('.fixed-footer-overlay').addClass(open);
                    $('.footer-basket').stop().slideDown();
                }
            });
            $('.fixed-footer-overlay').on('click', function () {
                $listBtn.removeClass(open);
                $('.fixed-footer-overlay').removeClass(open);
                $('.footer-basket').stop().slideUp();
            });
            $(document).ready(function () {
                $('.piece-options .minus').click(function () {
                    var $input = $(this).parent().find('input');
                    var count = parseInt($input.val()) - 1;
                    count = count < 1 ? 1 : count;
                    $input.val(count);
                    $input.change();
                    return false;
                });
                $('.piece-options .plus').click(function () {
                    var $input = $(this).parent().find('input');
                    $input.val(parseInt($input.val()) + 1);
                    $input.change();
                    return false;
                });
            });
        });</script>
    <script src="/assets/js/jquery.mask.js"></script>
    <script>
        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.postcode').mask('00000-000');
            $('.money').mask("#.##0,00", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
        });
        function SumExchangeRate() {
            var amount = $("#Amount").val().replace('.', '').replace(',', '.');
            var toamount = $("#ToAmount").val().replace('.', '').replace(',', '.');
            var rate = parseFloat(toamount) / parseFloat(amount) || 0.0000;
            $("#SaleExchangeRate").val(rate.toFixed(4).toString());
        };
        function SumExchangeToAmount() {
            var amount = $("#Amount").val().replace('.', '').replace(',', '.');
            var rate = $("#SaleExchangeRate").val().replace('.', '').replace(',', '.');
            var toamount = parseFloat(amount) * parseFloat(rate) || 0.00;
            $("#ToAmount").val(toamount.toFixed(2).toString());
        };</script>
</body>
</html>