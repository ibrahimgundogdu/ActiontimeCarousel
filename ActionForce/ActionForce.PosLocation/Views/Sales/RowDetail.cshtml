@model SalesControlModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UFE POS</title>
    <meta name="description" content="UFE POS">
    <meta name="keywords" content="UFE POS">
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/scss/global.css">
</head>
<body>
    <div class="main">
        <div class="container">
            <div class="header">
                <div class="menu">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="49.778" viewBox="0 0 64 49.778">
                        <path d="M59.889,40.556v7.111H10.111V40.556H59.889M67,5H3v7.111H67Zm0,14.222H3v7.111H67Zm0,14.222H3V54.778H67Z" transform="translate(-3 -5)" fill="currentColor" />
                    </svg>
                    <!-- menu -->
                </div>
                <div class="logo">
                    <a href="javascript:;">UFE POS</a>
                    <div class="date">@(DateTime.Now.ToLongDateString())</div>
                </div>
                <div class="homepage">
                    <a href="/">
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 50 50">
                            <path d="M4,16.5H16.5V4H4ZM22.75,54h12.5V41.5H22.75ZM4,54H16.5V41.5H4ZM4,35.25H16.5V22.75H4Zm18.75,0h12.5V22.75H22.75ZM41.5,4V16.5H54V4ZM22.75,16.5h12.5V4H22.75ZM41.5,35.25H54V22.75H41.5ZM41.5,54H54V41.5H41.5Z" transform="translate(-4 -4)" fill="currentColor" />
                        </svg>
                        <!-- homepage -->
                    </a>
                </div>
            </div><!-- header -->
            <div class="side-menu-overlay"></div>
            <div class="side-menu">
                @{ Html.RenderPartial("_PartialMenu");}
            </div><!-- side-menu -->
            <div class="content" style="padding-top:80px;">
                <div class="refund-form">
                    <div class="steps">
                        <h1>SİPARİŞ SATIR DETAYI</h1>
                        <div class="step step-1 active">
                            @if (Model.TicketSaleRow != null)
                            {

                                using (Html.BeginForm("EditSaleRow", "Sales", FormMethod.Post, new { role = "form" }))
                                {
                            <div class="form">
                                <input id="OrderRowID" name="OrderRowID" type="hidden" value="@(Model.TicketSaleRow.ID)" />
                                <input id="OrderID" name="OrderID" type="hidden" value="@(Model.TicketSale.ID)" />

                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: left; font-weight: bold; background-color: aliceblue; " value="Sipariş No :" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: right; font-weight: bold; background-color: aliceblue; " value="@(Model.TicketSale.OrderNumber)" readonly>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: left; font-weight: bold; background-color: aliceblue; " value="Ürün Adı :" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: right; font-weight: bold; background-color: aliceblue; " value="@(Model.TicketProduct.ProductName)" readonly>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: left; font-weight: bold; background-color: aliceblue; " value="Birimi :" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: right; font-weight: bold; background-color: aliceblue; " value="@($"{Model.TicketSaleRow.Unit} Dk.")" readonly>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: left; font-weight: bold; background-color: aliceblue; " value="Fiyatı :" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: right; font-weight: bold; background-color: aliceblue; " value="@($"{Model.TicketSaleRow.Price.ToString("N2")} ₺")" readonly>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: left; font-weight: bold; background-color: aliceblue; " value="Toplam :" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: right; font-weight: bold; background-color: aliceblue; " value="@($"{Model.TicketSaleRow.Total?.ToString("N2")} ₺")" readonly>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: left; font-weight: bold; background-color: aliceblue; " value="Durumu :" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: right; font-weight: bold; background-color: aliceblue; " value="@($"{Model.PosStatusName}")" readonly>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group" style="margin-bottom:10px;">
                                    <select id="PriceID" name="PriceID" class="form-control">
                                        <option value="">Bilet Fiyatı Yükseltme Seçiniz</option>
                                        @foreach (var item in Model.Prices.OrderBy(x => x.Unit).ToList())
                                        {
                                            <option value="@(item.ID)" @(item.ID == Model.TicketSaleRow.PriceID ? "selected" : "")> @($"{item.Unit} Dk. {item.Price1?.ToString("N2")} {item.Currency}") </option>
                                        }
                                    </select>
                                </div>

                                <div class="row">
                                    <div class="col-8">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <select id="ExtraUnit" name="ExtraUnit" class="form-control">
                                                @for (int i = Model.TicketSaleRow.ExtraUnit ?? 0; i <= 60; i++)
                                                {
                                                    <option value="@(i.ToString())" @(i == Model.TicketSaleRow.ExtraUnit ? "selected" : "")> @($"{i.ToString()} Dk.") </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input id="ExtraMultiply" name="ExtraMultiply" type="hidden" value="@(Model.Price.ExtraMultiple)" />
                                            <input type="text" name="ExtraMultiple" class="form-control form-control-plaintext" style="font-weight: bold; background-color: aliceblue;" value="@($" X {Model.Price.ExtraMultiple?.ToString("N2")} {Model.Price.Currency}")" readonly>
                                        </div>
                                    </div>
                                </div>



                                <div class="form-group" style="margin-bottom:10px;">
                                    <input type="text" name="ReceiptDate" class="form-control form-control-plaintext" style="font-weight: bold; background-color: aliceblue;" placeholder="Biletleme Tarihi" value="@(Model.TicketSaleRow.Date != null ? Model.TicketSaleRow.Date.ToString("yyyy-MM-dd") : DateTime.Now.ToString("yyyy-MM-dd"))" readonly>
                                </div>

                                <div class="form-group" style="margin-bottom:10px;">
                                    <input type="time" name="ReceiptTime" class="form-control" placeholder="Biletleme Saati" value="@(Model.TicketSaleRow.Date != null ? Model.TicketSaleRow.Date.ToString(@"HH\:mm\:ss") : DateTime.Now.ToString(@"HH\:mm"))" required>
                                </div>

                                <div class="form-group">
                                    <textarea class="form-control" name="Description" placeholder="Açıklama">@(Model.ExpenseSlip != null ? Model.ExpenseSlip.Description : "")</textarea>
                                </div>

                                <div class="form-group">
                                    <button type="Submit" class="btn btn-primary">GÜNCELLE</button>
                                </div>

                            </div>
                                }
                            }

                            @if (Model.Result != null && !string.IsNullOrEmpty(Model.Result.Message))
                            {
                                <div>
                                    <div class="form-result">
                                        <h2>@(Model.Result.IsSuccess ? "İşleminiz başarıyla tamamlandı." : "İşlem Başarısız")</h2>
                                        <p>@(Model.Result.Message)</p>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div><!-- content -->
            <div class="fixed-footer">
                <div class="container">
                    <div class="footer-up">
                        <div class="clean clean-2">
                            <a href="/sales/Detail/@(Model.TicketSale.ID)">
                                <svg xmlns="http://www.w3.org/2000/svg" width="87.52" height="65.64" viewBox="0 0 87.52 65.64">
                                    <path d="M80.227,3h-54.7a6.864,6.864,0,0,0-5.8,3.209L0,35.82,19.728,65.394a6.9,6.9,0,0,0,5.8,3.246h54.7a7.315,7.315,0,0,0,7.293-7.293V10.293A7.315,7.315,0,0,0,80.227,3Zm0,58.347H25.782L8.752,35.82,25.745,10.293H80.227ZM37.962,54.053,51.053,40.962,64.145,54.053l5.142-5.142L56.2,35.82,69.287,22.728l-5.142-5.142L51.053,30.678,37.962,17.587,32.82,22.728,45.912,35.82,32.82,48.912Z" transform="translate(0 -3)" fill="currentColor" />
                                </svg>
                                <!-- clean -->
                                <span>GERİ</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div><!-- fixed-footer -->
        </div>
    </div><!-- main -->
    <script src="/assets/js/jquery-3.5.1.min.js"></script>
    <script src="/assets/js/global.js"></script>
    <script>
        $(function () {
            const open = 'open';
            const $menu = $('.header .menu');
            const $listBtn = $('.bot-list-btn');

            $menu.on('click', function () {
                let $this = $(this);
                if (($this).hasClass(open)) {
                    $this.removeClass(open);
                    $('.side-menu,.side-menu-overlay').removeClass(open);
                } else {
                    $this.addClass(open);
                    $('.side-menu,.side-menu-overlay').addClass(open);
                }
            });
            $('.side-menu-overlay').on('click', function () {
                $menu.removeClass(open);
                $('.side-menu,.side-menu-overlay').removeClass(open);
            });

            $listBtn.on('click', function () {
                let $this = $(this);
                if ($this.hasClass(open)) {
                    $this.removeClass(open);
                    $('.fixed-footer-overlay').removeClass(open);
                    $('.footer-basket').stop().slideUp();
                } else {
                    $this.addClass(open);
                    $('.fixed-footer-overlay').addClass(open);
                    $('.footer-basket').stop().slideDown();
                }
            });
            $('.fixed-footer-overlay').on('click', function () {
                $listBtn.removeClass(open);
                $('.fixed-footer-overlay').removeClass(open);
                $('.footer-basket').stop().slideUp();
            });


        });

    </script>
    <script src="/assets/js/jquery.mask.js"></script>
    <script>
        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.postcode').mask('00000-000');
            $('.money').mask("#.##0,00", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
        });
        function SumExchangeRate() {
            var amount = $("#Amount").val().replace('.', '').replace(',', '.');
            var toamount = $("#ToAmount").val().replace('.', '').replace(',', '.');
            var rate = parseFloat(toamount) / parseFloat(amount) || 0.0000;
            $("#SaleExchangeRate").val(rate.toFixed(4).toString());
        };
        function SumExchangeToAmount() {
            var amount = $("#Amount").val().replace('.', '').replace(',', '.');
            var rate = $("#SaleExchangeRate").val().replace('.', '').replace(',', '.');
            var toamount = parseFloat(amount) * parseFloat(rate) || 0.00;
            $("#ToAmount").val(toamount.toFixed(2).toString());
        };</script>


</body>
</html>
