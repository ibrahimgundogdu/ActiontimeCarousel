                    </svg>
                    <!-- menu -->
                </div>
                <div class="logo">
                    <a href="javascript:;">@(Model.CreditLoad?.SerialNumber)</a>
                    <div class="date" style="font-weight:800;" id="MessageArea">@(DateTime.Now.ToLongDateString())</div>
                </div>
                <div class="homepage">
                    <a href="/Card">
