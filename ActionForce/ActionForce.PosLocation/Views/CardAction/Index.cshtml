                    </a>
                </div>
            </div><!-- header -->
            <div class="side-menu-overlay"></div>
            <div class="side-menu">
                @{ Html.RenderPartial("_PartialMenu");}
            </div><!-- side-menu -->
            <div class="content" style="padding-top:80px;">
                <div class="refund-form">
                    <div class="steps">
                        <h1>KARTA KREDİ YÜKLEME</h1>
                        <div class="step step-1 active">
                            @if (Model.TicketSaleRow != null)
                            {

                                using (Html.BeginForm("LoadCard", "CardAction", FormMethod.Post, new { role = "form" }))
                                {
                            <div class="form">
                                <input id="OrderID" name="OrderID" type="hidden" value="@(Model.TicketSale.ID)" />

                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: left; font-weight: bold; background-color: aliceblue; " value="Sipariş No :" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: right; font-weight: bold; background-color: aliceblue; " value="@(Model.TicketSale.OrderNumber)" readonly>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: left; font-weight: bold; background-color: aliceblue; " value="Kart Okuyucu :" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: right; font-weight: bold; background-color: aliceblue; " value="@(Model.CreditLoad?.SerialNumber)" readonly>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: left; font-weight: bold; background-color: aliceblue; " value="Kart Türü :" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: right; font-weight: bold; background-color: aliceblue; " value="@(Model.CreditLoad.CardTypeID == 0 ? "Müşteri": Model.CreditLoad.CardTypeID == 1 ? "Kasa": "Diğer")" readonly>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: left; font-weight: bold; background-color: aliceblue; " value="Kart No :" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: right; font-weight: bold; background-color: aliceblue; " value="@(Model.CreditLoad?.CardNumber)" readonly>
                                        </div>
                                    </div>
                                </div>



                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: left; font-weight: bold; background-color: aliceblue; " value="Karttaki Kredi" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: right; font-weight: bold; background-color: aliceblue; " value="@(Model.CardBalance)" readonly>
                                        </div>
                                    </div>
                                </div>



                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: left; font-weight: bold; background-color: aliceblue; " value="Tahsil Edilen :" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: right; font-weight: bold; background-color: aliceblue; " value="@($"{Model.TicketSalePosPayments.Sum(x=> x.PaymentAmount ?? 0).ToString("N2")} ₺")" readonly>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: left; font-weight: bold; background-color: aliceblue; " value="Yüklenecek Kredi :" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group" style="margin-bottom:10px;">
                                            <input type="text" class="form-control form-control-plaintext" style="text-align: right; font-weight: bold; background-color: aliceblue; " value="@($"{Model.TotalCredit.ToString("N0")}")" readonly>
                                        </div>
                                    </div>
                                </div>


                                @if (!string.IsNullOrEmpty(Model.CardNumber) && Model.CardReader != null && Model.CreditLoad != null)
                                {
                                    if (Model.CreditLoad.IsSuccess == true)
                                    {
                                        <div class="form-group">
                                            <a href="javascript:;" class="btn btn-warning btn-block">KART YÜKLEMESİ TAMAMLANMIŞ</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-group">
                                            <a href="javascript:;" onclick="LoadCredit('@(Model.CreditLoad?.UID)')" class="btn btn-primary btn-block">KART YÜKLE</a>
                                        </div>
                                    }

                                }
                                else
                                {
                                    <div class="form-group">
                                        <a href="javascript:;" class="btn btn-danger btn-block">@(!string.IsNullOrEmpty(Model.CardNumber) && Model.CardReader == null ? "KART OKUYUCU TANIMSIZ" : !string.IsNullOrEmpty(Model.CardNumber) && Model.CreditLoad == null ? "OKUMA BAŞARISIZ" : !string.IsNullOrEmpty(Model.CardNumber) && Model.CreditLoad != null && Model.CreditLoad.IsSuccess == true ? "KART YÜKLEMESİ TAMAMLANMIŞ" : "KART OKUTUNUZ") </a>
                                    </div>
                                }

                            </div>
                                }

                            }



                        </div>
                    </div>
                </div>
            </div><!-- content -->
            <div class="fixed-footer">
                <div class="container">
                    <div class="footer-up">
                        <div class="clean clean-2">
                            <a href="/sales/Detail/@(Model.TicketSale.ID)">
                                <svg xmlns="http://www.w3.org/2000/svg" width="87.52" height="65.64" viewBox="0 0 87.52 65.64">
                                    <path d="M80.227,3h-54.7a6.864,6.864,0,0,0-5.8,3.209L0,35.82,19.728,65.394a6.9,6.9,0,0,0,5.8,3.246h54.7a7.315,7.315,0,0,0,7.293-7.293V10.293A7.315,7.315,0,0,0,80.227,3Zm0,58.347H25.782L8.752,35.82,25.745,10.293H80.227ZM37.962,54.053,51.053,40.962,64.145,54.053l5.142-5.142L56.2,35.82,69.287,22.728l-5.142-5.142L51.053,30.678,37.962,17.587,32.82,22.728,45.912,35.82,32.82,48.912Z" transform="translate(0 -3)" fill="currentColor" />
                                </svg>
                                <!-- clean -->
                                <span>GERİ</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div><!-- fixed-footer -->
        </div>
    </div><!-- main -->
    <script src="/assets/js/jquery-3.5.1.min.js"></script>
    <script src="/assets/js/global.js"></script>
    <script src="/assets/js/confirm.js"></script>

    <script type="text/javascript">

        function LoadCredit(uid) {

            $.confirm({
                animation: 'zoom',
                closeAnimation: 'scale',
                title: 'Onaylama',
                content: '@(Model.CreditLoad?.CardNumber) nolu karta @(Model.CreditLoad?.TotalCredit ?? 0) kredi kontörü yüklemek istediğinize emin misiniz?',
                buttons: {
                    succes: {
                        text: 'EVET',
                        btnClass: 'btn-yes',
                        action: function () {
                            console.log('@(Model.Comment)');
                            Android.sendComment('@(Model.Comment)');
                            // kontör yükleme methodu çağrılır

                        }
                    },
                    danger: {
                        text: 'HAYIR',
                        btnClass: 'btn-no',
                        action: function () {

                        }
                    },
                }
            });
        };

    </script>

    <script>
        $(function () {
            const open = 'open';
            const $menu = $('.header .menu');
            const $listBtn = $('.bot-list-btn');

            $menu.on('click', function () {
                let $this = $(this);
                if (($this).hasClass(open)) {
                    $this.removeClass(open);
                    $('.side-menu,.side-menu-overlay').removeClass(open);
                } else {
                    $this.addClass(open);
                    $('.side-menu,.side-menu-overlay').addClass(open);
                }
            });
            $('.side-menu-overlay').on('click', function () {
                $menu.removeClass(open);
                $('.side-menu,.side-menu-overlay').removeClass(open);
            });

            $listBtn.on('click', function () {
                let $this = $(this);
                if ($this.hasClass(open)) {
                    $this.removeClass(open);
                    $('.fixed-footer-overlay').removeClass(open);
                    $('.footer-basket').stop().slideUp();
                } else {
                    $this.addClass(open);
                    $('.fixed-footer-overlay').addClass(open);
                    $('.footer-basket').stop().slideDown();
                }
            });
            $('.fixed-footer-overlay').on('click', function () {
                $listBtn.removeClass(open);
                $('.fixed-footer-overlay').removeClass(open);
                $('.footer-basket').stop().slideUp();
            });


        });

    </script>
    <script src="/assets/js/jquery.mask.js"></script>
    <script>
        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.postcode').mask('00000-000');
            $('.money').mask("#.##0,00", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
        });
        function SumExchangeRate() {
            var amount = $("#Amount").val().replace('.', '').replace(',', '.');
            var toamount = $("#ToAmount").val().replace('.', '').replace(',', '.');
            var rate = parseFloat(toamount) / parseFloat(amount) || 0.0000;
            $("#SaleExchangeRate").val(rate.toFixed(4).toString());
        };
        function SumExchangeToAmount() {
            var amount = $("#Amount").val().replace('.', '').replace(',', '.');
            var rate = $("#SaleExchangeRate").val().replace('.', '').replace(',', '.');
            var toamount = parseFloat(amount) * parseFloat(rate) || 0.00;
            $("#ToAmount").val(toamount.toFixed(2).toString());
        };
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.7/signalr.min.js"></script>
    <script type="text/javascript">



        "use strict";

        var connection;

        connection = new signalR.HubConnectionBuilder()
            .withUrl('http://push.ufegrup.com/MyHub')
            .build();



        connection.start().catch(function (err) {
            $("#MessageArea").html("<p>" + err.toString() + "</p>");
            //return console.error(err.toString())
        });

        connection.on('ReceiveCardInfo', (locationid, info) => {
            if (locationid == @(Model.Authentication.CurrentLocation.ID)) {
                GetCardInfo(info);
            }
        })

        connection.on('ReceiveCardLoadResult', (locationid, uid) => {
            if (locationid == @(Model.Authentication.CurrentLocation.ID)) {
                GetCardLoadInfo(uid);
            }
        })

        connection.on('ReceiveComment', (locationid, comment) => {
            if (locationid == @(Model.Authentication.CurrentLocation.ID)) {
                ReceiveComment(comment);
            }
        });


        connection.on('finished', (update) => {
            connection.stop();
        });


        function GetCardInfo(info) {
            var orderid = $('#OrderID').val();
            console.log("Order ID : " + orderid);
            console.log("info : " + info);
            window.location = '/CardAction/Index/' + orderid +"?cardinfo="+info;
        }

        function GetCardLoadInfo(uid) {
            var orderid = $('#OrderID').val();
            console.log("Order ID : " + orderid);
            console.log("uid : " + uid);
            window.location = '/CardAction/LoadResult/' + uid;
        }

         function ReceiveComment(comment) {

            var currentseri = '@(Model.CreditLoad?.SerialNumber)';
            var currentmac = '@(Model.CreditLoad?.MACAddress)';

            const commentArray = comment.split(";");

            if (commentArray[2] == '80') {
                $("#MessageArea").html("Versiyon : " + commentArray[3]);
            }

            if (commentArray[2] == '85') {
                $("#MessageArea").html("Kart Yok");
            }

            if (commentArray[2] == '86') {

                if (commentArray[3] == '0') {

                    $("#MessageArea").html("Reader Tanımı Yok!");
                }

                if (commentArray[3] == '1') {

                    $("#MessageArea").html("Reader Tanımı Yapılmış");
                }

            }

            if (commentArray[2] == '0') {
                $("#MessageArea").html("Yabancı Kart : " + commentArray[3]);
            }

            if (commentArray[2] == '3') {
                $("#MessageArea").html("Formatsız Kart : " + commentArray[3]);
            }

            if (commentArray[2] == '1') {

                if (commentArray[4] == '7') {

                    var credit = commentArray[5];
                    var cardnumber = commentArray[3];

                    var uid = '@(Model.CreditLoad?.UID)';
                    $.ajax({
                        method: "GET",
                        url: "/CardAction/CompleteCardLoad",
                        data: { uid, credit, cardnumber }
                    }).done(function (d) {
                        $("#MessageArea").html(d);
                    });

                    //window.location = '/Card/Index?cardinfo=' + comment;  CardServiceClient
                };

                if (commentArray[4] == '6') {
                    $("#MessageArea").html("Tekrar Deneyiniz");
                };
                if (commentArray[4] == '5') {
                    $("#MessageArea").html("Kart Değişmiş");
                };
                if (commentArray[4] == '4') {
                    $("#MessageArea").html("Karta Yazılamıyor");
                };
                if (commentArray[4] == '3') {
                    $("#MessageArea").html("Kart Okunamıyor");
                };
                if (commentArray[4] == '2') {
                    $("#MessageArea").html("Bozuk Kart");
                };
                if (commentArray[4] == '1') {
                    $("#MessageArea").html("Kart Okundu");
                };


             };

            if (commentArray[2] == '2') {
                $("#MessageArea").html("Personel Kartı Yükleme Olamaz");
             };


        }

    </script>


</body>
