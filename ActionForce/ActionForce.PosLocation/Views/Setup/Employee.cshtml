    <script type="text/javascript">

        function UserLogin(lid,eid) {

            $("#userModalContent").html("<div class='text-center text-warning mr-auto ml-auto'><span class='text-white'> Yükleniyor... </span></div>");

            var data = new FormData();
            data.append('LocationID', lid);
            data.append('EmployeeID', eid);

            console.log(lid);
            console.log(eid);


            $.ajax({
                cache: false,
                contentType: false,
                processData: false,
                method: 'POST',
                type: 'POST',
                url: "/Setup/GetUser",
                data: data
            }).done(function (d) {
                $("#userModalContent").html(d);
            });
        }

