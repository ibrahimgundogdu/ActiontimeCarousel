@model SetupControlModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UFE POS</title>
    <meta name="description" content="UFE POS">
    <meta name="keywords" content="UFE POS">
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/scss/global.css">
</head>
<body>
    <div class="main">
        <div class="container">
            <div class="logo">
                <h1>UFE POS</h1>
            </div><!-- logo -->
            <div class="img-date-area">
                <div class="img">
                    <img src="/assets/img/main-img.png" alt="">
                </div>
                <div class="date">
                    @(DateTime.Now.ToLongDateString())
                </div>
            </div><!-- img-date-area -->
            <div class="location-area">
                <h2>POS CİHAZI SİCİL NO GİRİNİZ...</h2>
                @using (Html.BeginForm("SetLocation", "Setup", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form">
                        <div class="form-group location-group">
                            <input type="text" id="location-input" autocomplete="off" name="SicilNumber" value="@(Model.PosTerminalSerial)" style="text-align:center;" required>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary" style="padding:10px; width:100%; margin-top : 10px;">Kontrol Et</button>
                        </div>

                    </div>
                }
            </div><!-- location-area -->
        </div>
    </div><!-- main -->
    <script src="/assets/js/jquery-3.5.1.min.js"></script>
    <script src="/assets/js/modal.js"></script>
    <script src="/assets/js/global.js"></script>
</body>
</html>

