@model LocationControlModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>UFE Lokasyon Seçimi</title>
    <meta name="description" content="UFE Group LLC Location App" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <!-- build:css /assets/css/site.min.css -->
    <link rel="stylesheet" href="/assets/css/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="/assets/css/theme.css" type="text/css" />
    <link rel="stylesheet" href="/assets/css/style.css" type="text/css" />
</head>
<body class="layout-row">
    <div class="flex">
        <div class="w-xl w-auto-sm mx-auto w-100">
            <div class="p-4 d-flex flex-column h-100">
                <!-- brand -->
                <a href="#" class="navbar-brand align-self-center">
                    <svg width="32" height="32" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
                        <g class="loading-spin" style="transform-origin: 256px 256px">
                            <path d="M200.043 106.067c-40.631 15.171-73.434 46.382-90.717 85.933H256l-55.957-85.933zM412.797 288A160.723 160.723 0 0 0 416 256c0-36.624-12.314-70.367-33.016-97.334L311 288h101.797zM359.973 134.395C332.007 110.461 295.694 96 256 96c-7.966 0-15.794.591-23.448 1.715L310.852 224l49.121-89.605zM99.204 224A160.65 160.65 0 0 0 96 256c0 36.639 12.324 70.394 33.041 97.366L201 224H99.204zM311.959 405.932c40.631-15.171 73.433-46.382 90.715-85.932H256l55.959 85.932zM152.046 377.621C180.009 401.545 216.314 416 256 416c7.969 0 15.799-.592 23.456-1.716L201.164 288l-49.118 89.621z"></path>
                        </g>
                    </svg>
                    <!-- <img src="/assets/img/logo.png" alt="..."> -->
                    <span class="hidden-folded d-inline l-s-n-1x align-self-center">UFE</span>
                </a>
                <!-- / brand -->
            </div>
            <div class="card">
                <div id="content-body">

                    <div class="p-3 p-md-5">
                        <div class="mb-3 text-center">
                            <img src="@($"http://office.ufegrup.com/img/Employee/{Model.Authentication.CurrentEmployee.FotoFile}")" class="w-72 circle">
                        </div>
                        <h5 class="text-center">Sn. @(Model.Authentication.CurrentEmployee.FullName)</h5>
                        <p class="text-center">
                            <small class="text-muted">Lütfen Geçerli Lokasyon Seçiniz</small>
                        </p>
                        <div>

                            <table id="table" class="table table-theme v-middle" data-plugin="bootstrapTable" data-mobile-responsive="true">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th data-sortable="true" data-field="SortBy">#</th>
                                        <th data-sortable="true" data-field="FullName">Lokasyon</th>
                                        <th data-sortable="true" data-field="Type">Tür</th>
                                        <th data-field="country"><span class="d-none d-sm-block">Ülke</span></th>
                                        @*<th data-field="schedule"><span class="d-none d-sm-block">Takvim</span></th>
                                        <th data-field="shift"><span class="d-none d-sm-block">Mesai</span></th>*@
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var location in Model.Locations.OrderBy(x => x.SortBy))
                                    {
                                    <tr class="" data-id="20">
                                        <td style="min-width:30px;text-align:center">
                                            @if (location.Status == LocationStatus.Açık)
                                            {
                                                <b class="badge badge-circle md text-success"></b>
                                            }
                                            else if (location.Status == LocationStatus.Kapalı)
                                            {
                                                <b class="badge badge-circle md text-danger"></b>
                                            }
                                            else if (location.Status == LocationStatus.Beklemede)
                                            {
                                                <b class="badge badge-circle md text-secondary"></b>
                                            }

                                        </td>
                                        <td style="min-width:30px;text-align:center">
                                            @(location.SortBy)
                                        </td>
                                        <td>
                                            <a href="/Location/InitSelectedLocation/@(location.UID?.ToString())" class="item-title text-color">@($"{location.LocationName}" )</a>
                                        </td>
                                        <td>
                                            @(location.TypeName)
                                        </td>

                                        <td>
                                            @(location.CompanyCode)
                                        </td>
                                        @*<td>
                                            @(location.Schedule)
                                        </td>
                                        <td>
                                            @(location.Shift)
                                        </td>*@
                                        <td class="text-right">
                                            <a href="/Location/InitSelectedLocation/@(location.UID?.ToString())" class="text-white btn btn-primary">
                                                <i data-feather="more-vertical"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center text-muted">&copy; Copyright. @DateTime.Now.Year UFE Group LLC</div>
        </div>
    </div>
    <!-- build:js /assets/js/site.min.js -->
    <script src="/libs/jquery/dist/jquery.min.js"></script>
    <script src="/libs/popper.js/dist/umd/popper.min.js"></script>
    <script src="/libs/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/libs/pjax/pjax.min.js"></script>
    <script src="/assets/js/ajax.js"></script>
    <script src="/assets/js/lazyload.config.js"></script>
    <script src="/assets/js/lazyload.js"></script>
    <script src="/assets/js/plugin.js"></script>
    <script src="/libs/scrollreveal/dist/scrollreveal.min.js"></script>
    <script src="/libs/feather-icons/dist/feather.min.js"></script>
    <script src="/assets/js/plugins/feathericon.js"></script>
    <script src="/assets/js/theme.js"></script>
    <script src="/assets/js/utils.js"></script>
</body>
</html>