                            </div>
                            <div class="mb-1">
                                <input type="text" class="form-control" placeholder="Detay" required>
                            </div>*@


                        <div class="mt-2 mb-1">
                            <button class="btn btn-dark btn-block btn-md">Satışı Tamamla</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- / -->
        </div>
    </div>
</div>

<div id="BasketItemDetail" class="modal fade" data-backdrop="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="BasketItemDetailContent">

        </div>
        <!-- /.modal-content -->
    </div>
</div>

@section scripts {

    <script type="text/javascript">
        function OnItemEditSuccess(data) {
            $('#BasketItemDetail').modal('hide');
        };

        function AddBasket(priceid) {
            $.ajax({
                method: "GET",
                url: "/Default/AddBasket",
                data: { id: priceid }
            }).done(function (d) {
                $("#BasketList").html(d);
            });
        };

        function BasketItemDetail(itemid) {
            $.ajax({
                method: "GET",
                url: "/Default/BasketItemDetail",
                data: { id: itemid }
            }).done(function (d) {
                $("#BasketItemDetailContent").html(d);
            });
        };

        function ClearBasket() {
            $.ajax({
                method: "GET",
                url: "/Default/ClearBasket"
            }).done(function (d) {
                $("#BasketList").html(d);
            });
        };

        function CheckImmediately(id) {

            var ischecked = 0;

            if ($("#UseImmediately_" + id).is(':checked')) {
                ischecked = 1;
            }

            $.ajax({
                method: "GET",
                url: "/Default/CheckImmediately",
                data: { id: id, ischecked: ischecked }
            }).done(function (d) {
                $("#BasketList").html(d);
            });
        };


    </script>






    @if (Model.Result != null && !string.IsNullOrEmpty(Model.Result.Message)) //
    {
        <script>
            $(function () {
                notie.setOptions({
                    alertTime: 5
                })
                notie.alert({ type: 2, text: '@(Html.Raw(Model.Result.Message))', position: 'bottom' });
                noticed = true;
            });
        </script>
    }

}
