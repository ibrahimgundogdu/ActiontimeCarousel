@model DefaultControlModel
@{
    ViewBag.Title = "Index";
    ViewBag.PageTitle = $"{DateTime.Now.ToLongDateString()} &nbsp; &nbsp; <span class='font-weight-bold'> {Model.Authentication?.CurrentLocation?.FullName?.ToUpper()} </span>";

}


<div class="d-flex flex fixed-content">

    <div class="d-flex flex" id="content-body">
        <div class="d-flex flex-column flex" data-plugin="user">
            <div class="p-3">
                <div class="toolbar">
                    <a href="javascript:;" class="btn btn-md btn-white" title="Yeni Satış" onclick="return confirm('Yeni Sepet Oluşturmak istediğinize Emin misiniz? ') ? ClearBasket():''">
                        <i class="text-primary font-weight-bold" data-feather="plus"></i>
                    </a>
                    <a href="/Sale" class="btn btn-md btn-white">
                        <i class="text-primary font-weight-bold" data-feather="list"></i>
                    </a>
                    <a href="#" class="btn btn-md btn-white">
                        Sipariş No &nbsp;&nbsp;&nbsp;  <span class="font-weight-bold">@((Model.EmployeeBasketCount.Value + 1).ToString().PadLeft(3, '0'))</span>
                    </a>

                    <button data-toggle="modal" data-target="#content-aside" data-modal class="btn btn-md ml-auto btn-white">
                        <i data-feather="download"></i> &nbsp;&nbsp;&nbsp; Bilet Ekle
                    </button>
                </div>
            </div>
            <div class="scroll-y mx-3 mb-3 card">

                <div class="row no-gutters">
                    <div class="col-md-6 b-r bg-light--lt">
                        <div class="p-2">
                            <div class="row row-xs">
                                @foreach (var price in Model.PriceList)
                                {
                                    <div class="col-sm-6">
                                        <div class="card shadow-sm mb-3">
                                            <div class="media media-21x9 @(price.Style)">

                                                <a href="#" class="media-content" onclick="AddBasket(@(price.ID))">
                                                    <h3 class="text-fade text-white">@(price.Unit) Dk</h3><br />
                                                </a>

                                            </div>
                                            <div class="p-2 text-center">
                                                <h5 class="card-title mb-0">@(price.Price?.ToString("N2")) @(price.Sign)</h5>
                                                <span class="item-amount d-none d-sm-block text-sm">
                                                    @(price.ProductName)
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 bg-light">
                        <div class="p-2">
                            <span class="text-md"> Sepet</span>
                            <span class="mr-2 float-right"><i data-feather="shopping-cart"></i></span>
                            <div class="table-responsive" id="BasketList">
                                @{ Html.RenderPartial("_PartialBasketList", Model);}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="fade aside aside-sm" id="content-aside">
        <div class="modal-dialog d-flex flex-column w-md bg-body" id="user-nav">
            <div class="navbar">
                <span class="text-md mx-2">  &nbsp; </span>
                <div class="dropdown dropright">
                    <button data-toggle="dropdown" class="btn btn-sm btn-icon no-bg no-shadow"></button>

                </div>
            </div>
            <div class="scrollable hover">
                <div class="sidenav p-2">
                    <div class="table-responsive">
                        <table class="table v-middle">

                            <tbody>
                                <tr class="v-middle">
                                    <td class="flex">
                                        <span class="item-amount text-sm ">Tutar</span>
                                    </td>
                                    <td class="bg-light--lt" style="border-left:dotted 1px #d8d6d6 !important;">
                                        <span class="item-amount d-none d-sm-block text-sm float-right">
                                            20,00 ₺
                                        </span>
                                    </td>
                                </tr>
                                <tr class=" v-middle">
                                    <td class="flex">
                                        <span class="item-amount text-sm ">İskonto</span>
                                    </td>
                                    <td class="bg-light--lt" style="border-left:dotted 1px #d8d6d6 !important;">
                                        <span class="item-amount d-none d-sm-block text-sm float-right">
                                            20,00 ₺
                                        </span>
                                    </td>
                                </tr>
                                <tr class=" v-middle">
                                    <td class="flex">
                                        <span class="item-amount text-sm ">Ara Toplam</span>
                                    </td>
                                    <td class="bg-light--lt" style="border-left:dotted 1px #d8d6d6 !important;">
                                        <span class="item-amount d-none d-sm-block text-sm float-right">
                                            20,00 ₺
                                        </span>
                                    </td>
                                </tr>
                                <tr class="v-middle">
                                    <td class="flex">
                                        <span class="item-amount text-sm ">KDV (18)</span>
                                    </td>
                                    <td class="bg-light--lt" style="border-left:dotted 1px #d8d6d6 !important;">
                                        <span class="item-amount d-none d-sm-block text-sm float-right">
                                            20,00 ₺
                                        </span>
                                    </td>
                                </tr>
                                <tr class=" v-middle shadow-sm">
                                    <td class="flex">
                                        <span class="item-amount text-md text-primary ">Bakiye</span>
                                    </td>
                                    <td class="bg-light--lt" style="border-left:dotted 1px #d8d6d6 !important;">
                                        <span class="item-amount d-none d-sm-block text-md font-weight-bold text-dark float-right">
                                            20,00 ₺
                                        </span>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                    <div class="">

