@model DefaultControlModel
@using (Ajax.BeginForm("EditBasketItem", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "BasketList", InsertionMode = InsertionMode.Replace, OnSuccess = "OnItemEditSuccess" }))
{
    @Html.AntiForgeryToken()
    @*<div class="modal-header ">
        <div class="modal-title text-md">@($"{Model.BasketItem.ProductName}")</div>
        <button class="close" data-dismiss="modal">&times;</button>
    </div>*@
    <div class="modal-body">
        <div class="p-4">

            <div class="form-group row mb-1">
                <label class="col-sm-3 pt-1">Bilet Adı</label>
                <label class="col-sm-9 pt-1">@(Model.BasketItem.ProductName)</label>
            </div>
            <div class="form-group row mb-1">
                <label class="col-sm-3 pt-1">Süresi</label>
                <label class="col-sm-9 pt-1">@(Model.BasketItem.Unit) Dk.</label>
            </div>
            <div class="form-group row mb-1">
                <label class="col-sm-3 pt-1">Fiyatı</label>
                <label class="col-sm-9 pt-1">@(Model.BasketItem.Price.ToString("N2")) @(Model.BasketItem.Money)</label>
            </div>
            <div class="form-group row mb-1">
                <label class="col-sm-3 pt-1" for="UseImmediately">Şimdi Kullanılacak</label>
                <div class="col-sm-9">
                    <label class="ui-switch ui-switch-lg dark" style="vertical-align:middle;">
                        <input type="checkbox" value="1" id="UseImmediately" name="UseImmediately" @(Model.BasketItem.UseImmediately == true ? "checked":"")>
                        <i></i>
                    </label>
                </div>
            </div>
                <div class="form-group row">
                    <label class="col-sm-3"></label>
                    <div class="col-sm-8">
                        <input id="ItemID" name="ItemID" type="hidden" value="@(Model.BasketItem.ID)" />
                    </div>
                    <div class="col-sm-1"></div>
                </div>
        </div>
    </div>
    <div class="modal-footer">
        <label class="col-sm-3 pt-1" for="UseImmediately">Şimdi Kullanılacak</label>
        <div class="col-sm-3">
            <label class="ui-switch ui-switch-lg dark" style="vertical-align:middle;">
                <input type="checkbox" value="1" id="UseImmediately" name="UseImmediately" @(Model.BasketItem.UseImmediately == true ? "checked" : "")>
                <i></i>
            </label>
        </div>
        <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Save Changes</button>
    </div>
}