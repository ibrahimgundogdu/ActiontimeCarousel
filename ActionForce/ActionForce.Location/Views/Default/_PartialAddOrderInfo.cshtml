@model DefaultControlModel

@using (Ajax.BeginForm("CreateOrder", "Default", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "OrderSummary", InsertionMode = InsertionMode.Replace }))
{

    <div class="form-group row mb-1 font-weight-bold">
        <label class="col-sm-6 pt-1 text-2x">Tahsil Edilecek Tutar</label>
        <label class="col-sm-6 pt-1 text-2x text-right">@(Model.BasketTotal?.GeneralTotal.ToString("N2")) @(Model.BasketTotal?.Sign)</label>
    </div>
    <div class="form-group row mb-1 bg-light--lt">
        <label for="OrderFullName" class="col-sm-4 pt-1 text-md">Adı Soyadı</label>
        <div class="col-sm-8">
            <input type="text" id="OrderFullName" name="OrderFullName" class="form-control text-md" placeholder="Adı Soyadı" required>
        </div>
    </div>
    <div class="form-group row mb-1 bg-light--lt">
        <label for="OrderDetail" class="col-sm-4 pt-1 text-md">Detay</label>
        <div class="col-sm-8">
            <input type="text" id="OrderDetail" name="OrderDetail" class="form-control text-md" placeholder="Detay" required>
        </div>
    </div>
    <div class="form-group row mb-1 bg-light--lt">
        <label for="OrderMobile" class="col-sm-4 pt-1 text-md">Cep Telefonu</label>
        <div class="col-sm-8">
            <input type="text" id="OrderMobile" name="OrderMobile" class="form-control text-md" placeholder="Cep Telefonu">
        </div>
    </div>
    <div class="form-group row mb-4 bg-light--lt">
        <label for="OrderIdentity" class="col-sm-4 pt-1 text-md">Kimlik Numarası</label>
        <div class="col-sm-8">
            <input type="text" id="OrderIdentity" name="OrderIdentity" class="form-control text-md" placeholder="Kimlik Numarası">
        </div>
    </div>
    <div class="form-group row mb-4 bg-light--lt">
        <label class="col-sm-4 pt-1 text-md">Kaydeden</label>
        <div class="col-sm-8 p-3">
            @(Model.Authentication.CurrentEmployee.FullName)
        </div>
    </div>
    <div class="form-group row mb-1 bg-light--lt">
        <label class="col-sm-4 pt-1 text-md"></label>
        <div class="col-sm-8">
            <button type="submit" class="btn btn-primary btn-md btn-block mb-4">Satışı Tamamla</button>
        </div>
    </div>
}
