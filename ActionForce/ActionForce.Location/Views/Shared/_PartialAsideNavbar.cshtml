            </a>
        </div>
        <div class="col-4 m-0 p-0 text-center font-weight-bold v-middle">
            <p class="text-info">@(Model.Schedule != null ? Html.Raw(Model.Schedule.DateEnd?.ToString("HH\\:mm")) : Html.Raw("&nbsp;"))</p>
            <p class="text-success">@(Model.Shift != null ? Html.Raw(Model.Shift.DateEnd?.ToString("HH\\:mm")) : Html.Raw("&nbsp;"))</p>
        </div>


