@model CashControlModel
@{
    ViewBag.Title = "Kasa Maaş/Avans Ödemesi";
}

<div class="flex fixed-content">

    <div class="flex" id="content-body">
        <div class="d-flex flex-column flex" data-plugin="user">
            <div class="scroll-y mx-2 mb-2">
                <div class="card">
                    <div class="card-header pl-3 pr-2">
                        <div class="d-flex">
                            <strong>Kasa Avans Ödeme Bilgisi</strong>
                            <span class="flex"></span>
                            <div>
                                <a href="/Cash/SalaryPay" class="font-weight-bold">
                                    <i data-feather="grid"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="card-body m-0 p-2">
                        @using (Html.BeginForm("UpdateCashSalaryPay", "Cash", FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group row mb-1">
                                <label class="col-4 col-form-label">Numarası</label>
                                <div class="col-8">
                                    <label class="form-control font-weight-bold mb-0 bg-body"> @(Model.SalaryPayment.DocumentNumber)</label>
                                    <input id="Hidden1" name="UID" type="hidden" value="@(Model.SalaryPayment.UID)" />
                                </div>
                            </div>
                            <div class="form-group row mb-1">
                                <label class="col-4 col-form-label">Tarihi</label>
                                <div class="col-8">
                                    <label class="form-control font-weight-bold mb-0 bg-body"> @(Model.SalaryPayment.Date?.ToString("yyyy-MM-dd"))</label>
                                    <input id="DocumentDate" name="DocumentDate" type="hidden" value="@(Model.SalaryPayment.Date?.ToString("yyyy-MM-dd"))">
                                </div>
                            </div>

                            <div class="form-group row mb-1">
                                <label class="col-4 col-form-label">Çalışan</label>
                                <div class="col-8">
                                    <select class="custom-select" name="EmployeeID">
                                        @foreach (var item in Model.Employees)
                                        {
                                            <option value="@(item.EmployeeID)" @(item.EmployeeID == Model.SalaryPayment.ToEmployeeID ? "selected":"")>@(item.FullName)</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row mb-1">
                                <label class="col-4 col-form-label">Tutar</label>
                                <div class="col-5 pr-1">
                                    <input id="Amount" name="Amount" type="text" class="form-control font-weight-bold text-right money" value="@(Model.SalaryPayment?.Amount?.ToString("N2"))" required>
                                </div>
                                <div class="col-3 pl-1">
                                    <select class="custom-select" name="Currency">
                                        @foreach (var item in Model.Currencies)
                                        {
                                            <option value="@(item.Code)" @(item.Code == Model.SalaryPayment.Currency ? "selected" : "")>@(item.Sign)</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-4 col-form-label">Açıklama</label>
                                <div class="col-8">
                                    <textarea id="event-desc" name="Description" class="form-control" rows="3">@(Model.SalaryPayment.Description)</textarea>
                                </div>
                            </div>

                            <div class="form-group row mb-1">
                                <label class="col-4 col-form-label">Aktif ?</label>
                                <div class="col-8">
                                    <label class="form-check-label font-weight-bold pl-4 pt-1">
                                        <input class="form-check-input" type="checkbox" name="IsActive" value="1" @(Model.SalaryPayment.IsActive == true ? "checked" : "")> Aktif
                                    </label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-12">
                                    @if (Model.IsUpdatible)
                                    {
                                        <button type="submit" id="btn-save" class="btn btn-block bg-primary text-white btn-rounded">Save</button>
                                    }
                                    else
                                    {
                                        <button type="button" id="btn-save" class="btn btn-block bg-secondary text-white btn-rounded">Readonly</button>
                                    }
                                </div>
                            </div>
                            <div class="form-group row mb-1">
                                <div class="col-12 p-0 text-center">
                                    <small class="text-muted"> @($"{Model.EmployeeRecorded} - {Model.SalaryPayment.RecordDate}")</small>
                                </div>
                            </div>
                            <div class="form-group row mb-1">
                                <div class="col-12 p-0 text-center">
                                    <small class="text-muted"> @($"{Model.EmployeeUpdated} - {Model.SalaryPayment.UpdateDate}")</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



@section scripts {

    @if (Model.Result != null && !string.IsNullOrEmpty(Model.Result.Message)) //
    {
        <script>
                $(function () {
                    notie.setOptions({
                        alertTime: 5
                    })
                    notie.alert({ type: 2, text: '@(Html.Raw(Model.Result.Message))', position: 'bottom' });
                    noticed = true;
                });
        </script>
    }


    <script type="text/javascript">

        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.postcode').mask('00000-000');
            $('.money').mask("#.##0,00", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
        });
    </script>
}


