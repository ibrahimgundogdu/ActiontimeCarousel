@model CashControlModel
@{
    ViewBag.Title = "Döviz Satış";
}

<div class="flex fixed-content">

    <div class="flex" id="content-body">
        <div class="d-flex flex-column flex" data-plugin="user">

            <div class="scroll-y mx-2 mb-2">
                <div class="card">
                    <div class="card-header pl-3 pr-2">
                        <div class="d-flex">
                            <strong>Kasa Döviz Satış Fişi Bilgisi</strong>
                            <span class="flex"></span>
                            <div>
                                <a href="/Cash/ExchangeSell" class="font-weight-bold">
                                    <i data-feather="grid"></i>
                                </a>
                            </div>
                        </div>
                        
                    </div>

                    <div class="card-body m-0 p-2">
                        <div class="col-12 p-1 text-right text-xs">
                            $: @(Model.Exchange.USDA?.ToString("N4")) &nbsp; &nbsp; € : @(Model.Exchange.EURA?.ToString("N4"))
                        </div>
                        @using (Html.BeginForm("UpdateCashExchangeSell", "Cash", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group row mb-1">
                                <label class="col-4 col-form-label">Numarası</label>
                                <div class="col-8">
                                    <label class="form-control font-weight-bold mb-0 bg-body"> @(Model.CashSaleExchange.DocumentNumber)</label>
                                    <input id="Hidden1" name="UID" type="hidden" value="@(Model.CashSaleExchange.UID)" />
                                </div>
                            </div>

                            <div class="form-group row mb-1">
                                <label class="col-4 col-form-label">Tarihi</label>
                                <div class="col-8">
                                    <label class="form-control font-weight-bold mb-0 bg-body"> @(Model.CashSaleExchange.Date?.ToString("yyyy-MM-dd"))</label>
                                    <input id="DocumentDate" name="DocumentDate" type="hidden" value="@(Model.CashSaleExchange.Date?.ToString("yyyy-MM-dd"))">
                                </div>
                            </div>


                            <div class="form-group row mb-1">
                                <label class="col-4 col-form-label pr-0">Satılan Döviz</label>
                                <div class="col-5 pr-1">
                                    <input id="Amount" name="Amount" type="text" class="form-control font-weight-bold text-right money" value="@(Model.CashSaleExchange.Amount?.ToString("N2"))" required>
                                </div>
                                <div class="col-3 pl-1">
                                    <select class="custom-select" name="Currency">
                                        @foreach (var item in Model.Currencies.Where(x => x.Code != Model.Authentication.CurrentOurCompany.Currency).ToList())
                                        {
                                            <option value="@(item.Code)" @(item.Code == Model.CashSaleExchange.Currency ? "selected" : "")>@(item.Sign)</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row mb-1">
                                <label class="col-4 col-form-label pr-0">Tutarı</label>
                                <div class="col-5 pr-1">
                                    <input id="ToAmount" name="ToAmount" type="text" class="form-control font-weight-bold text-right money" onkeyup="SumExchangeRate()" value="@(Model.CashSaleExchange.ToAmount?.ToString("N2"))" required>
                                </div>
                                <div class="col-3 pl-1">
                                    <select class="custom-select" name="ToCurrency" required>
                                        @foreach (var item in Model.Currencies)
                                        {
                                            <option value="@(item.Code)" @(item.Code == Model.CashSaleExchange.ToCurrency ? "selected" : "")>@(item.Sign)</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row mb-1">
                                <label class="col-4 col-form-label">Satış Kuru</label>
                                <div class="col-5 pr-1">
                                    <input id="SaleExchangeRate" type="text" name="SaleExchangeRate" class="form-control font-weight-bold text-right money4" onkeyup="SumExchangeToAmount()" value="@(Model.CashSaleExchange.SaleExchangeRate?.ToString("N4"))" required />
                                </div>
                                <div class="col-3">

                                </div>
                            </div>



                            <div class="form-group row mb-1">
                                <label class="col-4 col-form-label">Fiş No</label>
                                <div class="col-8">
                                    <input id="ReceiptNumber" type="text" name="ReceiptNumber" class="form-control font-weight-bold" value="@(Model.CashSaleExchange.SlipNumber)" required />
                                </div>
                            </div>

                            <div class="form-group row mb-1">
                                <label class="col-4 col-form-label">Fiş Tarihi</label>
                                <div class="col-8">
                                    <input id="ReceiptDate" name="ReceiptDate" type="date" class="form-control font-weight-bold" placeholder="Date" value="@(Model.CashSaleExchange.SlipDate?.ToString("yyyy-MM-dd"))" required>
                                </div>
                            </div>

                            <div class="form-group row mb-1">
                                <label class="col-4 col-form-label">Fiş Saati</label>
                                <div class="col-8">
                                    <input id="ReceiptTime" name="ReceiptTime" type="time" class="form-control font-weight-bold" step="1" placeholder="Time" value="@(Model.CashSaleExchange.SlipDate?.ToString("HH\\:mm\\:ss"))" required>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-4 col-form-label">Açıklama</label>
                                <div class="col-8">
                                    <textarea id="event-desc" name="Description" class="form-control" rows="2">@(Model.CashSaleExchange.Description)</textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-12">
                                    @if (!Request.IsLocal)
                                    {
                                        <img src="@($"http://action.ufegrup.com/Document/Exchange/{Model.CashExpense.SlipDocument}")" alt="@(Model.CashSaleExchange.SlipDocument)" style="width:100%" />
                                    }
                                    else
                                    {
                                        <img src="@($"/Documents/{Model.CashSaleExchange.SlipDocument}")" alt="@(Model.CashSaleExchange.SlipDocument)" style="width:100%" />
                                    }
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-12">
                                    <input id="ReceiptFile" name="ReceiptFile" class="form-control" type="file" style="width:100%;" />
                                </div>
                            </div>

                            <div class="form-group row mb-1">
                                <label class="col-4 col-form-label">Aktif ?</label>
                                <div class="col-8">
                                    <label class="form-check-label font-weight-bold pl-4 pt-1">
                                        <input class="form-check-input" type="checkbox" name="IsActive" value="1" @(Model.CashSaleExchange.IsActive == true ? "checked" : "")> Aktif
                                    </label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-12">
                                    @if (Model.IsUpdatible)
                                    {
                                        <button type="submit" id="btn-save" class="btn btn-block bg-primary text-white btn-rounded">Save</button>
                                    }
                                    else
                                    {
                                        <button type="button" id="btn-save" class="btn btn-block bg-secondary text-white btn-rounded">Readonly</button>
                                    }
                                </div>
                            </div>



                            <div class="form-group row mb-1">
                                <div class="col-12 p-0 text-center">
                                    <small class="text-muted"> @($"{Model.EmployeeRecorded} - {Model.CashSaleExchange.RecordDate}")</small>
                                </div>
                            </div>
                            <div class="form-group row mb-1">
                                <div class="col-12 p-0 text-center">
                                    <small class="text-muted"> @($"{Model.EmployeeUpdated} - {Model.CashSaleExchange.UpdateDate}")</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



@section scripts {

    @if (Model.Result != null && !string.IsNullOrEmpty(Model.Result.Message)) //
    {
        <script>
                $(function () {
                    notie.setOptions({
                        alertTime: 5
                    })
                    notie.alert({ type: 2, text: '@(Html.Raw(Model.Result.Message))', position: 'bottom' });
                    noticed = true;
                });
        </script>
    }


    <script type="text/javascript">

        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.postcode').mask('00000-000');
            $('.money').mask("#.##0,00", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
        });

        function SumExchangeRate() {

            var amount = $("#Amount").val().replace('.', '').replace(',', '.');
            var toamount = $("#ToAmount").val().replace('.', '').replace(',', '.');

            var rate = parseFloat(toamount) / parseFloat(amount) || 0.0000;

            $("#SaleExchangeRate").val(rate.toFixed(4).toString());
        };

        function SumExchangeToAmount() {

            var amount = $("#Amount").val().replace('.', '').replace(',', '.');
            var rate = $("#SaleExchangeRate").val().replace('.', '').replace(',', '.');

            var toamount = parseFloat(amount) * parseFloat(rate) || 0.00;

            $("#ToAmount").val(toamount.toFixed(2).toString());
        };

    </script>
}


