@model CashControlModel
@{
    ViewBag.Title = "Kasa Ödemesi";
}

<div class="flex fixed-content">

    <div class="flex" id="content-body">
        <div class="d-flex flex-column flex" data-plugin="user">

            <div class="scroll-y mx-2 mb-2">
                <div class="card">
                    <div class="card-header pl-3 pr-2">
                        <div class="d-flex">
                            <strong>Kasa Nakit Ödemeleri</strong>
                            <span class="flex"></span>
                            <div>
                                <a href="/Cash/Payment" class="font-weight-bold">
                                    <i data-feather="grid"></i>
                                </a>
                                <a href="javascript:;" class="font-weight-bold pl-2" title="Add Cash Payment" data-toggle="modal" data-target="#modalcashpayment">
                                    <i class="text-success" data-feather="plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>


                    <div class="card-body m-0 p-0">
                        <div class="table-responsive">
                            <table class="table table-theme table-hover table-row v-middle m-0 p-0" style="border-spacing: 0 1px !important;">
                                <thead>
                                    <tr class="table-light text-sm font-weight-bold">
                                        <td class="p-1">No</td>
                                        <td class="text-center p-1">Tarih</td>
                                        <td class="text-center p-1">Tutar</td>
                                        <td class="p-1"></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CashPayments)
                                    {
                                        <tr class="v-middle shadow-sm">
                                            <td class="pl-1"><a href="/Cash/PaymentDetail/@(item.UID)" class="@(item.IsActive == false ? "text-danger":"")">@(item.DocumentNumber)</a></td>
                                            <td class="">@(item.Date?.ToShortDateString())</td>
                                            <td class="text-right  @(item.IsActive == false ? "text-muted":"text-dark") font-weight-bold pr-0"><b>@(item.Amount?.ToString("N2"))</b></td>
                                            <td class="pl-1"> @(item.Currency == "TRL" ? "₺" : item.Currency == "USD" ? "$":"€")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td class="p-1" colspan="2"></td>
                                        <td class="p-1 text-right text-dark font-weight-bold">@(Model.CashPayments.Where(x=> x.Currency == "TRL" && x.IsActive == true).Sum(x=> x.Amount)?.ToString("N2"))</td>
                                        <td class="p-1">₺</td>
                                    </tr>
                                    <tr>
                                        <td class="p-1" colspan="2"></td>
                                        <td class="p-1 text-right text-dark font-weight-bold">@(Model.CashPayments.Where(x=> x.Currency == "USD" && x.IsActive == true).Sum(x=> x.Amount)?.ToString("N2"))</td>
                                        <td class="p-1">$</td>
                                    </tr>
                                    <tr>
                                        <td class="p-1" colspan="2"></td>
                                        <td class="p-1 text-right text-dark font-weight-bold">@(Model.CashPayments.Where(x=> x.Currency == "EUR" && x.IsActive == true).Sum(x=> x.Amount)?.ToString("N2"))</td>
                                        <td class="p-1">€</td>
                                    </tr>
                                </tfoot>

                            </table>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<div id="modalcashpayment" class="modal fade" data-backdrop="true" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><div class="modal-title font-weight-500 text-dark">Cash Payment</div><button class="close" data-dismiss="modal">×</button></div>
            <div class="modal-body mt-0 mb-0 pb-4 pt-4">
                @using (Html.BeginForm("AddCashPayment", "Cash", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group row mb-1">
                        <label class="col-4 col-form-label">Tutar</label>
                        <div class="col-5 pr-1">
                            <input id="Amount" name="Amount" type="text" class="form-control font-weight-bold text-md text-right money" placeholder="0,00" required>
                        </div>
                        <div class="col-3 pl-1">
                            <select class="custom-select text-md" name="Currency">
                                @foreach (var item in Model.Currencies)
                                {
                                    <option value="@(item.Code)" @(item.Code == Model.Location.Currency ? "selected" : "")>@(item.Sign)</option>
                                }
                            </select>
                        </div>
                    </div>



                    <div class="form-group row">
                        <label class="col-4 col-form-label">Açıklama</label>
                        <div class="col-8">
                            <textarea id="event-desc" name="Description" class="form-control" rows="2"></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-4 col-form-label"></label>
                        <div class="col-8">
                            <button type="submit" id="btn-save" class="btn btn-block bg-primary text-white btn-rounded">Kaydet</button>
                        </div>
                    </div>

                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-rounded btn-light" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div>
</div>

@section scripts {
    @if (Model.Result != null && !string.IsNullOrEmpty(Model.Result.Message)) //
    {
        <script>
                $(function () {
                    notie.setOptions({
                        alertTime: 5
                    })
                    notie.alert({ type: 2, text: '@(Html.Raw(Model.Result.Message))', position: 'bottom' });
                    noticed = true;
                });
        </script>
    }


    <script type="text/javascript">

        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.postcode').mask('00000-000');
            $('.money').mask("#.##0,00", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
        });
    </script>
}

