<table class="table table-striped table-hover table-sm tx-13 tx-nowrap mg-b-0">
    <thead class="table-dark">
        <tr class="tx-10 tx-spacing-1 tx-color-03 tx-uppercase">
            <th>#</th>
            <th>Tarih</th>
            <th>Belge No</th>
            <th>Lokasyon</th>
            <th>Banka</th>
            <th>İşlem</th>
            <th>Bu Hesaptan</th>
            <th>Adet</th>
            <th>Tahsilat</th>
            <th>Para Br.</th>
            <th>Kaydeden</th>
            <th>Kayıt Tarihi</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.PosCollections)
        {
            <tr style='@(item.IsActive == false ? "color: red" : "")'>

                <td class="tx-sm-13 bold">@item.ID</td>
                <td class="tx-sm-13">@item.Date</td>
                <td class="tx-sm-13"><a href="@("/Bank/Detail/" + @item.UID)">@item.DocumentNumber</a></td>
                <td class="tx-sm-13">@item.LocationFullName</td>
                <td class="tx-sm-13">@item.BankAccountName</td>
                <td class="tx-sm-13">@item.ActionTypeName</td>
                <td class="tx-sm-13">@item.CustomerFullName</td>
                <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(item.Quantity != null ? item.Quantity?.ToString() : "")</td>
                <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(item.Amount != null ? item.Amount?.ToString("N2") : "")</td>
                <td class="tx-sm-13">@(item.Currency)</td>
                <td class="tx-sm-13">@item.RecorderFullName</td>
                <td class="tx-sm-13 text-right">@item.RecordDate</td>
                @*<td class="tx-sm-13 text-right"><a href="@("/Bank/Detail/" + @item.UID)" class="btn btn-xs btn-primary btn-icon"><i data-feather="edit"></i></a></td>
                    @if (item.IsActive == true)
                    {
                        <td class="tx-sm-13 text-right"><a href="/Bank/Index" class="btn btn-xs btn-danger btn-icon" onclick="if(confirm('@item.Amount tutarlı tahsilatı iptal etmek istediğine emin misin?')) DeletePosCollection(@item.ID)"><i data-feather="trash-2"></i></a></td>
                    }*@

            </tr>
        }

    </tbody>
</table>
