<div id="OffCanvasAddPosRefund" class="off-canvas off-canvas-overlay off-canvas-right wd-400">
    <a href="#" class="close"><i data-feather="x"></i></a>

    <div class="pd-25 ht-100p tx-13">
        @using (Html.BeginForm("AddPosRefund", "Bank", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
