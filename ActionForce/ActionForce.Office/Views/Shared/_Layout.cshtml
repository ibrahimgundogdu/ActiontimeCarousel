    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <script type="text/javascript">

        $('#CurrentCompanyCultureChange').on('change', function (e) {
            e.preventDefault();

            var url = '@(Request.Url.AbsoluteUri)';

            console.log(this.value);
            console.log(url);

            $.ajax({
                method: "GET",
                url: "/Login/ChangeOurCompany",
                data: { id: this.value, url: url}
            }).done(function (d) {
                window.location.href = url;
            });
        });

        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.quantity').mask("#.##0", { reverse: true });
            $('.number').mask("##0", { reverse: true });
            $('.money').mask("#.##0,00", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
        });
    </script>


    @RenderSection("scripts", false)





