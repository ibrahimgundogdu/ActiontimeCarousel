                    <ul>
                        <li @(this.ViewContext.RouteData.Values["controller"].ToString() == "Bank" && this.ViewContext.RouteData.Values["action"].ToString() == "Current" ? "class=active" : "")><a href="/Bank/Current">01 Banka Hesap Ekstresi</a></li>
