@model CashControlModel
<table class="table table-striped table-hover table-sm tx-13 tx-nowrap mg-b-0">
    <thead class="table-dark">
        <tr class="tx-10 tx-spacing-1 tx-color-03 tx-uppercase">
            <th>#</th>
            <th>Tarih</th>
            <th>Belge No</th>
            <th>Lokasyon</th>
            <th>Kasa</th>
            <th>İşlem</th>
            <th>Bu Hesabtan</th>
            <th>Ödeme</th>
            <th>Para Br.</th>
            <th>Kaydeden</th>
            <th>Kayıt Tarihi</th>
            <th>Fiş Nr.</th>
            <th>Döküman</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.CashExpense)
        {
            <tr style='@(item.IsActive == false ? "color: red" : "")'>

                <td class="tx-sm-13 bold">@item.ID</td>
                <td class="tx-sm-13">@(item.Date)</td>
                <td class="tx-sm-13"><a href="@("/Cash/ExpenseDetail/" + @item.UID)">@item.DocumentNumber</a></td>
                <td class="tx-sm-13">@item.LocationFullName</td>
                <td class="tx-sm-13">@item.CashName</td>
                <td class="tx-sm-13">@item.ActionTypeName</td>
                <td class="tx-sm-13">@item.CustomerFullName @item.EmployeeFullName @item.BankAccountName </td>
                <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(item.Amount?.ToString("N2"))</td>
                <td class="tx-sm-13">@(item.Currency)</td>
                <td class="tx-sm-13">@item.RecorderFullName</td>
                <td class="tx-sm-13 text-right">@item.RecordDate</td>
                <td class="tx-sm-13 text-right">@item.SlipNumber</td>
                <td>
                    @if (item.SlipDocument != null)
                    {
                        <a target="_blank" href="@(string.Format("../Document/Expense/{0}",item.SlipDocument))">
                            <img class="img-fluid img-thumbnail thumb" src="@(string.Format("../Document/Expense/{0}",item.SlipDocument))" alt="@item.SlipDocument" width="64">
                        </a>
                    }


                </td>

            </tr>
            <div class="modal fade" id="modal6" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel6" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content tx-14">
                        <div class="modal-header">
                            <h6 class="modal-title" id="exampleModalLabel6">@(item.SlipDocument?.ToString())</h6>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <img src="@(string.Format("../Document/Expense/{0}",item.SlipDocument))" class="img-fluid" height="400">
                        </div>
                    </div>
                </div>
            </div>
        }


    </tbody>
</table>
