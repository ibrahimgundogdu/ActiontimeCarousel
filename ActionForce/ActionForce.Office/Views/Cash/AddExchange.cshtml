
@model CashControlModel
@{
    ViewBag.Title = "Kasa Tahsilat";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Döviz Satışı Ekleme</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body  mg-t-40 mg-lg-t-0">
                <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
                    <div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                                <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Döviz Satışı</li>
                            </ol>
                        </nav>
                        <h4 class="mg-b-0 tx-spacing--1">Yeni Döviz Satışı</h4>
                    </div>
                    <div class="d-none d-md-block">

                        <a href="/Cash/Exchange/" class="btn btn-primary btn-uppercase"><i data-feather="list"></i> &nbsp; Döviz Satışı Listesi</a>
                    </div>
                </div>
                @using (Html.BeginForm("AddCashExchange", "Cash", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="row row-xs">
                        <div class="col-lg-12">
                            <div class="form-group row bg-gray-100">
                                <label for="LocationID" class="col-sm-3 col-form-label">Lokasyon</label>
                                <div class="col-sm-3">
                                    <select class="form-control select2" id="LocationID" name="LocationID" required>
                                        @foreach (var item in Model.LocationList)
                                        {
                                            <option value="@item.LocationID">@($"{item.SortBy}  {item.LocationName} {item.State} {item.Description}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3"> </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row bg-gray-100">
                                <label for="Email" class="col-sm-3 col-form-label">Para Birimi</label>
                                <div class="col-sm-3">
                                    <select class="form-control" id="Currency" name="Currency" required>
                                        @foreach (var item in Model.CurrencyList)
                                        {
                                            <option value="@item.Code">@($"{item.Code} ({item.Sign})")</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3"> </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row mg-b-5 bg-gray-100">
                                <label for="Tc" class="col-sm-3 col-form-label">Döviz Tutarı</label>
                                <div class="col-sm-3">
                                    <input id="Amount" name="Amount" autocomplete="off" type="text" class="form-control money" placeholder="Tutar" required>
                                </div>
                                <div class="col-sm-3"> </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row mg-b-5 bg-gray-100">
                                <label for="Tc" class="col-sm-3 col-form-label">Döviz Değeri</label>
                                <div class="col-sm-3">
                                    <input id="Exchange" name="Exchange" type="text" class="form-control money4" autocomplete="off" placeholder="Kur" required>
                                </div>
                                <div class="col-sm-3"> </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Tc" class="col-sm-3 col-form-label">Referans ID</label>
                                <div class="col-sm-3">
                                    <input id="ReferanceID" name="ReferanceID" autocomplete="off" type="text" class="form-control number" placeholder="Referans ID">
                                </div>
                                <div class="col-sm-3"> </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row bg-gray-50">
                                <label for="Mobile" class="col-sm-3 col-form-label">Tarih</label>
                                <div class="col-sm-3">
                                    <input id="DocumentDate" name="DocumentDate" type="text" class="form-control shiftdate" placeholder="Tarih" value="@(DateTime.Now.ToString("yyyy-MM-dd"))" required>
                                </div>
                                <div class="col-sm-3"> </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Description" class="col-sm-3 col-form-label">Açıklama</label>
                                <div class="col-sm-3">
                                    <textarea id="Description" name="Description" rows="5" cols="20" class="form-control" style="width:100% !important;"></textarea>
                                </div>
                                <div class="col-sm-3"> </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row mg-b-0">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-3">
                                    <input id="ActinTypeID" name="ActinTypeID" type="hidden" value="25" />
                                    <button type="submit" class="btn btn-primary btn-block">Döviz Satışı Ekle</button>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                        </div>
                    </div>
                }



            </div>
        </div>
    </div>
</div>


@section canvasmenu {

}

@section scripts {
    <script>
        $(function () {
            'use strict'
            $('.select2').select2({
                placeholder: 'Çalışan Seçiminiz',
                searchInputPlaceholder: 'Search options'
            });
        });
        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.fulldate').mask('0000-00-00 00:00:00');
            $('.money').mask("#.##0,00", { reverse: true });
            $('.quantity').mask("##0", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
            $('.phone').mask('(000) 000 00 00');

        });
        
    </script>

    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}




