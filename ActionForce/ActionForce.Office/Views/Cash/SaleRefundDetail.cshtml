@model CashControlModel
@{
    ViewBag.Title = "Kasa Tahsilat";
}

@section style{
    <style type="text/css">
        .form-group {
            margin-bottom: 8px;
        }
    </style>
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Bilet İade Detay</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body  mg-t-40 mg-lg-t-0">
                <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
                    <div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                                <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Kasa Nakit İşlemleri</li>
                            </ol>
                        </nav>
                        <h4 class="mg-b-0 tx-spacing--1">Bilet İade Detayı</h4>
                    </div>
                    <div class="d-none d-md-block">
                        @{Html.RenderPartial("_PartialAddCashMenu");}
                    </div>
                </div>


                @using (Html.BeginForm("EditTicketSaleReturn", "Cash", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="row row-xs">
                        <div class="col-lg-6">
                            <div class="card mg-b-20 mg-lg-b-25">
                                <div class="card-header pd-y-15 pd-x-20 d-flex align-items-center justify-content-between">
                                    <h6 class="tx-uppercase tx-semibold mg-b-0">@(Html.Raw($"{Model.SalesRefundDetail.ActionName}"))</h6>
                                    <input name="ActinTypeID" type="hidden" value="28" />
                                    <input name="UID" type="hidden" value="@(Model.SalesRefundDetail.UID)" />
                                    <nav class="nav">
                                        <a href="" class="link-03 mg-l-10"><span class="d-none d-sm-inline">@(Model.SalesRefundDetail.Date.Value.ToLongDateString())</span></a>
                                    </nav>
                                </div><!-- card-header -->
                                <div class="card-body pd-20">
                                    <form>
                                        <div class="form-group row">
                                            <label for="inputEmail3" class="col-sm-3 col-form-label">Kasa Tipi</label>
                                            <div class="col-sm-9">
                                                <span class="text-danger">@Model.SalesRefundDetail.ActionTypeName</span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail3" class="col-sm-3 col-form-label">Kasa</label>
                                            <div class="col-sm-9">
                                                <span class="text-danger">@Model.SalesRefundDetail.CashName</span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail3" class="col-sm-3 col-form-label">Döküman Nr</label>
                                            <div class="col-sm-9">
                                                <span class="text-danger">@Model.SalesRefundDetail.DocumentNumber</span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail3" class="col-sm-3 col-form-label">Tarih</label>
                                            <div class="col-sm-9">
                                                <input id="UpdateDocumentDate" name="DocumentDate" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Tarih" value="@(Model.SalesRefundDetail.Date.Value.ToString("yyyy-MM-dd"))" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputPassword3" class="col-sm-3 col-form-label">Kimden</label>
                                            <div class="col-sm-9">
                                                <select class="form-control select2" name="FromID" required>

                                                    @foreach (var item in Model.FromList)
                                                    {
                                                        <option value="@item.Code" @(Model.SalesRefundDetail.ToCustomerID != null ? Model.SalesRefundDetail.ToCustomerID == item.ID ? "selected" : "" : "")>@(Html.Raw($"{item.Name}"))</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputPassword3" class="col-sm-3 col-form-label">Lokasyon</label>
                                            <div class="col-sm-9">
                                                <select class="form-control select2" name="LocationID" required>
                                                    @foreach (var item in Model.LocationList)
                                                    {
                                                        <option value="@item.LocationID" @(Model.SalesRefundDetail.LocationID == item.LocationID ? "selected" : "")>@($"{item.SortBy}  {item.LocationName} {item.State} {item.Description}" )</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputPassword3" class="col-sm-3 col-form-label">Adet</label>
                                            <div class="col-sm-9">
                                                <input name="Quantity" type="text" class="form-control quantity" autocomplete="off" value="@(Model.SalesRefundDetail.Quantity?.ToString())" placeholder="Adet" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputPassword3" class="col-sm-3 col-form-label">Tutar</label>
                                            <div class="col-sm-9">
                                                <input name="Amount" type="text" class="form-control money" autocomplete="off" value="@(Model.SalesRefundDetail.Amount?.ToString("N2"))" placeholder="Tutar" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputPassword3" class="col-sm-3 col-form-label">Para Birimi</label>
                                            <div class="col-sm-9">
                                                <select class="form-control" name="Currency" required>
                                                    @foreach (var item in Model.CurrencyList)
                                                    {
                                                        <option value="@item.Code" @(Model.SalesRefundDetail.Currency == item.Code ? "selected" : "")>@($"{item.Code} ({item.Sign})")</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputPassword3" class="col-sm-3 col-form-label">Ödeme Metodu</label>
                                            <div class="col-sm-9">
                                                <select class="form-control select2" name="PayMethodID" required>
                                                    @foreach (var item in Model.PayMethodList)
                                                    {
                                                        <option value="@item.ID" @(Model.SalesRefundDetail.PayMethodID == item.ID ? "selected" : "")>@($"{item.MethodName}" )</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail3" class="col-sm-3 col-form-label">Döviz Kuru</label>
                                            <div class="col-sm-9">
                                                <input name="ExchangeRate" type="text" class="form-control money4" autocomplete="off" placeholder="Döviz Kuru">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail3" class="col-sm-3 col-form-label">Kur</label>
                                            <div class="col-sm-9">
                                                <input name="Exchange" type="text" class="form-control money4" autocomplete="off" value="@(Model.SalesRefundDetail.ExchangeRate?.ToString("N4"))" readonly>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail3" class="col-sm-3 col-form-label">Döviz Tutarı</label>
                                            <div class="col-sm-3">
                                                <span class="text-danger">@($"{Model.SalesRefundDetail.SystemAmount} {Model.SalesRefundDetail.SystemCurrency}")</span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputPassword3" class="col-sm-3 col-form-label">Açıklama</label>
                                            <div class="col-sm-9">
                                                <textarea name="Description" rows="4" class="form-control" value="@Model.SalesRefundDetail.Description" placeholder="Açıklama"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail3" class="col-sm-3 col-form-label">Referans ID</label>
                                            <div class="col-sm-9">
                                                <input name="ReferenceID" type="text" class="form-control" autocomplete="off" value="@Model.SalesRefundDetail.ReferenceID" placeholder="Referans ID">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-3">Active?</div>
                                            <div class="col-sm-9">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" name="IsActive" value="@Model.SalesRefundDetail.IsActive" checked="@Model.SalesRefundDetail.IsActive" class="custom-control-input">
                                                    <label class="custom-control-label">Aktif mi?</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group row mg-b-0">
                                            <div class="col-sm-3"></div>
                                            <div class="col-sm-9">
                                                @if (Model.SalesRefundDetail.IsActive == true)
                                                {
                                                    <button class="btn btn-primary btn-block">Tahsilat Güncelle</button>
                                                }

                                            </div>
                                        </div>


                                    </form>
                                </div>
                                <div class="card-footer bg-transparent pd-y-10 pd-sm-y-15 pd-x-10 pd-sm-x-20">
                                    <nav class="nav nav-with-icon tx-13">
                                        <a href="" class="nav-link"><i data-feather="save"></i> <strong>İlk Kayıt : </strong></a>
                                        <a href="" class="nav-link"><i data-feather="user-plus"></i> @(Html.Raw($"{Model.SalesRefundDetail.RecorderFullName}"))</a>
                                        <a href="" class="nav-link"><i data-feather="calendar"></i> @(Html.Raw($"{Model.SalesRefundDetail.RecordDate.Value.ToLongDateString()}"))</a>
                                        <a href="" class="nav-link"><span>|</span></a>
                                        <a href="" class="nav-link"><i data-feather="edit"></i> <strong>Güncelleyen : </strong></a>
                                        <a href="" class="nav-link"><i data-feather="user-check"></i> @(Html.Raw($"{Model.SalesRefundDetail.UpdaterFullName}"))</a>
                                        <a href="" class="nav-link"><i data-feather="calendar"></i> @(Model.SalesRefundDetail.UpdateDate != null ? Html.Raw($"{Model.SalesRefundDetail.UpdateDate.Value.ToLongDateString()}") : Html.Raw($""))</a>
                                    </nav>
                                </div><!-- card-footer -->
                            </div><!-- card -->
                        </div>
                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-header pd-b-0 pd-x-20 bd-b-0">
                                    <div class="d-sm-flex align-items-center justify-content-between">
                                        <h6 class="mg-b-0">@(Model.SalesRefundDetail.ActionName)</h6>
                                        <p class="tx-12 tx-color-03 mg-b-0">@(Model.SalesRefundDetail.Date.Value.ToLongDateString())</p>
                                    </div>
                                </div><!-- card-header -->
                                <div class="card-body pd-20">
                                    <ul class="activity tx-13">

                                        @foreach (var item in Model.History)
                                        {
                                            <li class="activity-item">
                                                <div class="activity-icon @(item.ProcessType == "Insert" ? "bg-success-light tx-success": item.ProcessType == "Update" ? "bg-indigo-light tx-indigo" : "bg-pink-light tx-pink")">
                                                    <i data-feather="@(item.ProcessType == "Insert" ? "plus-circle" : item.ProcessType == "Update" ? "edit" : "trash-2")"></i>
                                                </div>

                                                <div class="activity-body">
                                                    <p class="mg-b-2"><strong>@item.ProcessType :</strong> @(item.ErrorMessage != "" ? Html.Raw($"<span class='text-danger'>{item.ErrorMessage}</span>") : Html.Raw($"<span class='text-black-50'>{item.ResultMessage}</span>"))</p>
                                                    @(Html.Raw($"<p class='mg - b - 2'>{item.FieldName} <strong> | </strong> {item.OldValue} <strong> | </strong> {item.NewValue} </p>"))
                                                    <small class="tx-color-03">@(Html.Raw($"{item.RecordDate.Value.ToLongDateString()} {item.RecordDate.Value.ToLongTimeString()} {item.RecordEmployee}"))</small>
                                                </div>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

@section canvasmenu {
    @{Html.RenderPartial("_PartialDocumentForms", Model);}
}

@section scripts {
    <script>

        $(function () {
            'use strict'
            $('.select2').select2({
                placeholder: 'Lokasyon Seçiminiz',
                searchInputPlaceholder: 'Search options'
            });

            $('#UpdateDocumentDate').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });

        });


        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.money').mask("#.##0,00", { reverse: true });
            $('.quantity').mask("##0", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
        });


    </script>
    <script>


        $(function () {
            'use strict'

            $('.off-canvas-menu').on('click', function (e) {
                e.preventDefault();
                var target = $(this).attr('href');
                $(target).addClass('show');
            });


            $('.off-canvas .close').on('click', function (e) {
                e.preventDefault();
                $(this).closest('.off-canvas').removeClass('show');
            })

            $(document).on('click touchstart', function (e) {
                e.stopPropagation();

                if (!$(e.target).closest('.off-canvas-menu').length) {
                    var offCanvas = $(e.target).closest('.off-canvas').length;
                    if (!offCanvas) {
                        $('.off-canvas.show').addClass('show');
                    }
                }
            });


        });
    </script>
    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}

