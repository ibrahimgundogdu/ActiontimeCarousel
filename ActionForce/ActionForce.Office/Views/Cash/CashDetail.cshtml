@model CashControlModel
@{
    ViewBag.Title = "Kasa Tahsilat";
}

@section style{

}

<div class="content-header">
    <div class="content-search">
        <i data-feather="search"></i>
        <input id="SearchKey" type="search" class="form-control" placeholder="Arama..." aria-controls="example2">
    </div>
    <nav class="nav">
        <select class="custom-select bg-light btn-xs" id="CurrentCompany">
            <option value="1" @(Model.Authentication.ActionEmployee.OurCompanyID == 1 ? "selected" : "")>UFE Group USA</option>
            <option value="2" @(Model.Authentication.ActionEmployee.OurCompanyID == 2 ? "selected" : "")>UFE Grup  TUR</option>
        </select>
    </nav>
</div>
<div class="content-body">
    <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                    <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Kasa Nakit İşlemleri</li>
                </ol>
            </nav>
            <h4 class="mg-b-0 tx-spacing--1">Kasa Tahsilatı Detayı</h4>
        </div>
        <div class="d-none d-md-block">
            @{Html.RenderPartial("_PartialAddCashMenu");}
        </div>
    </div>

    <div class="df-example">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Detay</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="history-tab" data-toggle="tab" href="#history" role="tab" aria-controls="history" aria-selected="false">History</a>
            </li>
        </ul>
        @using (Html.BeginForm("EditCashCollection", "Cash", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="tab-content bd bd-gray-300 bd-t-0 pd-20" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="card mg-b-20 mg-lg-b-25">
                        <div class="card-header pd-y-15 pd-x-20 d-flex align-items-center justify-content-between">
                            <h6 class="tx-uppercase tx-semibold mg-b-0">@(Html.Raw($"{Model.CashDetail.ActionName}"))</h6>
                            <nav class="nav">
                                <h6 class="tx-uppercase tx-semibold mg-b-0">@(Html.Raw($"{Model.CashDetail.Date.Value.ToString("yyyy-MM-dd")}"))</h6>
                            </nav>
                        </div><!-- card-header -->
                        <div class="card-body pd-20 pd-lg-25">
                            <div class="table-responsive">
                                <table class="table table-primary table-hover table-striped mg-b-0">
                                    <thead>
                                        <tr>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <div class="form-group">
                                                    <label>Kimden</label>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <select class="form-control" id="FromID" name="FromID" required>
                                                        @foreach (var item in Model.FromList)
                                                        {
                                                            <option value="@item.Code" @(Model.CashDetail.FromBankAccountID != null ? Model.CashDetail.FromBankAccountID ==  item.ID ? "selected" : "" : Model.CashDetail.FromCustomerID != null ? Model.CashDetail.FromCustomerID == item.ID ? "selected" : "" : Model.CashDetail.FromEmployeeID == item.ID ? "selected" : "")>@(Html.Raw($"{item.Name}"))</option>
                                                        }
                                                    </select>
                                                </div>
                                            </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="form-group">
                                                    <label>Lokasyon</label>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <select class="form-control" id="LocationID" name="LocationID" required>
                                                        @foreach (var item in Model.LocationList)
                                                        {
                                                            <option value="@item.LocationID" @(Model.CashDetail.LocationID == item.LocationID ? "selected" : "")>@($"{item.SortBy}  {item.LocationName} {item.State} {item.Description}" )</option>
                                                        }
                                                    </select>
                                                </div>
                                            </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="form-group">
                                                    <label>Tutar</label>
                                                </div>
                                            </td>
                                            <td>
                                                
                                                <div class="form-group">
                                                    <input id="Amount" name="Amount" type="text" class="form-control" value="@Model.CashDetail.Amount" placeholder="Tutar" required>
                                                </div>
                                            </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="form-group">
                                                    <label>Para Birimi</label>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <select class="form-control" id="Currency" name="Currency" required>
                                                        @foreach (var item in Model.CurrencyList)
                                                        {
                                                            <option value="@item.Code" @(Model.CashDetail.Currency == item.Code ? "selected" : "")>@($"{item.Code} ({item.Sign})")</option>
                                                        }
                                                    </select>
                                                </div>
                                            </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="form-group">
                                                    <label>Açıklama</label>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <textarea id="Description" name="Description" rows="4" class="form-control" value="@Model.CashDetail.Description" placeholder="Açıklama"></textarea>
                                                </div>
                                            </td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td>
                                                
                                            </td>
                                            <td>
                                                <button class="btn btn-primary btn-block">Tahsilat Güncelle</button>
                                            </td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent pd-y-10 pd-sm-y-15 pd-x-10 pd-sm-x-20">
                            <nav class="nav nav-with-icon tx-13">
                                <a href="" class="nav-link"><i data-feather="user"></i> @(Html.Raw($"{Model.CashDetail.RecorderFullName}"))</a>
                                <a href="" class="nav-link"><i data-feather="date"></i> @(Html.Raw($"{Model.CashDetail.RecordDate.Value.ToString("yyyy-MM-dd")}"))</a>
                                <a href="" class="nav-link"><i data-feather="user"></i> @(Html.Raw($"{Model.CashDetail.UpdaterFullName}"))</a>
                            </nav>
                        </div><!-- card-footer -->
                    </div><!-- card -->
                </div>
                <div class="tab-pane fade" id="history" role="tabpanel" aria-labelledby="history-tab">
                    <div class="card mg-b-20 mg-lg-b-25">
                        <div class="card-header pd-y-15 pd-x-20 d-flex align-items-center justify-content-between">
                            <h6 class="tx-uppercase tx-semibold mg-b-0">@(Html.Raw($"{Model.CashDetail.ActionName}"))</h6>
                            <nav class="nav">
                                <h6 class="tx-uppercase tx-semibold mg-b-0">@(Html.Raw($"{Model.CashDetail.Date.Value.ToString("yyyy-MM-dd")}"))</h6>
                            </nav>
                        </div><!-- card-header -->
                        <div class="card-body pd-20 pd-lg-25">
                            <div class="table-responsive">
                                <table class="table table-primary table-hover table-striped mg-b-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Tarih</th>
                                            <th>Ekleyen</th>
                                            <th>Mesaj</th>
                                            <th>Hata Mesajı</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model.History)
                                        {
                                        <tr>

                                            <td class="tx-sm-13 bold">@item.ID</td>
                                            <td class="tx-sm-13">@item.RecordDate.Value.ToShortDateString()</td>
                                            <td class="tx-sm-13">@item.RecordEmployee</td>
                                            <td class="tx-sm-13">@item.ResultMessage</td>
                                            <td class="tx-sm-13">@item.ErrorMessage</td>

                                        </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent pd-y-10 pd-sm-y-15 pd-x-10 pd-sm-x-20">
                            <nav class="nav nav-with-icon tx-13">
                                <a href="" class="nav-link"><i data-feather="user"></i> @(Html.Raw($"{Model.CashDetail.RecorderFullName}"))</a>
                                <a href="" class="nav-link"><i data-feather="date"></i> @(Html.Raw($"{Model.CashDetail.RecordDate.Value.ToString("yyyy-MM-dd")}"))</a>
                                <a href="" class="nav-link"><i data-feather="user"></i> @(Html.Raw($"{Model.CashDetail.UpdaterFullName}"))</a>
                            </nav>
                        </div><!-- card-footer -->
                    </div><!-- card -->
                </div>
            </div>

        }
    </div>
</div>


@section canvasmenu {
    @{Html.RenderPartial("_PartialDocumentForms", Model);}
}

@section scripts {
    <script src="/lib/cleave.js/cleave.min.js"></script>

    <script>

        $(function () {
            'use strict'
            $('.select2').select2({
                placeholder: 'Lokasyon Seçiminiz',
                searchInputPlaceholder: 'Search options'
            });

            var dateFormat = 'yy-mm-dd',
                from = $('#dateFrom')
                    .datepicker({
                        defaultDate: '+1w',
                        numberOfMonths: 2,
                        dateFormat: "yy-mm-dd",
                        dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                        monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                        firstDay: 1
                    })
                    .on('change', function () {
                        to.datepicker('option', 'minDate', getDate(this));
                    }),
                to = $('#dateTo').datepicker({
                    defaultDate: '+1w',
                    numberOfMonths: 2,
                    dateFormat: "yy-mm-dd",
                    dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                    monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                    firstDay: 1
                })
                    .on('change', function () {
                        from.datepicker('option', 'maxDate', getDate(this));
                    });

            $('#DocumentDate').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });

            var cleaveC = new Cleave('#DocumentDate', {
                date: true,
                delimiter: '-',
                datePattern: ['Y', 'm', 'd'],

            });
            //var cleave = new Cleave('#Amount', {
            //    numeral: true
            //});
            var cleave2 = new Cleave('#Exchange', {
                numeral: true
            });
            function getDate(element) {
                var date;
                try {
                    date = $.datepicker.parseDate(dateFormat, element.value);
                } catch (error) {
                    date = null;
                }

                return date;

            }

        });





    </script>
    <script>


        $(function () {
            'use strict'

            $('.off-canvas-menu').on('click', function (e) {
                e.preventDefault();
                var target = $(this).attr('href');
                $(target).addClass('show');
            });


            $('.off-canvas .close').on('click', function (e) {
                e.preventDefault();
                $(this).closest('.off-canvas').removeClass('show');
            })

            $(document).on('click touchstart', function (e) {
                e.stopPropagation();

                if (!$(e.target).closest('.off-canvas-menu').length) {
                    var offCanvas = $(e.target).closest('.off-canvas').length;
                    if (!offCanvas) {
                        $('.off-canvas.show').addClass('show');
                    }
                }
            });


        });
    </script>
    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}
