<table class="table table-striped table-hover table-sm tx-13 tx-nowrap mg-b-0">
    <thead class="table-dark">
        <tr class="tx-10 tx-spacing-1 tx-color-03 tx-uppercase">
            <th>#</th>
            <th>Tarih</th>
            <th>Belge No</th>
            <th>Lokasyon</th>
            <th>Kasa</th>
            <th>İşlem</th>
            <th>Bu Hesaba</th>
            <th>Tahsilat</th>
            <th>Komisyon</th>
            <th>Para Br.</th>
            <th>Kaydeden</th>
            <th>Kayıt Tarihi</th>
            <th>Referans</th>
            <th>Fiş Tarihi</th>
            <th>Fiş Nr.</th>
            <th>Döküman</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.BankTransfer)
        {
            <tr style='@(item.IsActive == false ? "color: red" : "")'>

                <td class="tx-sm-13 bold">@item.ID</td>
                <td class="tx-sm-13">@item.Date</td>
                <td class="tx-sm-13"><a href="@("/Cash/TransferDetail/" + @item.UID)">@item.DocumentNumber</a></td>
                <td class="tx-sm-13">@item.LocationFullName</td>
                <td class="tx-sm-13">@item.CashName</td>
                <td class="tx-sm-13">@item.ActionTypeName</td>
                <td class="tx-sm-13">@item.BankAccountName </td>
                <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(item.Amount?.ToString("N2"))</td>
                <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(item.Commission?.ToString("N2"))</td>
                <td class="tx-sm-13">@(item.Currency)</td>
                <td class="tx-sm-13">@item.RecorderFullName</td>
                <td class="tx-sm-13 text-right">@item.RecordDate</td>
                <td class="tx-sm-13 text-right">@item.ReferenceCode</td>
                <td class="tx-sm-13">@($"{item.SlipDate?.ToShortDateString()} {item.SlipDate?.ToString("HH:mm:ss")}")</td>
                <td class="tx-sm-13 text-right">@item.SlipNumber</td>
                <td>
                    @if (item.SlipDocument != null)
                    {
                        <img src="@(string.Format("../Document/Bank/{0}",item.SlipDocument))" class="img-fluid img-thumbnail" width="64">
                    }
                </td>
                <td class="tx-sm-13 text-right">@item.StatusName</td>


            </tr>
        }

    </tbody>
</table>
