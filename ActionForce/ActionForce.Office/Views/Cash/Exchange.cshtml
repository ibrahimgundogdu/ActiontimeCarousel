@model CashControlModel
@{
    ViewBag.Title = "Kasa Tahsilat";
}

@section style{

}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Döviz Satış</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                    <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Kasa Nakit İşlemleri</li>
                </ol>
            </nav>
            <h4 class="mg-b-0 tx-spacing--1">Döviz Satışı</h4>
        </div>
        <div class="d-none d-md-block">
            @{Html.RenderPartial("_PartialAddCashMenu");}
        </div>
    </div>


    @using (Html.BeginForm("FilterExchange", "Cash", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-row align-items-end">
            <div class="form-group col-md-3 d-flex align-items-end">
                <select class="form-control select2" id="locationId" name="locationId">
                    <option value="" label="Lokasyon Seçiminiz"></option>
                    @foreach (var item in Model.LocationList)
                    {
                        <option value="@item.LocationID" @(Model.Filters.LocationID == item.LocationID ? "selected" : "")>@(Html.Raw($"<strong>{item.SortBy}</strong> {item.LocationName} {item.Description} {item.State}"))</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-2 d-flex align-items-end">
                <input type="text" id="dateFrom" name="beginDate" class="form-control" autocomplete="off" placeholder="Başlangıç Tarihi" value="@(Model.Filters.DateBegin.Value.ToString("yyyy-MM-dd"))">
            </div>
            <div class="form-group col-md-2 d-flex align-items-end">
                <input type="text" id="dateTo" name="endDate" class="form-control" autocomplete="off" placeholder="Bitiş Tarihi" value="@(Model.Filters.DateEnd.Value.ToString("yyyy-MM-dd"))">
            </div>
            <div class="form-group col-md-1 d-flex align-items-end ">
                <button class="btn btn-primary" type="submit" id="btnsearch">Ara</button>
            </div>
        </div>

    }



    <div>
        <div class="table">
            <table class="table table-sm table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tarih</th>
                        <th>Belge No</th>
                        <th>Lokasyon</th>
                        <th>Bu Kasadan</th>
                        <th>Bu Kasaya</th>
                        <th>İşlem</th>
                        <th>Döviz Tutar</th>
                        <th>Döviz Br.</th>
                        <th>Kur</th>
                        <th>Tutar</th>
                        <th>Para Br.</th>
                        <th>Kaydeden</th>
                        <th>Kayıt Tarihi</th>
                        <th>Döküman</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.CashSaleExchanges)
                    {
                    <tr style='@(item.IsActive == false ? "color: red" : "")'>

                        <td class="tx-sm-13 bold">@item.ID</td>
                        <td class="tx-sm-13">@item.Date.Value.ToShortDateString()</td>
                        <td class="tx-sm-13"><a href="@("/Cash/ExchangeDetail/" + @item.UID)">@item.DocumentNumber</a></td>
                        <td class="tx-sm-13">@item.LocationFullName</td>
                        <td class="tx-sm-13">@item.FromCashName</td>
                        <td class="tx-sm-13">@item.ToCashName</td>
                        <td class="tx-sm-13">@item.ActionTypeName</td>
                        <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(item.Amount?.ToString("N2"))</td>
                        <td class="tx-sm-13">@(item.Currency)</td>
                        <td class="tx-sm-13">@(item.ExchangeRate?.ToString("N4"))</td>
                        <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(item.ToAmount?.ToString("N2"))</td>
                        <td class="tx-sm-13">@(item.ToCurrency)</td>
                        <td class="tx-sm-13">@item.RecorderFullName</td>
                        <td class="tx-sm-13 text-right">@item.RecordDate</td>
                        <td>
                            @if (item.SlipDocument != null)
                            {

                                <a target="_blank" href="@(string.Format("../Document/Exchange/{0}",item.SlipDocument))">
                                    <img class="img-fluid img-thumbnail thumb" src="@(string.Format("../Document/Exchange/{0}",item.SlipDocument))" alt="@item.SlipDocument" width="64">
                                </a>
                                @*<img src="@(string.Format("../Document/Expense/{0}",item.SlipDocument))" class="img-fluid img-thumbnail" width="64">*@
                            }


                        </td>
                        @*<td class="tx-sm-13 text-right"><a href="@("/Cash/ExchangeDetail/" + @item.UID)" class="btn btn-xs btn-primary btn-icon"><i data-feather="edit"></i></a></td>
        @if (item.IsActive == true)
        {
            <td class="tx-sm-13 text-right"><a href="/Cash/Exchange" class="btn btn-xs btn-danger btn-icon" onclick="if(confirm('@(Html.Raw($"{item.Amount} döviz satışı iptal etmek istediğine emin misin?')"))) DeleteCashExchange(@item.ID)"><i data-feather="trash-2"></i></a></td>
        }*@

                    </tr>
                    }

                </tbody>
            </table>
        </div>


        <footer class="content-footer">
            <div>
                <span>&copy; @DateTime.Now.Year UFE Group LLC </span>
            </div>

        </footer>

    </div>
</div>

@section canvasmenu {
    @{Html.RenderPartial("_PartialDocumentForms", Model);}
}

@section scripts {
    <script src="/lib/cleave.js/cleave.min.js"></script>
    <script>
        $(function () {

            $('.toast').toast();
            $('.select2').select2({
                placeholder: 'Lokasyon Seçiminiz',
                searchInputPlaceholder: 'Search options'
            });

            var dateFormat = 'yy-mm-dd',
                from = $('#dateFrom')
                    .datepicker({
                        defaultDate: '+1w',
                        numberOfMonths: 2,
                        dateFormat: "yy-mm-dd",
                        dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                        monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                        firstDay: 1
                    })
                    .on('change', function () {
                        to.datepicker('option', 'minDate', getDate(this));
                    }),
                to = $('#dateTo').datepicker({
                    defaultDate: '+1w',
                    numberOfMonths: 2,
                    dateFormat: "yy-mm-dd",
                    dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                    monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                    firstDay: 1
                })
                    .on('change', function () {
                        from.datepicker('option', 'maxDate', getDate(this));
                    });

            $('#DocumentDate').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });
            function getDate(element) {
                var date;
                try {
                    date = $.datepicker.parseDate(dateFormat, element.value);
                } catch (error) {
                    date = null;
                }

                return date;

            }

        });
        
        //function DeleteCashExchange(id) {
        //    $.ajax({
        //        method: "GET",
        //        url: "/Cash/DeleteCashExchange",
        //        data: { id: id }
        //    }).done(function (d) {
        //        $("#DeleteCashExchange").html(d);
        //    });
        //}
            
    </script>
    <script>
            $(function () {
                'use strict'

                $('.off-canvas-menu').on('click', function (e) {
                    e.preventDefault();
                    var target = $(this).attr('href');
                    $(target).addClass('show');
                });


                $('.off-canvas .close').on('click', function (e) {
                    e.preventDefault();
                    $(this).closest('.off-canvas').removeClass('show');
                })

                $(document).on('click touchstart', function (e) {
                    e.stopPropagation();

                    if (!$(e.target).closest('.off-canvas-menu').length) {
                        var offCanvas = $(e.target).closest('.off-canvas').length;
                        if (!offCanvas) {
                            $('.off-canvas.show').addClass('show');
                        }
                    }
                });


            });
    </script>
    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}
