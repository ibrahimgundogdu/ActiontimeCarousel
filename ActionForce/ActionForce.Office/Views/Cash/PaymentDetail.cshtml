@model CashControlModel
@{
    ViewBag.Title = "Kasa Tahsilat";
}

@section style{
    <style type="text/css">
        .form-group {
            margin-bottom: 8px;
        }
    </style>
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Kasa Ödemesi Detay</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body  mg-t-40 mg-lg-t-0">
                <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
                    <div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                                <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Kasa Nakit İşlemleri</li>
                            </ol>
                        </nav>
                        <h4 class="mg-b-0 tx-spacing--1">Kasa Ödemesi Detayı</h4>
                    </div>
                    <div class="d-none d-md-block">
                        <a href="@("/Cash/AddPayment/")" class="btn btn-primary btn-uppercase"><i data-feather="plus-square"></i> &nbsp; Ödeme Ekle</a>
                    </div>
                </div>


                @using (Html.BeginForm("EditCashPayment", "Cash", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="row row-xs">
                        <div class="col-lg-12">
                            <div class="form-group row mg-b-5">
                                <label for="ActionTypeName" class="col-sm-3 col-form-label">Kasa Tipi</label>

                                <div class="col-sm-6">

                                    <input id="ActionTypeName" name="ActionTypeName" type="text" class="form-control" placeholder="Kasa Tipi" value="@Model.PaymentDetail.ActionTypeName" readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row mg-b-5">
                                <label for="CashName" class="col-sm-3 col-form-label">Kasa</label>

                                <div class="col-sm-6">

                                    <input id="CashName" name="CashName" type="text" class="form-control" placeholder="Kasa" value="@Model.PaymentDetail.CashName" readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row mg-b-5">
                                <label for="DocumentNumber" class="col-sm-3 col-form-label">Döküman</label>

                                <div class="col-sm-6">

                                    <input id="DocumentNumber" name="DocumentNumber" type="text" class="form-control" placeholder="Kasa" value="@Model.PaymentDetail.DocumentNumber" readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="DocumentDate" class="col-sm-3 col-form-label">Tarih</label>

                                <div class="col-sm-6">
                                    <input id="UpdateDocumentDate" name="DocumentDate" type="text" class="form-control" autocomplete="off" placeholder="Tarih" value="@(Model.PaymentDetail.Date.Value.ToString("yyyy-MM-dd"))" required>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row bg-gray-100 mg-b-5">
                                <label for="FromID" class="col-sm-3 col-form-label">Kimden</label>

                                <div class="col-sm-6">
                                    <select class="form-control select2" name="FromID" required>
                                        @foreach (var item in Model.FromList)
                                        {
                                            <option value="@item.Code" @(Model.PaymentDetail.ToCustomerID == item.ID && item.Code.Substring(0, 1) == "A" ? "selected" : Model.PaymentDetail.ToEmployeeID == item.ID && item.Code.Substring(0, 1) == "E" ? "selected" : "")>@(Html.Raw($"{item.Name}"))</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row bg-gray-100">
                                <label for="LocationID" class="col-sm-3 col-form-label">Lokasyon</label>

                                <div class="col-sm-6">
                                    <select class="form-control select2" name="LocationID" required>
                                        @foreach (var item in Model.LocationList)
                                        {
                                            <option value="@item.LocationID" @(Model.PaymentDetail.LocationID == item.LocationID ? "selected" : "")>@($"{item.SortBy}  {item.LocationName} {item.State} {item.Description}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row bg-gray-100 mg-b-5">
                                <label for="Amount" class="col-sm-3 col-form-label">Tutar</label>

                                <div class="col-sm-6">
                                    <input name="Amount" type="text" class="form-control money" autocomplete="off" value="@(Model.PaymentDetail.Amount?.ToString("N2"))" placeholder="Tutar" required>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row bg-gray-100">
                                <label for="Currency" class="col-sm-3 col-form-label">Para Birimi</label>

                                <div class="col-sm-6">
                                    <select class="form-control" name="Currency" required>
                                        @foreach (var item in Model.CurrencyList)
                                        {
                                            <option value="@item.Code" @(Model.PaymentDetail.Currency == item.Code ? "selected" : "")>@($"{item.Code} ({item.Sign})")</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row mg-b-5">
                                <label for="ExchangeRate" class="col-sm-3 col-form-label">Döviz Kuru</label>

                                <div class="col-sm-6">
                                    <input name="ExchangeRate" type="text" class="form-control money4" autocomplete="off" placeholder="Döviz Kuru">
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row mg-b-5">
                                <label for="Exchange" class="col-sm-3 col-form-label">Kur</label>

                                <div class="col-sm-6">
                                    <input name="Exchange" type="text" class="form-control money4" autocomplete="off" value="@(Model.PaymentDetail.ExchangeRate?.ToString("N4"))" readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="SystemAmount" class="col-sm-3 col-form-label">Döviz Tutar</label>

                                <div class="col-sm-6">
                                    <input name="SystemAmount" type="text" class="form-control" autocomplete="off" value="@($"{Model.PaymentDetail.SystemAmount?.ToString("N2")} {Model.PaymentDetail.SystemCurrency}")" placeholder="Döviz Tutar" required>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="ReferenceID" class="col-sm-3 col-form-label">Referans ID</label>

                                <div class="col-sm-6">
                                    <input name="ReferanceID" type="text" class="form-control" autocomplete="off" value="@Model.PaymentDetail.ReferenceID" placeholder="Referans ID">
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Description" class="col-sm-3 col-form-label">Açıklama</label>
                                <div class="col-sm-6">
                                    <textarea id="Description" name="Description" rows="5" cols="20" class="form-control" style="width:100% !important;">@(Model.PaymentDetail.Description)</textarea>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row mg-b-0">
                                <label for="IsActive" class="col-sm-3 col-form-label">Aktif mi?</label>
                                <div class="col-sm-2">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="IsActive" name="IsActive" value="1" @(Model.PaymentDetail.IsActive == true ? "checked" : "")>
                                        <label class="custom-control-label" for="IsActive">Aktif</label>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row mg-b-0">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-3">
                                    <input name="ActinTypeID" type="hidden" value="23" />
                                    <input name="UID" type="hidden" value="@(Model.PaymentDetail.UID)" />
                                    @if (Model.PaymentDetail.IsActive == true)
                                    {
                                        <button type="submit" class="btn btn-primary btn-block">Ödeme Güncelle</button>
                                    }

                                </div>
                                <div class="col-sm-3">
                                    @if (Model.PaymentDetail.IsActive == true)
                                    {
                                        <a href="#" class="btn btn-danger btn-block btn-icon" onclick="confirm('Silmek Istediğinize Emin misiniz?')? DeleteCashPayment('@Model.PaymentDetail.UID'):''">Ödeme Sil <i data-feather="trash-2"></i></a>
                                    }

                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                        </div>
                    </div>

                }

                <div class="row row-xs bg-gray-100 mg-b-0 mg-t-40">
                    <div class="col-sm-3 pd-t-10 pd-b-10">
                        <b>Kayıt Tarihçesi</b>
                    </div>

                    <div class="col-sm-3 pd-t-10">@(Html.Raw($"<b>Kaydeden </b> : {Model.PaymentDetail.RecorderFullName} {Model.PaymentDetail.RecordDate} ")) </div>
                    <div class="col-sm-3 pd-t-10">@(Model.PaymentDetail.UpdateDate != null ? Html.Raw($"<b>Güncelleyen </b> : {Model.PaymentDetail.UpdaterFullName} {Model.PaymentDetail.UpdateDate} ") : Html.Raw("")) </div>

                </div>

                @if (Model.History != null && Model.History.Count() > 0)
                {
                    <div class="row row-xs">
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Kişi</th>
                                    <th>Ortam</th>
                                    <th>İşlem</th>
                                    <th>Açıklama</th>
                                    <th>Alan</th>
                                    <th>Önceki</th>
                                    <th>Yeni</th>
                                    <th>Başarılı?</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.History.OrderBy(x => x.RecordDate))
                                {
                                    <tr>
                                        <td>@(item.RecordDate)</td>
                                        <td>@(item.RecordEmployee)</td>
                                        <td>@(item.Environment)</td>
                                        <td>@(item.ProcessType)</td>
                                        <td>@(item.ResultMessage)</td>
                                        <td>@(item.FieldName)</td>
                                        <td>@(item.OldValue)</td>
                                        <td>@(item.NewValue)</td>
                                        <td>@(item.IsSuccess)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script>

        $(function () {
            'use strict'
            $('.select2').select2({
                placeholder: 'Lokasyon Seçiminiz',
                searchInputPlaceholder: 'Search options'
            });
            

            $('#UpdateDocumentDate').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });

        });

        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.money').mask("#.##0,00", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
        });

        function DeleteCashPayment(id) {
            window.location.href = "/Cash/DeleteCashPayment/" + id;
        }

    </script>
    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}


