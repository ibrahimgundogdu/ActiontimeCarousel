<table class="table table-striped table-hover table-sm tx-13 tx-nowrap mg-b-0">
    <thead class="table-dark">
        <tr class="tx-10 tx-spacing-1 tx-color-03 tx-uppercase">
            <th>#</th>
            <th>Tarih</th>
            <th>Belge No</th>
            <th>Lokasyon</th>
            <th>Ödeme Türü</th>
            <th>Ödeme Tip</th>
            <th>Kasa</th>
            <th>İşlem</th>
            <th>Bu Personele</th>
            <th>Ödeme</th>
            <th></th>
            <th>Kaydeden</th>
            <th>Kayıt Tarihi</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.SalaryPayment)
        {
            <tr style='@(item.IsActive == false ? "color: red" : "")'>

                <td class="tx-sm-13 bold">@item.ID</td>
                <td class="tx-sm-13">@item.Date</td>
                <td class="tx-sm-13"><a href="@("/Cash/SalaryDetail/" + @item.UID)">@item.DocumentNumber</a></td>
                <td class="tx-sm-13">@item.LocationFullName</td>
                <td class="tx-sm-13">@(item.CategoryName)</td>
                <td class="tx-sm-13">@(item.SalaryType == 2 ? "Avans Ödemesi" : "Maaş Ödemesi")</td>
                <td class="tx-sm-13">@(item.FromCashID != null ? item.CashName : item.BankAccountName)</td>
                <td class="tx-sm-13">@item.ActionTypeName</td>
                <td class="tx-sm-13">@item.EmployeeFullName </td>
                <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(item.Amount?.ToString("N2"))</td>
                <td class="tx-sm-13">@(item.Currency)</td>
                <td class="tx-sm-13">@item.RecorderFullName</td>
                <td class="tx-sm-13 text-right">@item.RecordDate</td>
                @*<td class="tx-sm-13 text-right"><a href="@("/Salary/SalaryDetail/" + @item.UID)" class="btn btn-xs btn-primary btn-icon"><i data-feather="edit"></i></a></td>
                    @if (item.IsActive == true)
                    {
                        <td class="tx-sm-13 text-right"><a href="/Cash/SalaryPayment" class="btn btn-xs btn-danger btn-icon" onclick="if(confirm('@(Html.Raw($"{item.Amount} tutarlı maaş ödemesi iptal etmek istediğine emin misin?')"))) DeleteCashSalaryPayment(@item.ID)"><i data-feather="trash-2"></i></a></td>
                    }*@

            </tr>
        }

    </tbody>
</table>
