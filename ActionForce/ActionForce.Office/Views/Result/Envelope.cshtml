@model ResultControlModel
@{
    ViewBag.Title = "Gün Sonu Zarf İşlemleri";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Gün Sonu Zarfları</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body mg-t-40 mg-lg-t-0">
                <div class="profile-update-option bg-light ht-50 bd d-flex justify-content-end mg-b-20 mg-lg-b-20 rounded">
                    <div class="d-flex align-items-center pd-x-5 mg-r-auto">
                        0
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="#" id="LocationResultDate" class="link-03" title="Tarih Seç">
                            <i data-feather="calendar"></i>
                            <input type="hidden" id="DatePicker" />
                            <div></div>
                        </a>
                        <input id="CurrentDateCode" type="hidden" value="@Model.CurrentDateCode" />
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Result/Envelope?date=@(Model.PrevDateCode)" class="link-03" title="Bir Önceki Gün"><i data-feather="arrow-left"></i></a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Result/Envelope?date=@(Model.TodayDateCode)" class="link-03" title="Bu Gün"><i data-feather="target"></i></a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Result/Envelope?date=@(Model.NextDateCode)" class="link-03" title="Bir Sonraki Gün"><i data-feather="arrow-right"></i></a>
                    </div>

                </div>



                <div class="card mg-b-20 mg-lg-b-25">
                    <div class="card-header pd-y-15 pd-x-20 d-flex align-items-center justify-content-between">
                        <h6 class="tx-13 tx-spacing-1 tx-uppercase tx-semibold mg-b-0"></h6>
                        <nav class="nav">
                            <a href="" class="link-03 mg-l-10"><span class="d-none d-sm-inline">@(Model.CurrentDate.DateKey.ToLongDateString())</span></a>
                        </nav>
                    </div><!-- card-header -->
                    <div class="card-body pd-0">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Lokasyon</th>
                                        <th>Tarih</th>
                                        <th>Takvim</th>
                                        <th>Mesai</th>
                                        <th>Aşama</th>
                                        <th>Durum</th>
                                        <th>Kaydeden</th>
                                        <th>K.Tarihi</th>
                                        <th>Açıklama</th>
                                        <th>Aktif</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var location in Model.LocationList)
                                    {
                                        var dayresult = Model.DayResultList.FirstOrDefault(x => x.LocationID == location.LocationID);
                                        var schedule = Model.LocationScheduleList.FirstOrDefault(x => x.LocationID == location.LocationID);
                                        var shift = Model.LocationShiftList.FirstOrDefault(x => x.LocationID == location.LocationID);

                                        <tr>

                                            <td class="tx-sm-13 bold">@location.SortBy</td>
                                            <td class="tx-sm-13 bg-primary-light font-weight-bold">@($"{location.LocationName} {location.Description} {location.State}")</td>
                                            <td class="tx-sm-13 bg-primary-light font-weight-bold">@(dayresult?.Date.ToShortDateString())</td>
                                            <td class="tx-sm-13 bg-primary-light font-weight-bold">@(schedule?.ShiftDateStart != null ? schedule?.ShiftDateStart.Value.ToString("HH\\:mm") : "") @(schedule?.ShiftdateEnd != null ? " - " + schedule?.ShiftdateEnd.Value.ToString("HH\\:mm") : "")</td>
                                            <td class="tx-sm-13 bg-primary-light font-weight-bold">@(shift?.ShiftDateStart != null ? shift?.ShiftDateStart.Value.ToString("HH\\:mm") : "") @(shift?.ShiftDateFinish != null ? " - " + shift?.ShiftDateFinish.Value.ToString("HH\\:mm") : "")</td>
                                            <td class="tx-sm-13 bg-light font-weight-bold">@(dayresult?.StateName)</td>
                                            <td class="tx-sm-13">@(dayresult?.StatusName)</td>
                                            <td class="tx-sm-13">@(dayresult?.RecorderFullName)</td>
                                            <td class="tx-sm-13">@(dayresult?.RecordDate)</td>
                                            <td class="tx-sm-13">@(dayresult?.Description)</td>
                                            <td class="tx-sm-13">@(dayresult?.IsActive)</td>
                                            <td class="tx-sm-13">
                                                @if (schedule?.DurationMinute != null && shift?.DurationMinute != null && dayresult == null)
                                                {
                                                    <a href="/Result/New?locationid=@(location.LocationID)&date=@(Model.CurrentDateCode)" class="active"><i data-feather="mail"></i></a>

                                                }
                                                else if (dayresult != null)
                                                {

                                                    <a href="/Result/Detail" class="@(dayresult != null ? "active":"") text-dark color-green"><i data-feather="mail"></i></a>
                                                }
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>


                    <div class="card-footer bg-transparent pd-y-10 pd-sm-y-15 pd-x-10 pd-sm-x-20">
                        <nav class="nav nav-with-icon tx-13">
                            <a href="/Result/ExportToExcel" class="nav-link"><i data-feather="download"></i> Excel Olarak İndir</a>
                        </nav>
                    </div><!-- card-footer -->
                </div>

                <footer class="content-footer">
                    <div>
                        <span>&copy; @DateTime.Now.Year UFE Group LLC </span>
                    </div>

                </footer>

            </div>

        </div>
    </div>
</div>


@section canvasmenu {

}

@section scripts {

    <script>
        $(function () {
            'use strict'

            $("body").addClass("page-profile");

            $('#DatePicker').datepicker({
                showOtherMonths: true,
                selectOtherMonths: true,
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1,
                onSelect: function (dateText, inst) {
                    window.location.href = "/Result/Envelope?date=" + dateText;
                },
                beforeShow: function (event, ui) {
                    var $link = $("#LocationResultDate");
                    ui.dpDiv.offset({
                        top: $link.offset().top + 10,
                        left: $link.offset().left + 10
                    });
                }
            });

            $("#LocationResultDate").click(function () {
                $("#DatePicker").datepicker("show");
            });


        });



    </script>

    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}
