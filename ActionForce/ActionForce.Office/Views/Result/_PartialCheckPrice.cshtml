@model ResultControlModel
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Adet</th>
                <th class="text-right">Birim</th>
                <th class="text-right">Fiyat</th>
                <th class="text-right">Toplam</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.PriceList?.Count > 0)
            {
                foreach (var item in Model.PriceList)
                {
                    <tr class="table-light" >
                        <td><input id="Quantity_@(item.ID)" type="text" class="form-control form-control-sm money4 text-left" placeholder="Adet" onchange="CheckPrice(@(item.ID),@(item.Price ?? 0))"></td>
                        <td class="text-right">@item.Unit Dk</td>
                        <td class="text-right">@(item.Price?.ToString("N2")) @(item.Currency)</td>
                        <td class="text-right a" data-price="@(item.Price ?? 0)" id="Sum_@(item.ID)"></td>
                    </tr>
                }
            }
            <tr>
                <td colspan="3">Bilet Toplamı:</td>
                <td id="SumTotal"></td>
            </tr>
        </tbody>
    </table>
</div>

<input id="resultID" type="hidden" value="@Model.DayResult.ID" />
<input id="resultDate" type="hidden" value="@Model.DayResult.Date" />

@*@(Model.CurrentDate?.DateKey.ToShortDateString())*@