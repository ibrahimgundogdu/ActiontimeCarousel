@model RevenueControlModel

@section style{

}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Kira Bilgisi Import Et</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">

    <div>

        <div>

            @using (Html.BeginForm("ImportParameterFile", "Revenue", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="row row-xs">
                    <div class="col-lg-12">

                        <div class="form-group row mg-b-3">
                            <label for="ParameterFile" class="col-sm-3 col-form-label">Kira Parametre Excel Dosyası</label>
                            <div class="col-sm-9">
                                <input type="file" id="ParameterFile" name="ParameterFile" class="form-control" required />
                            </div>
                        </div>

                        <div class="form-group row mg-b-3">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-9">
                                <button type="submit" class="btn btn-primary btn-block">Parametre Import Et</button>
                            </div>
                        </div>

                    </div>
                </div>




            }
        </div>

        @if (Model.Result != null && Model.Result.InfoKeyList != null)
        {
            <div class="table mt-5">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Durum</th>
                            <th>Konu</th>
                            <th>Mesaj</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Result.InfoKeyList)
                        {
                            <tr>
                                <td>@(item.IsSuccess)</td>
                                <td>@(item.Name)</td>
                                <td>@(item.Message)</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        }


        <footer class="content-footer">
            <div>
                <span>&copy; @DateTime.Now.Year UFE Group LLC </span>
            </div>

        </footer>

    </div>
</div>



@section scripts {
    <script>


    </script>
}