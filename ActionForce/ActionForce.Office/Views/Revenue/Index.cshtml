@model RevenueControlModel
@{
    ViewBag.Title = "Lokasyon Hasılatı";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Hasılat Raporu</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div><!-- content-header -->
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body mg-t-40 mg-lg-t-0">




                <div class="profile-update-option bg-white ht-50 bd d-flex justify-content-end mg-b-10 mg-lg-b-10 rounded">
                    <div class="d-flex align-items-center pd-x-20 mg-r-auto">

                        <a href="/Revenue/Index?WeekYear=@(Model.FirstWeekDay.WeekYear)&WeekNumber=@(Model.FirstWeekDay.WeekNumber)" class="btn btn-white btn-xs mg-r-10" title="Tümünü Listele">Tümü (@(Model.Revenues.Count()))</a>
                        <a href="/Revenue/Index?WeekYear=@(Model.FirstWeekDay.WeekYear)&WeekNumber=@(Model.FirstWeekDay.WeekNumber)&isactive=1" class="btn btn-primary btn-xs mg-r-10" title="Aktifler">Aktifler (@(Model.Revenues.Where(x=> x.IsActive == true).Count()))</a>
                        <a href="/Revenue/Index?WeekYear=@(Model.FirstWeekDay.WeekYear)&WeekNumber=@(Model.FirstWeekDay.WeekNumber)&isactive=0" class="btn btn-secondary btn-xs mg-r-10" title="Pasifler">Pasifler (@(Model.Revenues.Where(x => x.IsActive == false).Count()))</a>

                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="#" id="LocationRevenueDate" class="link-03" title="Tarih Seç">
                            <i data-feather="calendar"></i>
                            <input type="hidden" id="DatePicker" />
                            <div></div>
                        </a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Revenue/Index?WeekYear=@(Model.PrevWeek.WeekYear)&WeekNumber=@(Model.PrevWeek.WeekNumber)" class="link-03" title="Bir Önceki Hafta"><i data-feather="arrow-left"></i></a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Revenue/Index?date=@(DateTime.Now.ToString("yyyy-MM-dd"))" class="link-03" title="Bu Hafta"><i data-feather="target"></i></a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Revenue/Index?WeekYear=@(Model.NextWeek.WeekYear)&WeekNumber=@(Model.NextWeek.WeekNumber)" class="link-03" title="Bir Sonraki Hafta"><i data-feather="arrow-right"></i></a>
                    </div>
                </div>
                <div class="card mg-b-20 mg-lg-b-25">
                    <div class="card-header pd-y-15 pd-x-20 d-flex align-items-center justify-content-between">
                        <h6 class="tx-13 tx-spacing-1 tx-uppercase tx-semibold mg-b-0">@(Model.FirstWeekDay.WeekYear) @(Model.FirstWeekDay.WeekNumber). Hafta</h6>
                        <nav class="nav vertical">
                            <a href="#" class="btn link-03"><span class="d-none d-sm-inline">@(Model.FirstWeekDay.DateKey.ToLongDateString())</span> <i data-feather="more-horizontal"></i> @(Model.LastWeekDay.DateKey.ToLongDateString())</a>
                            <a href="/Revenue/RecalculateRevenueAll?WeekYear=@(Model.FirstWeekDay.WeekYear)&WeekNumber=@(Model.FirstWeekDay.WeekNumber)" class="btn btn-warning btn-xs btn-icon  mg-l-10">
                                <i class="tx-white" data-feather="repeat"></i>
                            </a>
                        </nav>
                    </div><!-- card-header -->
                    <div class="card-body pd-0">
                        <div class="table-responsive">
                            <table class="table mg-b-0">
                                @foreach (var item in Model.Revenues.OrderBy(x => x.SortBy))
                                {
                                    var revenueLines = Model.RevenueLines.Where(x => x.RevenueID == item.ID).OrderBy(x => x.Date).ToList();

                                    <thead>
                                        <tr class="bg-white bd-0">
                                            <th colspan="14"></th>
                                        </tr>
                                    </thead>
                                    <thead class="table-borderless">
                                        <tr>
                                            <th></th>
                                            <th></th>
                                            <th style="vertical-align:bottom !important; padding-bottom:0px;">Week</th>
                                            <th style="vertical-align:bottom !important; padding-bottom:0px;">Cash</th>
                                            <th style="vertical-align:bottom !important; padding-bottom:0px;">Credit</th>
                                            <th style="vertical-align:bottom !important; padding-bottom:0px;">Total</th>
                                            <th style="vertical-align:bottom !important; padding-bottom:0px;">VAT</th>
                                            <th style="vertical-align:bottom !important; padding-bottom:0px;">Labor</th>
                                            <th style="vertical-align:bottom !important; padding-bottom:0px;">Expense</th>
                                            <th style="vertical-align:bottom !important; padding-bottom:0px;">Net</th>
                                            <th style="vertical-align:bottom !important; padding-bottom:0px;">Operator</th>
                                            <th style="vertical-align:bottom !important; padding-bottom:0px;">AcTi</th>
                                            <th style="vertical-align:bottom !important; padding-bottom:0px;">OpReturn</th>
                                            <th style="vertical-align:bottom !important; padding-bottom:0px;"></th>
                                            <th style="vertical-align:bottom !important; padding-bottom:0px;"></th>
                                        </tr>
                                    </thead>
                                    <thead class="table-dark">
                                        <tr>
                                            <th style="padding:0px 2px;vertical-align:middle;">
                                                <a class="btn btn-xs btn-icon" data-toggle="collapse" href="#collapseRevenue@(item.ID)" role="button" aria-expanded="false" aria-controls="collapseRevenue@(item.ID)">
                                                    <i class="tx-white" data-feather="plus"></i>
                                                </a>
                                            </th>
                                            <th class="tx-15">
                                                <a data-toggle="collapse" href="#collapseRevenue@(item.ID)" class="tx-white link-04" role="button" aria-expanded="false" aria-controls="collapseRevenue@(item.ID)">
                                                    @(item.LocationFullName) (#@(item.LocationID))
                                                </a>
                                            </th>
                                            <th>@(item.WeekYear) - @(item.WeekNumber)</th>
                                            <th>@(item.TotalCash?.ToString("N2"))</th>
                                            <th>@(item.TotalCredit?.ToString("N2"))</th>
                                            <th>@(item.GrossTotal?.ToString("N2"))</th>
                                            <th>@(item.TotalVAT?.ToString("N2"))</th>
                                            <th>@(item.TotalLabor?.ToString("N2"))</th>
                                            <th>@(item.TotalExpense?.ToString("N2"))</th>
                                            <th>@(item.Net?.ToString("N2"))</th>
                                            <th>@(item.Operator?.ToString("N2"))</th>
                                            <th>@(item.ActionTime?.ToString("N2"))</th>
                                            <th>@(item.OpReturn?.ToString("N2"))</th>
                                            <th>@(item.Currency)</th>
                                            <th style="padding:0px 2px;vertical-align:middle;">
                                                <a href="#" class="btn btn-warning btn-xs btn-icon" onclick="RecalculateRevenue(@item.WeekYear, @item.WeekNumber, @item.LocationID, 'detailRevenue@(item.ID)')">
                                                    <i class="tx-white" data-feather="repeat"></i>
                                                </a>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="collapse table-borderless" id="collapseRevenue@(item.ID)">
                                        <tr>
                                            <td colspan="15" id="detailRevenue@(item.ID)">
                                                @{Html.RenderPartial("_PartialRevenueDetail", new RevenueDetailModel() { Revenue = item, RevenueLines = revenueLines });}
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>


                        </div>
                    </div>
                    <div class="card-footer bg-transparent pd-y-10 pd-sm-y-15 pd-x-10 pd-sm-x-20">
                        <nav class="nav nav-with-icon tx-13">
                            <a href="/Revenue/ExportToExcel" class="nav-link"><i data-feather="download"></i> Excel Olarak İndir</a>
                        </nav>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="modal fade" id="modalLocationSchedule" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body pd-20 pd-sm-40" id="AddLocationSchedule">

            </div>
        </div>
    </div>
</div>
@section scripts {


    <script>
        $(function () {
            'use strict'
            $("body").addClass("page-profile");

            $('#DatePicker').datepicker({
                showOtherMonths: true,
                selectOtherMonths: true,
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1,
                onSelect: function (dateText, inst) {
                    window.location.href = "/Revenue/Index?date=" + dateText;
                },
                beforeShow: function (event, ui) {
                    var $link = $("#LocationRevenueDate");
                    ui.dpDiv.offset({
                        top: $link.offset().top + 10,
                        left: $link.offset().left + 10
                    });
                }
            });

            $("#LocationRevenueDate").click(function () {
                $("#DatePicker").datepicker("show");
            });

            $('.shifttime').mask('00:00');
            $('.shiftdate').mask('0000-00-00');

        });

        function RecalculateRevenue(weekyear, weekcode, locationid, attrid) {
            $.ajax({
                method: "GET",
                url: "/Revenue/RecalculateRevenue",
                data: { WeekYear: weekyear, WeekNumber: weekcode, LocationID: locationid }
            }).done(function (d) {
                $("#" + attrid).html(d);
            });
        }

    </script>



    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}
