@model RevenueControlModel
@{
    ViewBag.Title = "Lokasyon Hasılatı";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Lokasyon Hasılatı</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div><!-- content-header -->
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body mg-t-40 mg-lg-t-0">




                <div class="profile-update-option bg-white ht-50 bd d-flex justify-content-end mg-b-10 mg-lg-b-10 rounded">
                    @*<div class="d-flex align-items-center pd-x-20 mg-r-auto">

                        <span class="tx-15 pd-r-10">@(Html.Raw($"<span clas='text-success'>{Model.Revenues.Count()}</span>")) </span>
                    </div>*@
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="#" id="LocationRevenueDate" class="link-03" title="Tarih Seç">
                            <i data-feather="calendar"></i>
                            <input type="hidden" id="DatePicker" />
                            <div></div>
                        </a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Revenue/Index?WeekYear=@(Model.PrevWeek.WeekYear)&WeekNumber=@(Model.PrevWeek.WeekNumber)" class="link-03" title="Bir Önceki Hafta"><i data-feather="arrow-left"></i></a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Revenue/Index?date=@(DateTime.Now.ToString("yyyy-MM-dd"))" class="link-03" title="Bu Hafta"><i data-feather="target"></i></a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Revenue/Index?WeekYear=@(Model.NextWeek.WeekYear)&WeekNumber=@(Model.NextWeek.WeekNumber)" class="link-03" title="Bir Sonraki Hafta"><i data-feather="arrow-right"></i></a>
                    </div>

                </div>


                <div class="card mg-b-20 mg-lg-b-25">
                    <div class="card-header pd-y-15 pd-x-20 d-flex align-items-center justify-content-between">
                        <h6 class="tx-13 tx-spacing-1 tx-uppercase tx-semibold mg-b-0">@(Model.SelectedDate.WeekYear) @(Model.SelectedDate.WeekNumber). Hafta</h6>
                        <nav class="nav">
                            <a href="#" class="link-03 mg-l-10"><span class="d-none d-sm-inline">@(Model.FirstWeekDay.DateKey.ToLongDateString())</span> <i data-feather="more-horizontal"></i> @(Model.LastWeekDay.DateKey.ToLongDateString())</a>
                        </nav>
                    </div><!-- card-header -->
                    <div class="card-body pd-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mg-b-0">
                                <thead>
                                    <tr>
                                        <th>Location</th>
                                        <th>WeekYear</th>
                                        <th>WeekNumber</th>
                                        <th>LocationID</th>
                                        <th>Currency</th>
                                        <th>TotalCash</th>
                                        <th>TotalCredit</th>
                                        <th>GrossTotal</th>
                                        <th>Net</th>
                                        <th>Operator</th>
                                        <th>ActionTime</th>
                                        <th>OpReturn</th>
                                        <th>ComputedType</th>
                                        <th>ComputedRate</th>
                                        <th>UpdateDate</th>
                                        <th>TotalLabor</th>
                                        <th>TotalExpense</th>
                                        <th>TotalCashIn</th>
                                        <th>TotalRent</th>
                                        <th>TotalCreditCommission</th>
                                        <th>TotalInsurance</th>
                                    </tr>
                                </thead>


                                @foreach (var item in Model.Revenues)
                                {


                                    <thead class="table-primary" data-toggle="collapse" href="#collapseRevenue@(item.ID)" role="button" aria-expanded="false" aria-controls="collapseRevenue@(item.ID)">
                                        <tr>
                                            <th>@(item.SortBy) @(item.LocationFullName)</th>
                                            <th>@(item.WeekYear)</th>
                                            <th>@(item.WeekNumber)</th>
                                            <th>@(item.LocationID)</th>
                                            <th>@(item.Currency)</th>
                                            <th>@(item.TotalCash?.ToString("N2"))</th>
                                            <th>@(item.TotalCredit?.ToString("N2"))</th>
                                            <th>@(item.GrossTotal?.ToString("N2"))</th>
                                            <th>@(item.Net?.ToString("N2"))</th>
                                            <th>@(item.Operator?.ToString("N2"))</th>
                                            <th>@(item.ActionTime?.ToString("N2"))</th>
                                            <th>@(item.OpReturn?.ToString("N2"))</th>
                                            <th>@(item.ComputedType)</th>
                                            <th>@(item.ComputedRate)</th>
                                            <th>@(item.UpdateDate)</th>
                                            <th>@(item.TotalLabor?.ToString("N2"))</th>
                                            <th>@(item.TotalExpense?.ToString("N2"))</th>
                                            <th>@(item.TotalCashIn?.ToString("N2"))</th>
                                            <th>@(item.TotalRent?.ToString("N2"))</th>
                                            <th>@(item.TotalCreditCommission?.ToString("N2"))</th>
                                            <th>@(item.TotalInsurance?.ToString("N2"))</th>
                                        </tr>
                                    </thead>

                                    <tbody class="collapse" id="collapseRevenue@(item.ID)">

                                        <tr>
                                            <td colspan="21">

                                                <table class="table table-success mg-b-0">
                                                    <thead class="table-primary">
                                                        <tr>
                                                            <th>WeekYear</th>
                                                            <th>WeekNumber</th>
                                                            <th>Date</th>
                                                            <th>Dayname</th>
                                                            <th>Currency</th>
                                                            <th>Cash</th>
                                                            <th>Credit</th>
                                                            <th>Total</th>
                                                            <th>Labor</th>
                                                            <th>Expense</th>
                                                            <th>CashIn</th>
                                                            <th>Rent</th>
                                                            <th>CommissionRate</th>
                                                            <th>CreditCommission</th>
                                                            <th>InsuranceRate</th>
                                                            <th>Insurance</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="table-hover table-striped">
                                                        @foreach (var line in Model.RevenueLines.Where(x => x.RevenueID == item.ID).OrderBy(x => x.Date))
                                                        {
                                                            <tr>
                                                                <td>@(line.WeekYear)</td>
                                                                <td>@(line.WeekNumber)</td>
                                                                <td>@(line.Date?.ToShortDateString())</td>
                                                                <td>@(line.DayNameTR)</td>
                                                                <td>@(line.Currency)</td>
                                                                <td>@(line.Cash?.ToString("N2"))</td>
                                                                <td>@(line.Credit?.ToString("N2"))</td>
                                                                <td>@(line.Total.ToString("N2"))</td>
                                                                <td>@(line.Labor?.ToString("N2"))</td>
                                                                <td>@(line.Expense?.ToString("N2"))</td>
                                                                <td>@(line.CashIn?.ToString("N2"))</td>
                                                                <td>@(line.Rent?.ToString("N2"))</td>
                                                                <td>@(line.CommissionRate)</td>
                                                                <td>@(line.CreditCommission?.ToString("N2"))</td>
                                                                <td>@(line.InsuranceRate)</td>
                                                                <td>@(line.Insurance?.ToString("N2"))</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>

                                            </td>

                                        </tr>


                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>


                    <div class="card-footer bg-transparent pd-y-10 pd-sm-y-15 pd-x-10 pd-sm-x-20">
                        <nav class="nav nav-with-icon tx-13">
                            <a href="/Revenue/ExportToExcel" class="nav-link"><i data-feather="download"></i> Excel Olarak İndir</a>
                        </nav>
                    </div><!-- card-footer -->
                </div>



            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="modalLocationSchedule" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body pd-20 pd-sm-40" id="AddLocationSchedule">

            </div>
        </div>
    </div>
</div>
@section scripts {


    <script>
        $(function () {
            'use strict'
            $("body").addClass("page-profile");

            $('#DatePicker').datepicker({
                showOtherMonths: true,
                selectOtherMonths: true,
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1,
                onSelect: function (dateText, inst) {
                    window.location.href = "/Schedule/Location?date=" + dateText;
                },
                beforeShow: function (event, ui) {
                    var $link = $("#LocationScheduleDate");
                    ui.dpDiv.offset({
                        top: $link.offset().top + 10,
                        left: $link.offset().left + 10
                    });
                }
            });

            $("#LocationRevenueDate").click(function () {
                $("#DatePicker").datepicker("show");
            });

            $('.shifttime').mask('00:00');
            $('.shiftdate').mask('0000-00-00');



        });



        function AddLocationSchedule(locationid, weekcode) {
            $.ajax({
                method: "GET",
                url: "/Schedule/AddLocationSchedule",
                data: { id: locationid, week: weekcode }
            }).done(function (d) {
                $("#AddLocationSchedule").html(d);
            });
        }


    </script>



    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}
