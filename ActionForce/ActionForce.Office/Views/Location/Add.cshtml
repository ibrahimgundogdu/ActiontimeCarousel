@model LocationControlModel
@{
    ViewBag.Title = "Lokasyon Ekleme";
}

<div class="content-header">
    <div class="content-search">
        <h4>Yeni Lokasyon Ekleme</h4>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body  mg-t-40 mg-lg-t-0">
                <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30 row">
                    <div class=" col-md-4"></div>
                    <div class="col-md-4 tx-center">
                        <h4 class="mg-b-0 tx-spacing--1">Lokasyon Bilgileri</h4>
                    </div>
                    <div class="d-none d-md-block col-md-4 tx-right">
                        <a href="/Location/" class="btn btn-primary btn-uppercase"><i data-feather="map-pin"></i> &nbsp; Lokasyonları Listesi</a>
                    </div>
                </div>
                <div id="employeeStatus">
                    <div class="row no-gutters">
                        <div class="col-lg-12">
                            @using (Html.BeginForm("LocationCheck", "Location", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="row row-xs">
                                    <div class="col-lg-12">
                                        <div class="form-group row mg-b-5">
                                            <label for="ourCompany" class="col-sm-3 col-form-label">Firma</label>
                                            <div class="col-sm-6">
                                                <select class="form-control" id="ourCompany" name="OurCompany">
                                                    @if (Model?.OurCompanyList?.Count > 0)
                                                    {
                                                        <option value="">Seçiniz</option>

                                                        foreach (var item in Model.OurCompanyList)
                                                        {
                                                            <option value="@(item.CompanyID)" @(item.CompanyID == Model.Authentication.ActionEmployee.OurCompanyID ? "selected" : "")>@(item.CompanyName)</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="locationCode" class="col-sm-3 col-form-label">Lokasyon Kodu</label>
                                            <div class="col-sm-6">
                                                <input id="locationCode" name="LocationCode" type="text" class="form-control" autocomplete="off" placeholder="Lokasyon Kodu">
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="locationName" class="col-sm-3 col-form-label">Adı</label>
                                            <div class="col-sm-6">
                                                <input id="locationName" name="LocationName" type="text" class="form-control" autocomplete="off" placeholder="Adı" required>
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="locationTypeID" class="col-sm-3 col-form-label">Türü</label>
                                            <div class="col-sm-6">
                                                <select class="form-control" id="locationTypeID" name="LocationTypeID" required>
                                                    @if (Model?.LocationTypeList?.Count > 0)
                                                    {
                                                        <option value="">Seçiniz</option>

                                                        foreach (var item in Model.LocationTypeList)
                                                        {
                                                            <option value="@(item.TicketTypeID)">@(item.TypeName)</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="state" class="col-sm-3 col-form-label">Şehir</label>
                                            <div class="col-sm-6">
                                                <select class="form-control" id="state" name="State">
                                                    @if (Model?.CityList?.Count > 0)
                                                    {
                                                        foreach (var item in Model.CityList)
                                                        {
                                                            <option value="@(item.ID)">@(item.CityName)</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="latitude" class="col-sm-3 col-form-label">Enlem</label>
                                            <div class="col-sm-6">
                                                <input id="latitude" name="Latitude" type="text" class="form-control" autocomplete="off" placeholder="Enlem">
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="longitude" class="col-sm-3 col-form-label">Boylam</label>
                                            <div class="col-sm-6">
                                                <input id="longitude" name="Longitude" type="text" class="form-control" autocomplete="off" placeholder="Boylam">
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="iP" class="col-sm-3 col-form-label">IP</label>
                                            <div class="col-sm-6">
                                                <input id="iP" name="IP" type="text" class="form-control" autocomplete="off" placeholder="IP">
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="avm" class="col-sm-3 col-form-label">AVM</label>
                                            <div class="col-sm-6">
                                                <select class="form-control" id="avm" name="MallID" required>
                                                    @if (Model?.MallList?.Count > 0)
                                                    {
                                                        <option value="">Seçiniz</option>
                                                        foreach (var item in Model.MallList)
                                                        {
                                                            <option value="@(item.ID)">@(item.FullName)</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="timezone" class="col-sm-3 col-form-label">Time Zone</label>
                                            <div class="col-sm-6">
                                                <select class="form-control" id="timezone" name="Timezone" required>
                                                    <option value="">Seçiniz</option>
                                                    @for (int i = 3; i >= -13; i--)
                                                    {
                                                        <option value="@i" @(Model.Authentication.ActionEmployee.OurCompany.TimeZone == i ? "selected" : "")>@( i > 0 ? "+" + i : i.ToString())</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="priceCategory" class="col-sm-3 col-form-label">Fiyat Listesi</label>
                                            <div class="col-sm-6">
                                                <select class="form-control" id="priceCategory" name="PriceCatID" required>
                                                    @if (Model?.PriceCategoryList?.Count > 0)
                                                    {
                                                        <option value="">Seçiniz</option>
                                                        foreach (var item in Model.PriceCategoryList)
                                                        {
                                                            <option value="@(item.ID)">@(item.TicketTypeName + "  " + item.CategoryName)</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="bankAccount" class="col-sm-3 col-form-label">POS Listesi</label>
                                            <div class="col-sm-6">
                                                <select class="form-control" id="bankAccount" name="POSAccountID" required="">
                                                    @if (Model?.BankAccountList?.Count > 0)
                                                    {
                                                        foreach (var item in Model.BankAccountList)
                                                        {
                                                            <option value="@(item.ID)">@(item.AccountName)</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="currency" class="col-sm-3 col-form-label">Para Birimi</label>
                                            <div class="col-sm-6">
                                                <input id="currency" name="Currency" type="text" class="form-control" autocomplete="off" placeholder="Para Birimi" value="@(Model.Authentication.ActionEmployee.OurCompany.Currency)" readonly>
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="sortBy" class="col-sm-3 col-form-label">No</label>
                                            <div class="col-sm-6">
                                                <input id="sortBy" name="SortBy" type="text" class="form-control" autocomplete="off" placeholder="No" required>
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="mapUrl" class="col-sm-3 col-form-label">Map URL</label>
                                            <div class="col-sm-6">
                                                <input id="mapUrl" name="MapURL" type="text" class="form-control" autocomplete="off" placeholder="Map URL">
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="description" class="col-sm-3 col-form-label">Açıklama</label>
                                            <div class="col-sm-6">
                                                <textarea id="description" name="Description" type="text" class="form-control" autocomplete="off" placeholder="Açıklama" style="height:150px"></textarea>
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="isHaveOperator" class="col-sm-3 col-form-label">Operatör var mı?</label>
                                            <div class="col-sm-6">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="isHaveOperator" name="IsHaveOperator" value="1">
                                                    <label class="custom-control-label" for="isHaveOperator">Operatör var mı?</label>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <label for="isActive" class="col-sm-3 col-form-label">Aktif mi?</label>
                                            <div class="col-sm-6">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="isActive" name="IsActive" value="1">
                                                    <label class="custom-control-label" for="isActive">Aktif</label>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                            </div>
                                        </div>
                                        <div class="form-group row mg-b-5">
                                            <div class="col-sm-3">
                                            </div>
                                            <div class="col-sm-6">
                                                <input id="locationID" name="LocationID" type="hidden" />
                                                <input id="locationUID" name="LocationUID" type="hidden" />
                                                <button type="submit" class="btn btn-primary btn-block">Lokasyon Ekle</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#ourCompany").change(function () {
                var companyID = $("#ourCompany").val();
                var locationTypeID = $("#locationTypeID").val();
                GetChange(companyID, locationTypeID);
            });
            $("#locationTypeID").change(function () {
                var companyID = $("#ourCompany").val();
                var locationTypeID = $("#locationTypeID").val();
                GetChange(companyID, locationTypeID);
            });
            function GetChange(ourCompany, locationTypeID) {
                var companyID = ourCompany;
                var locationTypeID = locationTypeID;
                $.ajax
                    ({
                        url: '/Location/GetTimezoneList',
                        type: 'POST',
                        datatype: 'application/json',
                        contentType: 'application/json',
                        data: JSON.stringify({
                            ourCompanyId: companyID,
                            locationTypeId: locationTypeID
                        }),
                        success: function (data) {
                            //TODO: OurCompanyID ye bağlı olarak değişiklik yapıldığı zaman onunla birlikte değişmesi gereken yerler. List<SelectListItem> tipinde olmalıdır.
                            var getList = data;

                            $("#timezone").empty();
                            $.each(getList.SelectList, function (index, label) {
                                $("#timezone").append($('<option></option>', { "value": label.Value, "text": label.Text }));
                            });

                            $("#priceCategory").empty();
                            $.each(getList.PriceCategoryList, function (index, label) {
                                $("#priceCategory").append($('<option></option>', { "value": label.Value, "text": label.Text }));
                            });

                            $("#avm").empty();
                            $.each(getList.MallList, function (index, label) {
                                $("#avm").append($('<option></option>', { "value": label.Value, "text": label.Text }));
                            });

                            $("#bankAccount").empty();
                            $.each(getList.PosList, function (index, label) {
                                $("#bankAccount").append($('<option></option>', { "value": label.Value, "text": label.Text }));
                            });

                            $("#currency").val(getList.Currency);
                        },
                        error: function () {
                        },
                    });
            }
        });
    </script>
}