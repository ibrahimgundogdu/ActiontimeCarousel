        <div class="form-group row bg-gray-50 mg-b-5">
            <label for="Mobile" class="col-sm-3 col-form-label">Başlangıç Tarihi</label>
            <div class="col-sm-6">
                <input id="pricedatepicker" type="text" class="form-control form-control-sm shiftdate" placeholder="Başlangıç Tarihi" name="StartDate" value="@(Model?.LocationPriceCategory.StartDate?.ToString("yyyy-MM-dd"))" required>
            </div>
            <div class="col-sm-3"></div>
        </div>
        <div class="form-group row mg-b-0">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <input name="LocationID" type="hidden" value="@(Model.LocationModel.LocationID)" />
                <input name="ID" type="hidden" value="@(Model.LocationPriceCategoryID)" />
                <button type="submit" class="btn btn-primary btn-block tx-15">Fiyat Kategori Güncelle</button>
            </div>
            <div class="col-sm-3">
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    
    $('#pricedatepicker').datepicker({
        showOtherMonths: true,
        selectOtherMonths: true,
        dateFormat: "yy-mm-dd",
        dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
        monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
        firstDay: 1
    });

    $('.shiftdate').mask('0000-00-00');

</script>