                        {
                            <option value="@(item.ID)" @(Model.LocationPriceCategory.TuesdayPCID == item.ID ? "selected" : "")>@(item.TicketTypeName + " " + item.CategoryName)</option>
                        }
                    }
                </select>
            </div>
            <div class="col-sm-3"></div>
        </div>
        <div class="form-group row bg-gray-50 mg-b-5">
