@model ShiftControlModel
@{
    ViewBag.Title = "Lokasyon Çalışan Mesai İşlemleri";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Lokasyon Mesaileri</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body mg-t-40 mg-lg-t-0">
                <div class="profile-update-option bg-light ht-50 bd d-flex justify-content-end mg-b-20 mg-lg-b-20 rounded">
                    <div class="d-flex align-items-center pd-x-5 mg-r-auto">
                        @(Model.Locations.Count() ) adet lokasyon bulundu.
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="#" id="LocationResultDate" class="link-03" title="Tarih Seç">
                            <i data-feather="calendar"></i>
                            <input type="hidden" id="DatePicker" />
                            <div></div>
                        </a>
                        <input id="CurrentDateCode" type="hidden" value="@Model.CurrentDateCode" />
                    </div>

                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Shift/LocationShift?date=@(Model.PrevDateCode)" class="link-03" title="Bir Önceki Gün"><i data-feather="arrow-left"></i></a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Shift/LocationShift?date=@(Model.TodayDateCode)" class="link-03" title="Bu Gün"><i data-feather="target"></i></a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Shift/LocationShift?date=@(Model.NextDateCode)" class="link-03" title="Bir Sonraki Gün"><i data-feather="arrow-right"></i></a>
                    </div>

                </div>



                <div class="card mg-b-20 mg-lg-b-25">
                    <div class="card-header pd-y-15 pd-x-20 d-flex align-items-center justify-content-between">
                        <h6 class="tx-13 tx-spacing-1 tx-uppercase tx-semibold mg-b-0"></h6>
                        <nav class="nav">
                            <a href="" class="link-03 mg-l-10"><span class="d-none d-sm-inline">@(Model.CurrentDate.DateKey.ToLongDateString())</span></a>
                        </nav>
                    </div><!-- card-header -->
                    <div class="card-body pd-0">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Lokasyon</th>
                                        <th>Tarihi</th>
                                        <th>Takvim</th>
                                        <th>Mesai</th>
                                        <th>Durum</th>
                                        <th class="text-center">Düzenle</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var location in Model.Locations)
                                    {
                                        var locationschedule = Model.LocationSchedules.FirstOrDefault(x => x.LocationID == location.LocationID);
                                        var locationshift = Model.LocationShifts.FirstOrDefault(x => x.LocationID == location.LocationID);
                                        

                                        <tr>

                                            <td class="tx-sm-13 bold">@location.SortBy</td>
                                            <td class="tx-sm-13 bg-primary-light font-weight-bold">@($"{location.LocationName} {location.Description} {location.State}")</td>
                                            <td class="tx-sm-13 bg-primary-light font-weight-bold">@(Model.CurrentDate.DateKey.ToShortDateString())</td>
                                            <td class="tx-sm-13 @(locationschedule != null && locationschedule.DurationMinute == null ? "bg-primary":"bg-primary-light") font-weight-bold">@(locationschedule != null ? locationschedule?.ShiftDateStart?.ToString("HH\\:mm") : "") @(locationschedule?.ShiftdateEnd != null ? " - " + locationschedule?.ShiftdateEnd?.ToString("HH\\:mm") : "")</td>
                                            <td class="tx-sm-13 bg-primary-light font-weight-bold">@(locationshift != null ? locationshift?.ShiftDateStart?.ToString("HH\\:mm") : "") @(locationshift?.ShiftDateFinish != null ? " - " + locationshift?.ShiftDateFinish?.ToString("HH\\:mm") : "")</td>
                                            <td class="tx-sm-13 bg-light font-weight-bold wd-20 text-center" id="@($"LocationStatus_{location.LocationID}_2")">@(locationshift != null && locationshift.DurationMinute == null ? Html.Raw($"<a href='#'> <i class='ion ion-md-sunny tx-sm-24'></i></a>") : locationshift != null && locationshift.DurationMinute != null ? Html.Raw($"<a href='#'> <i class='ion ion-md-moon tx-sm-24'></i></a>") : Html.Raw($"<a href='#'> <i class='ion ion-md-alarm tx-sm-24'></i></a>") )</td>
                                            <td class="tx-sm-13">

                                                <a href="#modalLocationShift" data-toggle="modal" class="btn btn-xs btn-primary btn-block" onclick="EditLocationShift(@location.LocationID,'@Model.CurrentDateCode')"> <i data-feather="clock"></i> Düzenle</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>


                    <div class="card-footer bg-transparent pd-y-10 pd-sm-y-15 pd-x-10 pd-sm-x-20">
                        <nav class="nav nav-with-icon tx-13">
                            <a href="/Shift/ExportToExcel" class="nav-link"><i data-feather="download"></i> Excel Olarak İndir</a>
                        </nav>
                    </div><!-- card-footer -->
                </div>

                <footer class="content-footer">
                    <div>
                        <span>&copy; @DateTime.Now.Year UFE Group LLC </span>
                    </div>

                </footer>

            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="modalLocationShift" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body pd-20 pd-sm-40" id="EditLocationShift">

            </div>
        </div>
    </div>
</div>
@section canvasmenu {

}

@section scripts {
    <script src="~/assets/js/ActionForceScript.js"></script>
    <script>
        $(function () {
            'use strict'

            $("body").addClass("page-profile");

            $('#DatePicker').datepicker({
                showOtherMonths: true,
                selectOtherMonths: true,
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1,
                onSelect: function (dateText, inst) {
                    window.location.href = "/Shift/LocationShift?date=" + dateText;
                },
                beforeShow: function (event, ui) {
                    var $link = $("#LocationResultDate");
                    ui.dpDiv.offset({
                        top: $link.offset().top + 10,
                        left: $link.offset().left + 10
                    });
                }
            });

            $("#LocationResultDate").click(function () {
                $("#DatePicker").datepicker("show");
            });


        });

        function EditLocationShift(locationid, date) {
            $.ajax({
                method: "GET",
                url: "/Shift/EditLocationShift",
                data: { id: locationid, date: date }
            }).done(function (d) {
                $("#EditLocationShift").html(d);
            });
        }

    </script>

    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}
