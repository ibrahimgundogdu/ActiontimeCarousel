@model ShiftControlModel
@{
    ViewBag.Title = "Lokasyon Çalışan Mesai İşlemleri";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Lokasyon - Çalışan Mesaileri</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body mg-t-40 mg-lg-t-0">
                <div class="profile-update-option bg-light ht-50 bd d-flex justify-content-end mg-b-20 mg-lg-b-20 rounded">
                    <div class="d-flex align-items-center pd-x-5 mg-r-auto">
                        @(Model.Locations.Count() ) adet lokasyon bulundu.
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="#" id="LocationResultDate" class="link-03" title="Tarih Seç">
                            <i data-feather="calendar"></i>
                            <input type="hidden" id="DatePicker" />
                            <div></div>
                        </a>
                        <input id="CurrentDateCode" type="hidden" value="@Model.CurrentDateCode" />
                    </div>

                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Shift/Index?date=@(Model.PrevDateCode)" class="link-03" title="Bir Önceki Gün"><i data-feather="arrow-left"></i></a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Shift/Index?date=@(Model.TodayDateCode)" class="link-03" title="Bu Gün"><i data-feather="target"></i></a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Shift/Index?date=@(Model.NextDateCode)" class="link-03" title="Bir Sonraki Gün"><i data-feather="arrow-right"></i></a>
                    </div>

                </div>



                <div class="card mg-b-20 mg-lg-b-25">
                    <div class="card-header pd-y-15 pd-x-20 d-flex align-items-center justify-content-between">
                        <h6 class="tx-13 tx-spacing-1 tx-uppercase tx-semibold mg-b-0"></h6>
                        <nav class="nav">
                            <a href="" class="link-03 mg-l-10"><span class="d-none d-sm-inline">@(Model.CurrentDate.DateKey.ToLongDateString())</span></a>
                        </nav>
                    </div><!-- card-header -->
                    <div class="card-body pd-0">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th colspan="6">Lokasyon</th>
                                        <th class="text-center bd-l">Çalışan</th>
                                    </tr>
                                    <tr>
                                        <th>#</th>
                                        <th>Lokasyon</th>
                                        <th>Seçilen Tarih</th>
                                        <th>Takvim</th>
                                        <th>Mesai</th>
                                        <th>Durum</th>
                                        <th class="bd-l">Liste</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var location in Model.Locations)
                                    {
                                        var locationschedule = Model.LocationSchedules.FirstOrDefault(x => x.LocationID == location.LocationID);
                                        var locationshift = Model.LocationShifts.FirstOrDefault(x => x.LocationID == location.LocationID);
                                        List<int> employeeids = Model.EmployeeSchedules.Where(x => x.LocationID == location.LocationID).Select(x => x.EmployeeID.Value).ToList();
                                        var employeelist = Model.Employees.Where(x => employeeids.Contains(x.EmployeeID)).ToList();

                                    <tr>

                                        <td class="tx-sm-14 bold">@location.SortBy</td>
                                        <td class="tx-sm-14 bg-primary-light font-weight-bold">@($"{location.LocationName} {location.Description} {location.State}") <br /><span class="tx-10">@(location.LocalDateTime.ToString())</span></td>
                                        <td class="tx-sm-13 bg-primary-light font-weight-bold">@(Model.CurrentDate.DateKey.ToShortDateString())</td>
                                        <td class="tx-sm-13 @(locationschedule != null && locationschedule.DurationMinute == null ? "bg-primary":"bg-primary-light") font-weight-bold"><a href="/Schedule/Location/@(location?.LocationID)?week=@(Model?.CurrentDate?.WeekKey ?? Model.CurrentDateCode)" target="_blank">@(locationschedule != null ? locationschedule?.ShiftDateStart?.ToString("HH\\:mm") : "") @(locationschedule?.ShiftdateEnd != null ? " - " + locationschedule?.ShiftdateEnd?.ToString("HH\\:mm") : "")</a></td>
                                        <td class="tx-sm-13 bg-primary-light font-weight-bold">
                                            <a href="#modalLocationShift" data-toggle="modal" class="link-01" onclick="EditLocationShift(@location.LocationID,'@Model.CurrentDateCode')">
                                                @(locationshift != null ? locationshift?.ShiftDateStart?.ToString("HH\\:mm") : "") @(locationshift?.ShiftDateFinish != null ? " - " + locationshift?.ShiftDateFinish?.ToString("HH\\:mm") : "")
                                            </a>
                                        </td>
                                        <td class="tx-sm-13 bg-light font-weight-bold wd-20 text-center" id="@($"LocationStatus_{location.LocationID}_2")">@(locationshift != null && locationshift.DurationMinute == null ? Html.Raw($"<a href='#' title='Lokasyon Kapat' onclick='CloseLocation({location.LocationID},2)'> <i class='ion ion-md-sunny tx-sm-24'></i></a>") : locationshift != null && locationshift.DurationMinute != null ? Html.Raw($"<a href='#' title='Lokasyon Kapatılmış'> <i class='ion ion-md-moon tx-sm-24'></i></a>") : Html.Raw($"<a href='#' title='Lokasyon Aç' onclick='OpenLocation({location.LocationID},2)'> <i class='ion ion-md-alarm tx-sm-24'></i></a>") )</td>


                                        <td class="tx-sm-13 bd-l i-l" style="padding:7px !important;">

                                            <table class="table table-hover pd-0 mg-0">
                                                <tbody>
                                                    @foreach (var emp in employeelist)
                                                    {

                                                        var employeeschedule = Model.EmployeeSchedules.FirstOrDefault(x => x.LocationID == location.LocationID && x.EmployeeID == emp.EmployeeID);
                                                        var employeeshift = Model.EmployeeShifts.FirstOrDefault(x => x.LocationID == location.LocationID && x.EmployeeID == emp.EmployeeID);
                                                        var employeebreak = Model.EmployeeBreaks.Where(x => x.LocationID == location.LocationID && x.EmployeeID == emp.EmployeeID && x.BreakDurationMinute > 0).ToList();
                                                        var employeebreakcurrent = Model.EmployeeBreaks.FirstOrDefault(x => x.LocationID == location.LocationID && x.EmployeeID == emp.EmployeeID && x.BreakDurationMinute == null);


                                                        <tr class="@(employeeshift != null && employeeshift.DurationMinute == null ? "table-info":"table-warning")" id="@($"EmployeeStatus_{location.LocationID}_{emp.EmployeeID}_2")">
                                                            <td class="wd-300 tx-sm-13 font-weight-bold">@emp.FullName</td>
                                                            <td class="wd-150 text-center @(employeeshift != null && employeeshift.DurationMinute == null ? "bg-info":"bg-warning")" style="padding:2px !important;"><a href="/Schedule/Employee?locationid=@(location?.LocationID)&week=@(Model?.CurrentDate?.WeekKey ?? Model.CurrentDateCode)" target="_blank">@(employeeschedule != null ? employeeschedule?.ShiftDateStart?.ToString("HH\\:mm") : "") @(employeeschedule?.ShiftdateEnd != null ? " - " + employeeschedule?.ShiftdateEnd?.ToString("HH\\:mm") : "")</a></td>
                                                            <td class="wd-150 text-center" style="padding:4px !important;">
                                                                <a href="#modalEmployeeShift" data-toggle="modal" class="link-01" onclick="EditEmployeeShift(@location.LocationID,@emp.EmployeeID,'@Model.CurrentDateCode')">
                                                                    @(employeeshift != null ? employeeshift?.ShiftDateStart?.ToString("HH\\:mm") : "") @(employeeshift?.ShiftDateEnd != null ? " - " + employeeshift?.ShiftDateEnd?.ToString("HH\\:mm") : "")
                                                                </a>
                                                            </td>
                                                            <td class="wd-20 text-center">
                                                                @if (employeeshift == null)
                                                                {
                                                                    <a href='#' class="text-warning font-weight-bold" title="Mesai Başlat" onclick="StartEmployeeShift(@location.LocationID,@emp.EmployeeID,2)"> <i class="ion ion-md-finger-print tx-sm-24"></i></a>
                                                                }
                                                                else if (employeeshift != null && employeeshift.DurationMinute == null)
                                                                {
                                                                    <a href='#' class="text-info font-weight-bold" title="Mesai Bitir" onclick="FinishEmployeeShift(@location.LocationID,@emp.EmployeeID,2)"> <i class="ion ion-md-finger-print tx-sm-24"></i> </a>

                                                                }
                                                                else
                                                                {
                                                                    <a href='#' title="Mesai Bitmiş" class="text-dark"><i class="ion ion-md-glasses tx-sm-24"></i></a>
                                                                }

                                                            </td>
                                                            <td class="bd-l wd-150">
                                                                <a href="#modalEmployeeBreak" data-toggle="modal" class="link-01" onclick="EditEmployeeBreak(@location.LocationID,@emp.EmployeeID,'@Model.CurrentDateCode')">
                                                                    @(employeebreak.Count()) | @(employeebreak.Sum(x => x.BreakDurationMinute)) | @(employeebreak.Average(x => x.BreakDurationMinute)?.ToString("N2"))
                                                                </a>
                                                            </td>
                                                            <td class="wd-20 text-center">

                                                                @if (employeebreakcurrent == null)
                                                                {
                                                                    <a href='#' class="text-info font-weight-bold" title="Mola Başlat" onclick='StartEmployeeBreak(@location.LocationID,@emp.EmployeeID,2)'> <i class='ion ion-md-timer tx-sm-24'></i></a>
                                                                }
                                                                else if (employeebreakcurrent != null && employeebreakcurrent.DurationMinute == null)
                                                                {
                                                                    <a href='#' class="text-warning font-weight-bold" title="Mola Bitir" onclick='FinishEmployeeBreak(@location.LocationID,@emp.EmployeeID,2)'> <i class='ion ion-md-timer tx-sm-24'></i></a>
                                                                }
                                                                else
                                                                {
                                                                    <a href='#' title="Mola Bitmiş" class="text-dark"><i class="ion ion-md-bicycle tx-sm-24"></i></a>
                                                                }
                                                            </td>
                                                            <td class="tx-sm-24 text-right">@(employeebreakcurrent != null ? Html.Raw("<i class='ion ion-md-cafe'></i>") : employeeshift != null && employeeshift.DurationMinute == null ? Html.Raw("<i class='ion ion-md-stopwatch'></i>") : employeeshift != null && employeeshift.DurationMinute != null ? Html.Raw("<i class='ion ion-md-cloud-outline'></i>") : Html.Raw("") )</td>
                                                        </tr>

                                                    }
                                                </tbody>
                                            </table>

                                        </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>


                    <div class="card-footer bg-transparent pd-y-10 pd-sm-y-15 pd-x-10 pd-sm-x-20">
                        <nav class="nav nav-with-icon tx-13">
                            <a href="/Shift/ExportToExcel" class="nav-link"><i data-feather="download"></i> Excel Olarak İndir</a>
                        </nav>
                    </div><!-- card-footer -->
                </div>

                <footer class="content-footer">
                    <div>
                        <span>&copy; @DateTime.Now.Year UFE Group LLC </span>
                    </div>

                </footer>

            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="modalLocationShift" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body pd-20 pd-sm-40" id="EditLocationShift">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEmployeeShift" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body pd-20 pd-sm-40" id="EditEmployeeShift">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEmployeeBreak" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body pd-20 pd-sm-40" id="EditEmployeeBreak">

            </div>
        </div>
    </div>
</div>

@section canvasmenu {

}

@section scripts {
    <script src="~/assets/js/ActionForceScript.js"></script>
    <script>
        $(function () {
            'use strict'

            $("body").addClass("page-profile");

            $('#DatePicker').datepicker({
                showOtherMonths: true,
                selectOtherMonths: true,
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1,
                onSelect: function (dateText, inst) {
                    window.location.href = "/Shift/Index?date=" + dateText;
                },
                beforeShow: function (event, ui) {
                    var $link = $("#LocationResultDate");
                    ui.dpDiv.offset({
                        top: $link.offset().top + 10,
                        left: $link.offset().left + 10
                    });
                }
            });

            $("#LocationResultDate").click(function () {
                $("#DatePicker").datepicker("show");
            });


        });

        function EditLocationShift(locationid, date) {
            $.ajax({
                method: "GET",
                url: "/Shift/EditLocationShift",
                data: { id: locationid, date: date }
            }).done(function (d) {
                $("#EditLocationShift").html(d);
            });
        }

        function EditEmployeeShift(locationid, employeeid, date) {
            $.ajax({
                method: "GET",
                url: "/Shift/EditEmployeeShift",
                data: { id: locationid, empid: employeeid, date: date }
            }).done(function (d) {
                $("#EditEmployeeShift").html(d);
            });
        }

        function EditEmployeeBreak(locationid, employeeid, date) {
            $.ajax({
                method: "GET",
                url: "/Shift/EditEmployeeBreak",
                data: { id: locationid, empid: employeeid, date: date }
            }).done(function (d) {
                $("#EditEmployeeBreak").html(d);
            });
        }

    </script>
    
    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}
