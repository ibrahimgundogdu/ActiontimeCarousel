@model HomeControlModel
@{
    ViewBag.Title = "Ana Sayfa";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.dashboard.css">
    <style>
        #example2_filter input, #SearchKey {
            text-transform: uppercase;
        }
    </style>
}

<div class="content-header">
    <div class="content-search">
        <i data-feather="search"></i>
        <input id="SearchKey" type="search" class="form-control" placeholder="Arama..." aria-controls="example2">
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div>
        <h4 id="section2" class="mg-b-10">Cari Hesap Ekstresi</h4>
        <div data-label="Example" class="df-example">
            <table id="example2" class="table" style="width:100% !important;">
                <thead>
                    <tr>

                        <th class="wd-20p">Adı Soyadı</th>
                        <th class="wd-25p">Tel GSM</th>
                        <th class="wd-20p">Tel EV</th>
                        <th class="wd-15p">Tel İŞ</th>
                        <th class="wd-20p">Cinsyet</th>
                        <th class="wd-20p">Yaş</th>
                        <th class="wd-20p">Bilgi</th>
                        <th class="wd-20p">Kayıt</th>
                        <th class="wd-20p">Tür</th>
                        <th class="wd-20p">No</th>
                    </tr>
                </thead>
