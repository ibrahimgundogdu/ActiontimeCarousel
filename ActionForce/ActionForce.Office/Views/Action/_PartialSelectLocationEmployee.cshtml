@model ActionControlModel
<a href="" role="button" class="close pos-absolute t-15 r-15" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
</a>
<div>
    <h4>@($"{Model.CurrentLocation.SortBy.Trim()} {Model.CurrentLocation.LocationName}") - @(Model.CurrentDate.Value.ToShortDateString())</h4>
    <p class="tx-color-03"> Çalışan Seçiminiz ?</p>
    
</div>

<div class="nav-wrapper mg-b-20 tx-13">
    <div>
        <nav class="nav nav-line tx-medium">
            <a href="#isactive" class="nav-link active" data-toggle="tab">Aktif Çalışanlar</a>
            <a href="#ispasive" class="nav-link" data-toggle="tab">Pasif Çalışanlar</a>
        </nav>
    </div>
</div>

<div class="tab-content">
    <div id="isactive" class="tab-pane fade active show">
        <div class="table-responsive">
            <table class="table table-success table-hover mg-b-0" data-dismiss="modal" aria-label="Close">
                <tbody>
                    @foreach (var item in Model.EmployeeList.Where(x => x.IsActive == true).OrderBy(x => x.FullName))
                    {
                        <tr class="bd-gray-100" onclick="FLocationEmployeeSet(@(item.EmployeeID),'@($"{item.FullName} ({item.IsActive})")')">
                            <th class="font-weight-bold">@(item.EmployeeID)</th>
                            <th>@($"{item.FullName} ({item.IsActive})" )</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div id="ispasive" class="tab-pane fade">
        <div class="table-responsive">
            <table class="table table-success table-hover mg-b-0" data-dismiss="modal" aria-label="Close">
                <tbody>
                    @foreach (var item in Model.EmployeeList.Where(x => x.IsActive == false || x.IsActive == null).OrderBy(x => x.FullName))
                    {
                        <tr class="bd-gray-100" onclick="FLocationEmployeeSet(@(item.EmployeeID),'@($"{item.FullName} ({item.IsActive})")')">
                            <th class="font-weight-bold">@(item.EmployeeID)</th>
                            <th>@($"{item.FullName} ({item.IsActive})" )</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div> 
</div>
