@model ActionControlModel
@{
    ViewBag.Title = "Cari Virman İşlemleri";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Cari Virman Detayı</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body  mg-t-40 mg-lg-t-0">
                <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
                    <div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                                <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Cari Virman İşlemleri</li>
                            </ol>
                        </nav>
                        <h4 class="mg-b-0 tx-spacing--1">Virman Detayı</h4>
                    </div>
                    <div class="d-none d-md-block">
                        <a href="/Action/Transfers" class="btn btn-primary btn-uppercase"><i data-feather="list"></i> &nbsp; Virman Listesi</a>
                    </div>
                </div>


                @using (Html.BeginForm("EditTransfer", "Action", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="row row-xs">
                        <div class="col-lg-12">

                            <div class="form-group row mg-b-0">
                                <label for="ActionTypeName" class="col-sm-3 col-form-label">İşlem Türü</label>
                                <div class="col-sm-6">
                                    <span id="ActionTypeName" name="ActionTypeName" class="tx-light tx-15">@(Model.CurrentTransfer?.ActionTypeName?.ToString())</span>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5">
                                <label for="DocumentNumber" class="col-sm-3 col-form-label">Doküman No</label>
                                <div class="col-sm-6">
                                    <input id="DocumentNumber" name="DocumentNumber" type="text" class="form-control" autocomplete="off" placeholder="Doküman No" value="@(Model.CurrentTransfer.DocumentNumber)" required readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="DocumentDate" class="col-sm-3 col-form-label">Tarih</label>
                                <div class="col-sm-6">
                                    <input id="DocumentDate" name="DocumentDate" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Tarih" value="@(Model.CurrentTransfer.DocumentDate?.ToString("yyyy-MM-dd"))" required>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5 bg-gray-50">
                                <label for="FromLocationID" class="col-sm-3 col-form-label">Lokasyon</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="FromLocationID" name="FromLocationID" required>
                                        @foreach (var item in Model.LocationList.OrderBy(x => x.SortBy))
                                        {
                                            <option value="@item.LocationID" @(item.LocationID == Model.CurrentTransfer.FromLocationID ? "selected" : "")>@($"{item.SortBy.Trim()} {item.LocationName} {item.State} {item.Description}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5 bg-gray-50">
                                <label for="FromName" class="col-sm-3 col-form-label">Kaynak ( Çıkış )</label>
                                <div class="col-sm-6">
                                    <input id="FromCashID" name="FromCashID" type="hidden" value="@(Model.CurrentTransfer.FromCashID)" />
                                    <input id="FromBankID" name="FromBankID" type="hidden" value="@(Model.CurrentTransfer.FromBankAccountID)" />
                                    <input id="FromEmplID" name="FromEmplID" type="hidden" value="@(Model.CurrentTransfer.FromEmployeeID)" />
                                    <input id="FromCustID" name="FromCustID" type="hidden" value="@(Model.CurrentTransfer.FromCustomerID)" />

                                    <input id="FromName" name="FromName" type="text" class="form-control" autocomplete="off" placeholder="Kaynak" required readonly value="@($"{Model.CurrentTransfer.FromCashName}{Model.CurrentTransfer.FromBankAccountName}{Model.CurrentTransfer.FromEmpFullName}{Model.CurrentTransfer.FromCustFullName}")">
                                </div>
                                <div class="col-sm-3">
                                    <a href="#modalFLocationCashSelect" data-toggle="modal" class="btn btn-xs btn-info" title="Kasa" onclick="FLocationCashSelect()"><i class="ion ion-md-keypad"></i></a>
                                    <a href="#modalFLocationBankSelect" data-toggle="modal" class="btn btn-xs btn-warning" title="Banka" onclick="FLocationBankSelect()"><i class="ion ion-md-card"></i></a>
                                    <a href="#modalFLocationEmployeeSelect" data-toggle="modal" class="btn btn-xs btn-success" title="Personel" onclick="FLocationEmployeeSelect()"><i class="ion ion-md-person"></i></a>
                                    <a href="#modalFLocationCustomerSelect" data-toggle="modal" class="btn btn-xs btn-primary" title="Müşteri" onclick="FLocationCustomerSelect()"><i class="ion ion-md-man"></i></a>
                                </div>
                            </div>

                            <div class="form-group row mg-b-5 bg-gray-50">
                                <label for="FromDate" class="col-sm-3 col-form-label">Çıkış Tarihi</label>
                                <div class="col-sm-6">
                                    <input id="FromDate" name="FromDate" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Çıkış Tarihi" value="@(Model.CurrentTransfer.FromDate?.ToString("yyyy-MM-dd"))" readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row bg-gray-50">
                                <label for="FromRecEmpFullName" class="col-sm-3 col-form-label">Çıkış Yapan</label>
                                <div class="col-sm-6">
                                    <input id="FromRecordEmployeeID" name="FromRecordEmployeeID" type="hidden" value="@(Model.CurrentTransfer.FromRecordEmployeeID)" />
                                    <input id="FromRecEmpFullName" name="FromRecEmpFullName" type="text" class="form-control" autocomplete="off" placeholder="Çıkış Yapan Kişi" value="@(Model.CurrentTransfer.FromRecEmpFullName)" readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5 bg-gray-100">
                                <label for="ToLocationID" class="col-sm-3 col-form-label">Lokasyon</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="ToLocationID" name="ToLocationID" required>
                                        @foreach (var item in Model.LocationList.OrderBy(x => x.SortBy))
                                        {
                                            <option value="@item.LocationID" @(item.LocationID == Model.CurrentTransfer.ToLocationID ? "selected" : "")>@($"{item.SortBy.Trim()} {item.LocationName} {item.State} {item.Description}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5 bg-gray-100">
                                <label for="ToName" class="col-sm-3 col-form-label">Hedef ( Giriş )</label>
                                <div class="col-sm-6">
                                    <input id="ToCashID" name="ToCashID" type="hidden" value="@(Model.CurrentTransfer.ToCashID)" />
                                    <input id="ToBankID" name="ToBankID" type="hidden" value="@(Model.CurrentTransfer.ToBankAccountID)" />
                                    <input id="ToEmplID" name="ToEmplID" type="hidden" value="@(Model.CurrentTransfer.ToEmployeeID)" />
                                    <input id="ToCustID" name="ToCustID" type="hidden" value="@(Model.CurrentTransfer.ToCustomerID)" />

                                    <input id="ToName" name="ToName" type="text" class="form-control" autocomplete="off" placeholder="Hedef" required readonly value="@($"{Model.CurrentTransfer.ToCashName}{Model.CurrentTransfer.ToBankAccountName}{Model.CurrentTransfer.ToEmpFullName}{Model.CurrentTransfer.ToCustFullName}")">
                                </div>
                                <div class="col-sm-3">
                                    <a href="#modalTLocationCashSelect" data-toggle="modal" class="btn btn-xs btn-info" title="Kasa" onclick="TLocationCashSelect()"><i class="ion ion-md-keypad"></i></a>
                                    <a href="#modalTLocationBankSelect" data-toggle="modal" class="btn btn-xs btn-warning" title="Banka" onclick="TLocationBankSelect()"><i class="ion ion-md-card"></i></a>
                                    <a href="#modalTLocationEmployeeSelect" data-toggle="modal" class="btn btn-xs btn-success" title="Personel" onclick="TLocationEmployeeSelect()"><i class="ion ion-md-person"></i></a>
                                    <a href="#modalTLocationCustomerSelect" data-toggle="modal" class="btn btn-xs btn-primary" title="Müşteri" onclick="TLocationCustomerSelect()"><i class="ion ion-md-man"></i></a>
                                </div>
                            </div>

                            <div class="form-group row mg-b-5 bg-gray-100">
                                <label for="ToDate" class="col-sm-3 col-form-label">Giriş Tarihi</label>
                                <div class="col-sm-6">
                                    <input id="ToDate" name="ToDate" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Giriş Tarihi" value="@(Model.CurrentTransfer.ToDate?.ToString("yyyy-MM-dd"))" readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row bg-gray-100">
                                <label for="ToRecEmpFullName" class="col-sm-3 col-form-label">Giriş Yapan</label>
                                <div class="col-sm-6">
                                    <input id="ToRecordEmployeeID" name="ToRecordEmployeeID" type="hidden" value="@(Model.CurrentTransfer.ToRecordEmployeeID)" />
                                    <input id="ToRecEmpFullName" name="ToRecEmpFullName" type="text" class="form-control" autocomplete="off" placeholder="Giriş Yapan Kişi" value="@(Model.CurrentTransfer.ToRecEmpFullName)" readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5">
                                <label for="Amount" class="col-sm-3 col-form-label">Tutar</label>
                                <div class="col-sm-4">
                                    <input id="Amount" name="Amount" type="text" class="form-control money" autocomplete="off" placeholder="Tutar" required value="@(Model.CurrentTransfer.Amount?.ToString("N2"))">
                                </div>
                                <div class="col-sm-2">
                                    <select class="form-control" name="Currency" required>
                                        @foreach (var item in Model.CurrencyList)
                                        {
                                            <option value="@item.Code" @(Model.CurrentTransfer.Currency == item.Code ? "selected" : "")>@($"{item.Code} ({item.Sign})")</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5">
                                <label for="SystemAmount" class="col-sm-3 col-form-label">Sistem Tutarı, Döviz Kuru</label>
                                <div class="col-sm-2">
                                    <input id="SystemAmount" name="SystemAmount" type="text" class="form-control money" autocomplete="off" placeholder="Sistem Tutar" value="@(Model.CurrentTransfer.SystemAmount?.ToString("N2"))" readonly>
                                </div>
                                <div class="col-sm-2">
                                    <input id="SystemCurrency" name="SystemCurrency" type="text" class="form-control" autocomplete="off" placeholder="Sistem Birimi" value="@(Model.CurrentTransfer.SystemCurrency)" readonly>
                                </div>
                                <div class="col-sm-2">
                                    <input id="ExchangeRate" name="ExchangeRate" type="text" class="form-control money" autocomplete="off" placeholder="Döviz Kuru" value="@(Model.CurrentTransfer.ExchangeRate?.ToString("N2"))">
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5">
                                <label for="CarrierEmployeeID" class="col-sm-3 col-form-label">Sorumlu Personel</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="CarrierEmployeeID" name="CarrierEmployeeID" required>
                                        @foreach (var item in Model.EmployeeList.Where(x => x.IsActive == true).OrderBy(x => x.FullName))
                                        {
                                            <option value="@item.EmployeeID" @(item.EmployeeID == Model.CurrentTransfer.CarrierEmployeeID ? "selected" : "")>@($"{item.FullName.Trim()} ({item.IsActive})" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="Description" class="col-sm-3 col-form-label">Açıklama</label>
                                <div class="col-sm-6">
                                    <textarea id="Description" name="Description" rows="5" cols="20" class="form-control" style="width:100% !important;">@(Model.CurrentTransfer.Description)</textarea>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="StatusID" class="col-sm-3 col-form-label">Aşaması</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="StatusID" name="StatusID" required>
                                        @foreach (var item in Model.TransferStatus.OrderBy(x => x.SortBy))
                                        {
                                            <option value="@item.ID" @(item.ID == Model.CurrentTransfer.StatusID ? "selected" : "")>@($"{item.StatusName.Trim()}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-0">
                                <label for="IsActive" class="col-sm-3 col-form-label">Aktif mi?</label>
                                <div class="col-sm-6">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="IsActive" name="IsActive" value="1" @(Model.CurrentTransfer.IsActive == true ? "checked" : "")>
                                        <label class="custom-control-label" for="IsActive">Aktif</label>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-0">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-6">
                                    <input id="ID" name="ID" type="hidden" value="@(Model.CurrentTransfer.ID)" />
                                    <input id="UID" name="UID" type="hidden" value="@(Model.CurrentTransfer.UID)" />
                                    <button type="submit" class="btn btn-primary btn-block">Cari Virman Güncelle</button>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                        </div>
                    </div>
                }

                <div class="row row-xs bg-gray-100 mg-b-0 mg-t-40">
                    <div class="col-sm-3 pd-t-10 pd-b-10">
                        <b>Kayıt Tarihçesi</b>
                    </div>
                    <div class="col-sm-3 pd-t-10">@(Html.Raw($"<b>Kayıt Yeri </b> : {Model.CurrentTransfer.Environment}")) </div>
                    <div class="col-sm-3 pd-t-10">@(Html.Raw($"<b>Kaydeden </b> : {Model.CurrentTransfer.RecEmployeeName} {Model.CurrentTransfer.RecordDate} ")) </div>
                    <div class="col-sm-3 pd-t-10">@(Model.CurrentTransfer.UpdateDate != null ? Html.Raw($"<b>Güncelleyen </b> : {Model.CurrentTransfer.UpdEmployeeName} {Model.CurrentTransfer.UpdateDate} ") : Html.Raw("")) </div>

                </div>

                @if (Model.LogList != null && Model.LogList.Count() > 0)
                {
                    <div class="row row-xs">
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Kişi</th>
                                    <th>Ortam</th>
                                    <th>İşlem</th>
                                    <th>Açıklama</th>
                                    <th>Alan</th>
                                    <th>Önceki</th>
                                    <th>Yeni</th>
                                    <th>Başarılı?</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.LogList.OrderBy(x => x.RecordDate))
                                {
                                    <tr>
                                        <td>@(item.RecordDate)</td>
                                        <td>@(item.RecordEmployee)</td>
                                        <td>@(item.Environment)</td>
                                        <td>@(item.ProcessType)</td>
                                        <td>@(item.ResultMessage)</td>
                                        <td>@(item.FieldName)</td>
                                        <td>@(item.OldValue)</td>
                                        <td>@(item.NewValue)</td>
                                        <td>@(item.IsSuccess)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

