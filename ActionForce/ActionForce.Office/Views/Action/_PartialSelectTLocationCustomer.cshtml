@model ActionControlModel
<a href="" role="button" class="close pos-absolute t-15 r-15" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
</a>
<div>
    <h4>@($"{Model.CurrentLocation.SortBy.Trim()} {Model.CurrentLocation.LocationName}") - @(Model.CurrentDate.Value.ToShortDateString())</h4>
    <p class="tx-color-03"> Müşteri Seçiminiz ?</p>
    <div class="table-responsive">
        <table class="table table-primary table-hover mg-b-0" data-dismiss="modal" aria-label="Close">
            <tbody>
                @foreach (var item in Model.CustomerList)
                {
                    <tr onclick="TLocationCustomerSet(@(item.ID),'@($"{item.FullName} ({item.IsActive})")')">
                        <th class="font-weight-bold">@(item.ID)</th>
                        <th>@($"{item.FullName} ({item.IsActive})" )</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
