@model SalaryControlModel
@{
    ViewBag.Title = "Çalışan Cari İşlemleri";
}

@section style{
    <style type="text/css">
        .form-group {
            margin-bottom: 8px;
        }
    </style>
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Ücret Hakediş Detay</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body  mg-t-40 mg-lg-t-0">
                <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
                    <div>
                        <h4 class="mg-b-0 tx-spacing--1">@(Model.Detail?.DocumentNumber) @(Model.Detail?.ActionTypeName?.ToString()) Detayı</h4>
                    </div>
                    <div class="d-none d-md-block">
                        <a href="/Salary/Index" class="btn btn-primary btn-uppercase"><i data-feather="list"></i> &nbsp; Hakediş Listesi</a>
                    </div>
                </div>


                @using (Html.BeginForm("EditSalaryEarn", "Salary", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="row row-xs">
                        <div class="col-lg-12">
                            <input id="ID" name="ID" type="hidden" value="@(Model.Detail?.ID)" />
                            <input id="UID" name="UID" type="hidden" value="@(Model.Detail?.UID)" />

                            <div class="form-group row mg-b-0">
                                <label for="ActionTypeName" class="col-sm-3 col-form-label">İşlem Türü</label>
                                <div class="col-sm-6">
                                    <span id="ActionTypeName" name="ActionTypeName" class="tx-light tx-15">@(Model.Detail?.ActionTypeName?.ToString())</span>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5">
                                <label for="DocumentNumber" class="col-sm-3 col-form-label">Doküman No</label>
                                <div class="col-sm-6">
                                    <label id="DocumentNumber" name="DocumentNumber" class="tx-light tx-15">@(Model.Detail?.DocumentNumber)</label>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row  bg-gray-50">
                                <label for="DocumentDate" class="col-sm-3 col-form-label">Tarih</label>
                                <div class="col-sm-6">
                                    <label class="tx-light tx-15">@(Model.Detail.Date?.ToLongDateString())</label>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5 bg-gray-50">
                                <label for="LocationID" class="col-sm-3 col-form-label">Lokasyon</label>
                                <div class="col-sm-6">
                                    @($"{Model.Detail?.LocationFullName}" )
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row bg-gray-50 font-weight-bold">
                                <label for="EmployeeID" class="col-sm-3 col-form-label">Çalışan</label>
                                <div class="col-sm-6">
                                    @($"{Model.Detail?.EmployeeFullName}" )
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row  mg-b-5 text-right">
                                <label for="DateBegin" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-2">
                                    <span class="tx-light tx-15">Birim Ücret</span>
                                </div>
                                <div class="col-sm-2">
                                    <span class="tx-light tx-15">Süre (Saat)</span>
                                </div>
                                <div class="col-sm-2">
                                    <span class="tx-light tx-15">Toplam Tutar</span>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row  mg-b-5  bg-gray-50  text-right">
                                <label for="DateBegin" class="col-sm-3 col-form-label text-left">Genel Hakediş</label>
                                <div class="col-sm-2">
                                    <label class="tx-right tx-15">@(Model.Detail?.UnitPrice?.ToString("N2"))</label>
                                </div>
                                <div class="col-sm-2">
                                    <label class="tx-right tx-15">@(Model.Detail?.QuantityHour?.ToString("N2"))</label>
                                </div>
                                <div class="col-sm-2">
                                    <label class="tx-right tx-15">@(Model.Detail?.TotalAmount?.ToString("N2"))</label>
                                </div>
                                <div class="col-sm-3 text-left">
                                    @(Model.Detail?.Currency)
                                </div>
                            </div>

                            <div class="form-group row  mg-b-5  bg-gray-100  text-right">
                                <label for="DateBegin" class="col-sm-3 col-form-label text-left">Ücret Hakediş</label>
                                <div class="col-sm-2">
                                    <label class="tx-right tx-15">@(Model.Detail?.UnitPrice?.ToString("N2"))</label>
                                </div>
                                <div class="col-sm-2">
                                    <label class="tx-right tx-15">@(Model.Detail?.QuantityHourSalary?.ToString("N2"))</label>
                                </div>
                                <div class="col-sm-2">
                                    <label class="tx-right tx-15">@(Model.Detail?.TotalAmountSalary?.ToString("N2"))</label>
                                </div>
                                <div class="col-sm-3 text-left">
                                    @(Model.Detail?.Currency)
                                </div>
                            </div>

                            <div class="form-group row  mg-b-5  bg-gray-50 text-right">
                                <label for="DateBegin" class="col-sm-3 col-form-label text-left">Setcard Hakediş</label>
                                <div class="col-sm-2">
                                    <label class="tx-right tx-15 col-form-label">@(Model.Detail?.UnitFoodPrice?.ToString("N2"))</label>
                                </div>
                                <div class="col-sm-2">
                                    <label class="tx-right tx-15">@(Model.Detail?.QuantityHourFood?.ToString("N2"))</label>
                                </div>
                                <div class="col-sm-2">
                                    <label class="tx-right tx-15">@(Model.Detail?.TotalAmountFood?.ToString("N2"))</label>
                                </div>
                                <div class="col-sm-3 text-left">
                                    @(Model.Detail?.Currency)
                                </div>
                            </div>

                            <div class="form-group row  mg-b-5  bg-gray-100 text-right font-weight-bold">
                                <label for="DateEnd" class="col-sm-3 col-form-label text-left">Toplam Hakediş / Mesai Çarpanı</label>
                                <div class="col-sm-2">
                                    <label class="tx-right tx-15">@(Model.Detail?.TotalAmountLabor?.ToString("N2"))</label>
                                </div>
                                <div class="col-sm-2 text-left">
                                    <label class="tx-15 text-left">@(Model.Detail?.Currency)</label>
                                </div>
                                <div class="col-sm-2">
                                    <label class="tx-right tx-15">X @(Model.Detail?.UnitPriceMultiplierApplied)</label>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="Description" class="col-sm-3 col-form-label">Açıklama</label>
                                <div class="col-sm-6">
                                    <textarea id="Description" name="Description" rows="3" cols="20" class="form-control" style="width:100% !important;">@(Model.Detail?.Description)</textarea>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-0">
                                <label for="IsActive" class="col-sm-3 col-form-label">Aktif mi?</label>
                                <div class="col-sm-6">
                                    @(Model.Detail?.IsActive == true ? "Aktif" : "Pasif")
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-0">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-6">
                                    <button type="@(Model.Detail.IsActive == true ? "submit":"button")" class="btn btn-primary btn-block">Hakediş Güncelle</button>
                                </div>
                                <div class="col-sm-3">
                                    @if (Model.Detail.IsActive == true)
                                    {
                                        <button type="button" class="btn btn-danger btn-block" onclick="confirm('@(Model.Detail.TotalAmount?.ToString()) tutarlı hakedişi iptal etmek istediğine emin misin?')? DeleteSalaryEarn('@Model.Detail.UID') : ''">Hakediş Sil</button>
                                    }
                                </div>
                            </div>

                        </div>
                    </div>




                }
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script>

        $(function () {
            'use strict'
            $('.select2').select2({
                placeholder: 'Lokasyon Seçiminiz',
                searchInputPlaceholder: 'Search options'
            });

            $('#UpdateDocumentDate').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });

        });
        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.quantity').mask("#.##0", { reverse: true });
            $('.number').mask("##0", { reverse: true });
            $('.money').mask("#.##0,00", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
        });

        function DeleteSalaryEarn(id) {
            window.location.href = "/Salary/DeleteSalaryEarn/" + id;
        }

        function SalaryEarn(EmployeeID) {
            $.ajax({
                method: "GET",
                url: "/Salary/SalaryEarn",
                data: { id: EmployeeID }

            }).done(function (d) {
                $("#UnitPrice").val(d);


            });
        }

    </script>

    <script>


        $(function () {
            'use strict'

            $('.off-canvas-menu').on('click', function (e) {
                e.preventDefault();
                var target = $(this).attr('href');
                $(target).addClass('show');
            });


            $('.off-canvas .close').on('click', function (e) {
                e.preventDefault();
                $(this).closest('.off-canvas').removeClass('show');
            })

            $(document).on('click touchstart', function (e) {
                e.stopPropagation();

                if (!$(e.target).closest('.off-canvas-menu').length) {
                    var offCanvas = $(e.target).closest('.off-canvas').length;
                    if (!offCanvas) {
                        $('.off-canvas.show').addClass('show');
                    }
                }
            });


        });
    </script>
    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}



