@model SalaryControlModel
@{
    ViewBag.Title = "Çalışan Cari İşlemleri";
}

@section style{
    <style type="text/css">
        .form-group {
            margin-bottom: 8px;
        }
    </style>
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Maaş Avans Ödemesi Detay</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body  mg-t-40 mg-lg-t-0">
                <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
                    <div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                                <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Çalışan Cari İşlemleri</li>
                            </ol>
                        </nav>
                        <h4 class="mg-b-0 tx-spacing--1">Maaş Avans Ödemesi Detayı</h4>
                    </div>
                    <div class="d-none d-md-block">
                        <a href="/Salary/NewSalaryPayment" class="btn btn-primary btn-uppercase"><i data-feather="plus-square"></i> &nbsp; Maaş Avans Ödemesi Ekle</a>
                        <a href="/Salary/SalaryPayment" class="btn btn-primary btn-uppercase"><i data-feather="list"></i> &nbsp; Maaş Avans Ödemesi Listesi</a>
                    </div>
                </div>


                @using (Html.BeginForm("EditSalaryPayment", "Salary", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="row row-xs">
                        <div class="col-lg-12">


                            <div class="form-group row">
                                <label for="ActionTypeName" class="col-sm-3 col-form-label">Belge Türü</label>
                                <div class="col-sm-6">
                                    <input id="UID" name="UID" type="hidden" value="@(Model.SalaryDetail.UID)" />
                                    <input id="ID" name="ID" type="hidden" value="@(Model.SalaryDetail.ID)" />
                                    <input id="ActionTypeName" name="ActionTypeName" type="text" class="form-control" autocomplete="off" value="@(Model.SalaryDetail.ActionTypeName)" readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="DocumentNumber" class="col-sm-3 col-form-label">Belge No</label>
                                <div class="col-sm-6">
                                    <input id="DocumentNumber" name="DocumentNumber" type="text" class="form-control" autocomplete="off" placeholder="Tarih" value="@(Model.SalaryDetail.DocumentNumber)" required>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="DocumentDate" class="col-sm-3 col-form-label">Belge Tarihi</label>
                                <div class="col-sm-6">
                                    <input id="DocumentDate" name="DocumentDate" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Tarih" value="@(Model.SalaryDetail.Date?.ToString("yyyy-MM-dd"))" required>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row bg-gray-50">
                                <label for="LocationID" class="col-sm-3 col-form-label">Hangi Lokasyondan</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="LocationID" name="LocationID" required>
                                        @foreach (var item in Model.LocationList.OrderBy(x => x.SortBy))
                                        {
                                            <option value="@item.LocationID" @(item.LocationID == Model.SalaryDetail.LocationID ? "selected" : "")>@($"{item.SortBy.Trim()} {item.LocationName} {item.Description} {item.State}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>


                            <div class="form-group row mg-b-5 bg-gray-50">
                                <label for="FromBankID" class="col-sm-3 col-form-label">Hangi Kasadan / Bankadan</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="FromBankID" name="FromBankID" required>
                                        <optgroup label=" Kasa ">
                                            <option value="0" @(Model.SalaryDetail.FromCashID > 0 ? "selected" : "")>Lokasyon Kasasından</option>
                                        </optgroup>
                                        <optgroup label=" Banka ">
                                            @foreach (var item in Model.BankAccountList.OrderBy(x => x.AccountName))
                                            {
                                                <option value="@item.ID" @(Model.SalaryDetail.FromBankAccountID > 0 && Model.SalaryDetail.FromBankAccountID == item.ID ? "selected" : "")>@($"{item.AccountName} {item.Currency}" )</option>
                                            }
                                        </optgroup>
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                    @($"{Model.SalaryDetail.CashName}{Model.SalaryDetail.BankAccountName}")
                                </div>
                            </div>

                            <div class="form-group row bg-gray-50">
                                <label for="EmployeeID" class="col-sm-3 col-form-label">Hangi Çalışana</label>
                                <div class="col-sm-6">
                                    <select class="form-control select2 w-100" id="EmployeeID" name="EmployeeID" required>
                                        @foreach (var item in Model.EmployeeList.OrderBy(x => x.FullName))
                                        {
                                            <option value="@item.EmployeeID" @(item.EmployeeID == Model.SalaryDetail.ToEmployeeID ? "selected" : "")>@($"{item.FullName} ({item.IsActive})" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row bg-gray-100">
                                <label for="SalaryTypeID" class="col-sm-3 col-form-label">Maaş mı? / Avans mı?</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="SalaryTypeID" name="SalaryTypeID" required>
                                        @foreach (var item in Model.SalaryTypes.OrderBy(x => x.SortBy))
                                        {
                                            <option value="@item.ID" @(item.ID == Model.SalaryDetail.SalaryTypeID ? "selected" : "")>@($"{item.SalaryTypeName}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5 bg-gray-100">
                                <label for="CategoryID" class="col-sm-3 col-form-label">İşlem Kategorisi</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="CategoryID" name="CategoryID" required>
                                        @foreach (var item in Model.SalaryCategories.Where(x => x.IsActive == true).OrderBy(x => x.SortBy))
                                        {
                                            <option value="@item.ID" @(item.ID == Model.SalaryDetail.CategoryID ? "selected" : "")>@($"{item.CategoryName}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>


                            <div class="form-group row">
                                <label for="Amount" class="col-sm-3 col-form-label">Ödenen Tutar</label>
                                <div class="col-sm-4">
                                    <input id="Amount" name="Amount" type="text" class="form-control font-weight-bold tx-15 money" autocomplete="off" min="0" placeholder="Tutar" value="@(Model.SalaryDetail.Amount?.ToString("N2"))" required>
                                </div>
                                <div class="col-sm-2">
                                    <select class="form-control" id="Currency" name="Currency" required>
                                        @foreach (var item in Model.CurrencyList)
                                        {
                                            <option value="@item.Code" @(item.Code == Model.SalaryDetail.Currency ? "selected" : "")>@($"{item.Code} ({item.Sign})")</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="ExchangeRate" class="col-sm-3 col-form-label">Sistem Tutarı</label>
                                <div class="col-sm-2">
                                    <input id="ExchangeRate" name="ExchangeRate" type="text" class="form-control money4" autocomplete="off" min="0" placeholder="Kur" value="@(Model.SalaryDetail.ExchangeRate?.ToString("N4"))" required>
                                </div>
                                <div class="col-sm-2">
                                    <input id="SystemAmount" name="SystemAmount" type="text" class="form-control money" autocomplete="off" min="0" placeholder="Tutar" value="@(Model.SalaryDetail.SystemAmount?.ToString("N2"))" readonly>
                                </div>
                                <div class="col-sm-2">
                                    <select class="form-control" id="SystemCurrency" name="SystemCurrency" readonly>
                                        @foreach (var item in Model.CurrencyList)
                                        {
                                            <option value="@item.Code" @(item.Code == Model.SalaryDetail.SystemCurrency ? "selected" : "")>@($"{item.Code} ({item.Sign})")</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="Description" class="col-sm-3 col-form-label">Açıklama</label>
                                <div class="col-sm-6">
                                    <textarea id="Description" name="Description" rows="5" cols="20" class="form-control" style="width:100% !important;">@(Model.SalaryDetail.Description)</textarea>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-0">
                                <label for="IsActive" class="col-sm-3 col-form-label">Aktif mi?</label>
                                <div class="col-sm-6">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="IsActive" name="IsActive" value="1" @(Model.SalaryDetail.IsActive == true ? "checked" : "")>
                                        <label class="custom-control-label" for="IsActive">Aktif</label>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-0">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-primary btn-block">Nakit Ödeme Güncelle</button>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

@section canvasmenu {
}

@section scripts {
    <script>

        $(function () {
            'use strict'
            $('.select2').select2({
                placeholder: 'Lokasyon Seçiminiz',
                searchInputPlaceholder: 'Search options'
            });

            $('#UpdateDocumentDate').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });

        });

        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.money').mask("#.##0,00", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
        });

        function DeleteCashSalaryPayment(id) {
            window.location.href = "/Salary/DeleteCashSalaryPayment/" + id;
            //$.ajax({
            //    method: "GET",
            //    url: "/Cash/DeleteCashSalaryPayment",
            //    data: { id: id }
            //}).done(function (d) {
            //    $("#DeleteCashSalaryPayment").html(d);
            //});
        }

    </script>
    <script>


        $(function () {
            'use strict'

            $('.off-canvas-menu').on('click', function (e) {
                e.preventDefault();
                var target = $(this).attr('href');
                $(target).addClass('show');
            });


            $('.off-canvas .close').on('click', function (e) {
                e.preventDefault();
                $(this).closest('.off-canvas').removeClass('show');
            })

            $(document).on('click touchstart', function (e) {
                e.stopPropagation();

                if (!$(e.target).closest('.off-canvas-menu').length) {
                    var offCanvas = $(e.target).closest('.off-canvas').length;
                    if (!offCanvas) {
                        $('.off-canvas.show').addClass('show');
                    }
                }
            });


        });
    </script>
    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}


