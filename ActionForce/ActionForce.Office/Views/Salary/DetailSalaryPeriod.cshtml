@model SalaryControlModel
@{
    ViewBag.Title = "Çalışan Cari Hesap";
}

@section style{

}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Maaş Periyodu Detayı</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">


    <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
        <div>
            <h4 class="mg-b-0 tx-spacing--1">@($"{Model.SalaryPeriod.PeriodCode}" ) &nbsp; | &nbsp; @($"{Model.SalaryPeriod.GroupName}" ) &nbsp; | &nbsp; @($"{Model.SalaryPeriod.StatusName}" )</h4>
        </div>
        <div class="d-none d-md-block">
            @if (Model.SalaryPeriod.SalaryPeriodStatusID != Model.SalaryPeriodNextStatus.ID)
            {
                <a href="/Salary/StatusSalaryPeriod/@(Model.SalaryPeriod.UID) " class="btn btn-info btn-uppercase" onclick="return confirm('Durumunu Güncellemek İstediğinize Emin misiniz?')">
                    Durumunu <b class="tx-16"> @(Model.SalaryPeriodNextStatus.StatusName) </b> Olarak Güncelle
                </a>
            }
            else
            {
                <a href="/Salary/StatusSalaryPeriod/@(Model.SalaryPeriod.UID) " class="btn btn-info btn-uppercase" onclick="return confirm('Durumunu Güncellemek İstediğinize Emin misiniz?')">
                    Durumu <b class="tx-16"> @(Model.SalaryPeriodNextStatus.StatusName) </b> Olarak Güncel
                </a>
            }


        </div>
    </div>

    <div>

        @if (Model.SalaryPeriod != null && Model.SalaryPeriod.GroupType == 1)
        {
            <div class="table">
                <table class="table table-sm table-hover">
                    <thead>


                        <tr>
                            <th colspan="6" style="border-left:1px solid #808080;">Personel Bilgisi</th>
                            <th colspan="7" class="bg-warning-light" style="border-left:1px solid #808080;">Hakedişler</th>
                            <th colspan="6" class="bg-primary-light" style="border-left:1px solid #808080;">Ödemeler</th>
                            <th style="border-left: 1px solid #808080; border-right: 1px solid #808080;">Bakiye</th>
                        </tr>
                        <tr>
                            <th style="border-left:1px solid #808080;">Adı</th>
                            <th>TCKN</th>
                            <th>Phone</th>
                            <th>FoodCard</th>
                            <th>IBAN</th>
                            <th>Bank</th>

                            <th class="text-right bg-warning-light" style="border-left:1px solid #808080;">Maaş</th>
                            <th class="text-right bg-warning-light">İzin</th>
                            <th class="text-right bg-warning-light">F.Mesai</th>
                            <th class="text-right bg-warning-light">Prim</th>
                            <th class="text-right bg-warning-light">Resmi</th>
                            <th class="text-right bg-warning-light">Diğer</th>
                            <th class="text-right bg-warning-light">Toplam</th>

                            <th class="text-right bg-primary-light" style="border-left:1px solid #808080;">Avans Maaş</th>
                            <th class="text-right bg-primary-light">Kesinti</th>
                            <th class="text-right bg-primary-light">Banka</th>
                            <th class="text-right bg-primary-light">Manuel</th>
                            <th class="text-right bg-primary-light">Diğer</th>
                            <th class="text-right bg-primary-light">Toplam</th>

                            <th class="text-right" style="border-left: 1px solid #808080; border-right: 1px solid #808080;">Kalan </th>
                        </tr>
                        <tr class="table-secondary">
                            <td class="tx-sm-13 bold" style="border-left:1px solid #808080;" colspan="6">Toplam</td>


                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold" style="border-left:1px solid #808080;">@(Model.SalaryPeriodComputeSum.SalaryTotal?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold">@(Model.SalaryPeriodComputeSum.PermitTotal?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold">@(Model.SalaryPeriodComputeSum.ExtraShiftTotal?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold">@(Model.SalaryPeriodComputeSum.PremiumTotal?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold">@(Model.SalaryPeriodComputeSum.FormalTotal?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold">@(Model.SalaryPeriodComputeSum.OtherTotal?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold">@(Model.SalaryPeriodComputeSum.TotalProgress?.ToString("N2"))</td>


                            <td class="tx-sm-13 text-right bg-primary-light font-weight-bold" style="border-left:1px solid #808080;">@(Model.SalaryPeriodComputeSum.PrePaymentAmount?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(Model.SalaryPeriodComputeSum.SalaryCutAmount?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(Model.SalaryPeriodComputeSum.BankPaymentAmount?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(Model.SalaryPeriodComputeSum.ManuelPaymentAmount?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(Model.SalaryPeriodComputeSum.OtherPaymentAmount?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(Model.SalaryPeriodComputeSum.TotalPaymentAmount?.ToString("N2"))</td>

                            <td class="tx-sm-13 text-right font-weight-bold" style="border-left: 1px solid #808080; border-right: 1px solid #808080;">@(Model.SalaryPeriodComputeSum.TotalBalance?.ToString("N2"))</td>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var emp in Model.SalaryPeriodComputes.OrderBy(x => x.FullName))
                        {
                            <tr>


                                <td class="tx-sm-13 bold" style="border-left:1px solid #808080;">@(emp.FullName)</td>
                                <td class="tx-sm-13">@(emp.IdentityNumber?.Length > 3 ? $"{emp.IdentityNumber?.Substring(0, 3)}..":"")</td>
                                <td class="tx-sm-13">@(emp.PhoneNumber?.Length > 5 ? $"{emp.PhoneNumber.Substring(0, 5)}..":"")</td>
                                <td class="tx-sm-13">@(emp.FoodCard?.Length > 5 ? $"{emp.FoodCard.Substring(0, 5)}..":"")</td>
                                <td class="tx-sm-13">@(emp.IBAN?.Length > 4 ? $"{emp.IBAN.Substring(0, 4)}..":"")</td>
                                <td class="tx-sm-13">@(emp.BankName?.Length > 4 ? $"{emp.BankName.Substring(0, 4)}..":"")</td>

                                <td class="tx-sm-13 text-right bg-warning-light @(emp.SalaryTotal != 0 ? "font-weight-bold":"")" style="border-left:1px solid #808080;">@(emp.SalaryTotal?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right bg-warning-light @(emp.PermitTotal != 0 ? "font-weight-bold":"")">@(emp.PermitTotal?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right bg-warning-light @(emp.ExtraShiftTotal != 0 ? "font-weight-bold":"")">@(emp.ExtraShiftTotal?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right bg-warning-light @(emp.PremiumTotal != 0 ? "font-weight-bold":"")">@(emp.PremiumTotal?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right bg-warning-light @(emp.FormalTotal != 0 ? "font-weight-bold":"")">@(emp.FormalTotal?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right bg-warning-light @(emp.OtherTotal != 0 ? "font-weight-bold":"")">@(emp.OtherTotal?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right bg-warning-light @(emp.TotalProgress != 0 ? "font-weight-bold":"")">@(emp.TotalProgress?.ToString("N2"))</td>

                                <td class="tx-sm-13 text-right bg-primary-light" style="border-left:1px solid #808080;">@(emp.PrePaymentAmount?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right bg-primary-light">@(emp.SalaryCutAmount?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right bg-primary-light">@(emp.BankPaymentAmount?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right bg-primary-light">@(emp.ManuelPaymentAmount?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right bg-primary-light">@(emp.OtherPaymentAmount?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right bg-primary-light">@(emp.TotalPaymentAmount?.ToString("N2"))</td>


                                <td class="tx-sm-13 text-right" style="border-left: 1px solid #808080; border-right: 1px solid #808080;">@(emp.TotalBalance?.ToString("N2"))</td>
                            </tr>
                        }


                    </tbody>
                    <tfoot>
                        <tr class="table-secondary">
                            <td class="tx-sm-13 bold" style="border-left:1px solid #808080;" colspan="6">Toplam</td>


                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold" style="border-left:1px solid #808080;">@(Model.SalaryPeriodComputeSum.SalaryTotal?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold">@(Model.SalaryPeriodComputeSum.PermitTotal?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold">@(Model.SalaryPeriodComputeSum.ExtraShiftTotal?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold">@(Model.SalaryPeriodComputeSum.PremiumTotal?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold">@(Model.SalaryPeriodComputeSum.FormalTotal?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold">@(Model.SalaryPeriodComputeSum.OtherTotal?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold">@(Model.SalaryPeriodComputeSum.TotalProgress?.ToString("N2"))</td>


                            <td class="tx-sm-13 text-right bg-primary-light font-weight-bold" style="border-left:1px solid #808080;">@(Model.SalaryPeriodComputeSum.PrePaymentAmount?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(Model.SalaryPeriodComputeSum.SalaryCutAmount?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(Model.SalaryPeriodComputeSum.BankPaymentAmount?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(Model.SalaryPeriodComputeSum.ManuelPaymentAmount?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(Model.SalaryPeriodComputeSum.OtherPaymentAmount?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(Model.SalaryPeriodComputeSum.TotalPaymentAmount?.ToString("N2"))</td>

                            <td class="tx-sm-13 text-right font-weight-bold" style="border-left: 1px solid #808080; border-right: 1px solid #808080;">@(Model.SalaryPeriodComputeSum.TotalBalance?.ToString("N2"))</td>

                        </tr>

                    </tfoot>
                </table>
            </div>
        }
        else if (Model.SalaryPeriod != null && Model.SalaryPeriod.GroupType == 2)
        {
            <div class="table">
                <table class="table table-sm table-hover">
                    <thead>


                        <tr>
                            <th colspan="6" style="border-left:1px solid #808080;">Personel Bilgisi</th>
                            <th colspan="1" class="bg-warning-light" style="border-left:1px solid #808080;">Hakedişler</th>
                            <th colspan="1" class="bg-primary-light" style="border-left:1px solid #808080;">Ödemeler</th>
                            <th style="border-left: 1px solid #808080; border-right: 1px solid #808080;">Bakiye</th>
                        </tr>
                        <tr>
                            <th style="border-left:1px solid #808080;">Adı</th>
                            <th>TCKN</th>
                            <th>Phone</th>
                            <th>FoodCard</th>
                            <th>IBAN</th>
                            <th>Bank</th>

                            <th class="text-right bg-warning-light" style="border-left:1px solid #808080;">Hakediş</th>
                            <th class="text-right bg-primary-light" style="border-left:1px solid #808080;">Ödeme</th>
                            <th class="text-right" style="border-left: 1px solid #808080; border-right: 1px solid #808080;">Kalan </th>
                        </tr>

                        <tr class="table-secondary">
                            <td class="tx-sm-13 bold" style="border-left:1px solid #808080;" colspan="6">Toplam</td>

                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold" style="border-left:1px solid #808080;">@(Model.SalaryPeriodComputeSum.FoodCardTotal?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right bg-primary-light font-weight-bold" style="border-left:1px solid #808080;">@(Model.SalaryPeriodComputeSum.FoodCardPaymentAmount?.ToString("N2"))</td>
                            <td class="tx-sm-13 text-right font-weight-bold" style="border-left: 1px solid #808080; border-right: 1px solid #808080;">@(Model.SalaryPeriodComputeSum.TotalBalance?.ToString("N2"))</td>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var emp in Model.SalaryPeriodComputes.OrderBy(x => x.FullName))
                        {
                            <tr>
                                <td class="tx-sm-13 bold" style="border-left:1px solid #808080;">@(emp.FullName)</td>
                                <td class="tx-sm-13">@(emp.IdentityNumber)</td>
                                <td class="tx-sm-13">@(emp.PhoneNumber?.Length > 5 ? $"{emp.PhoneNumber.Substring(0, 5)}..":"")</td>
                                <td class="tx-sm-13">@(emp.FoodCard)</td>
                                <td class="tx-sm-13">@(emp.IBAN?.Length > 4 ? $"{emp.IBAN.Substring(0, 4)}..":"")</td>
                                <td class="tx-sm-13">@(emp.BankName?.Length > 4 ? $"{emp.BankName.Substring(0, 4)}..":"")</td>

                                <td class="tx-sm-13 text-right bg-warning-light @(emp.SalaryTotal != 0 ? "font-weight-bold":"")" style="border-left:1px solid #808080;">@(emp.FoodCardTotal?.ToString("N2"))</td>

                                <td class="tx-sm-13 text-right bg-primary-light" style="border-left:1px solid #808080;">@(emp.FoodCardPaymentAmount?.ToString("N2"))</td>

                                <td class="tx-sm-13 text-right" style="border-left: 1px solid #808080; border-right: 1px solid #808080;">@(emp.TotalBalance?.ToString("N2"))</td>
                            </tr>
                        }


                    </tbody>
                    <tfoot>
                        <tr class="table-secondary">
                            <td class="tx-sm-13 bold" style="border-left:1px solid #808080;" colspan="6">Toplam</td>

                            <td class="tx-sm-13 text-right bg-warning-light font-weight-bold" style="border-left:1px solid #808080;">@(Model.SalaryPeriodComputeSum.FoodCardTotal?.ToString("N2"))</td>

                            <td class="tx-sm-13 text-right bg-primary-light font-weight-bold" style="border-left:1px solid #808080;">@(Model.SalaryPeriodComputeSum.FoodCardPaymentAmount?.ToString("N2"))</td>

                            <td class="tx-sm-13 text-right font-weight-bold" style="border-left: 1px solid #808080; border-right: 1px solid #808080;">@(Model.SalaryPeriodComputeSum.TotalBalance?.ToString("N2"))</td>

                        </tr>
                    </tfoot>
                </table>
            </div>
        }



        <footer class="content-footer">
            <div>
                <span>&copy; @DateTime.Now.Year UFE Group LLC </span>
            </div>

        </footer>

    </div>
</div>



@section scripts {
    <script>
        $(function () {

            $('#LocationID').select2({
                placeholder: 'Lokasyon Seçiminiz',
                searchInputPlaceholder: 'Search options',
                allowClear: true
            });

            $('#EmployeeID').select2({
                placeholder: 'Çalışan Seçiminiz',
                searchInputPlaceholder: 'Search options',
                allowClear: true
            });

            var dateFormat = 'yy-mm-dd',
                from = $('#DateBegin')
                    .datepicker({
                        defaultDate: '+1w',
                        numberOfMonths: 2,
                        dateFormat: "yy-mm-dd",
                        dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                        monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                        firstDay: 1
                    })
                    .on('change', function () {
                        to.datepicker('option', 'minDate', getDate(this));
                    }),
                to = $('#DateEnd').datepicker({
                    defaultDate: '+1w',
                    numberOfMonths: 2,
                    dateFormat: "yy-mm-dd",
                    dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                    monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                    firstDay: 1
                })
                    .on('change', function () {
                        from.datepicker('option', 'maxDate', getDate(this));
                    });

            function getDate(element) {
                var date;
                try {
                    date = $.datepicker.parseDate(dateFormat, element.value);
                } catch (error) {
                    date = null;
                }

                return date;

            }
        });


    </script>
}