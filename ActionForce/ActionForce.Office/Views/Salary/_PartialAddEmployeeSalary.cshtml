@model SalaryControlModel
@using (Ajax.BeginForm("SaveSalaryUnit", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "SalaryUnitList", InsertionMode = InsertionMode.Replace }))
{
    @Html.AntiForgeryToken()
    <div class="card-header d-flex align-items-center justify-content-between">
        <h6 class="mg-b-0">@(Model.UnitSalary.FullName) <input id="EmployeeID" name="EmployeeID" value="@(Model.UnitSalary.EmployeeID)" type="hidden" /></h6>
    </div>
    <div class="card-body pd-0">
        <form>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="inputEmail4">Tarih</label>
                    <input id="DateStart" name="DateStart" type="text" class="form-control" placeholder="Tarih" value="@(Model.UnitSalary.DateStart != null ? Model.UnitSalary.DateStart.Value.ToString("yyyy-MM-dd") : DateTime.Now.ToString("yyyy-MM-dd"))" required>
                </div>
                <div class="form-group col-md-3">
                    <label for="inputPassword4">Saatlik Ücret</label>
                    <input id="Hourly" name="Hourly" type="text" class="form-control" value="@(Model.UnitSalary.Hourly?.ToString("N2"))" placeholder="Saatlik Ücret" required>
                </div>
                <div class="form-group col-md-3">
                    <label for="inputPassword4">Mesai Ücret</label>
                    <input id="HourlyExtend" name="HourlyExtend" type="text" class="form-control" value="@(Model.UnitSalary.HourlyExtend?.ToString("N2"))" placeholder="Mesai Ücret" required>
                </div>
                <div class="form-group col-md-1">
                    <label for="inputPassword4">Oran</label>
                    <input id="ExtendMultiplyRate" name="ExtendMultiplyRate" type="text" class="form-control" value="@(Model.UnitSalary.ExtendMultiplyRate?.ToString("N2"))" placeholder="Oran" required>
                </div>
                <div class="form-group col-md-2">
                    <label for="inputPassword4">&nbsp;</label>
                    <input id="SaveSalaryUnit" type="submit" class="btn btn-primary btn-block" value="Ücret Kaydet" />
                    @*<button class="btn btn-primary btn-block">Ücret Kaydet</button>*@
                </div>
            </div>




        </form>

    </div>
    <div class="card-footer text-center tx-13">
        @*<a href="" class="link-03">View All Transactions <i class="icon ion-md-arrow-down mg-l-5"></i></a>*@
    </div><!-- card-footer -->
}

<div id="SalaryUnitList">
    @{Html.RenderPartial("_PartialEmployeeSalaryList", Model); }
</div>
