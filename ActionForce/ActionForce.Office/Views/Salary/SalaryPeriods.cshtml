@model SalaryControlModel
@{
    ViewBag.Title = "Maaş Periyotları";
}

@section style{

}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Maaş Periyotları</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">

    @using (Html.BeginForm("FilterSalaryPeriods", "Salary", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
    <div class="form-row align-items-end">

        <div class="form-group col-md-2 d-flex align-items-end">
            <select class="form-control" id="Year" name="Year">
                <option value="" label="Yıl Seçiminiz"></option>
                @foreach (var item in Model.Years)
                {
                    <option value="@(item)" @(Model.Filters?.Year == item ? "selected" : "")>@(Html.Raw($"<strong>{item}</strong>"))</option>
                }
            </select>
        </div>

        <div class="form-group col-md-2 d-flex align-items-end">
            <select class="form-control" id="GroupID" name="GroupID">
                <option value="" label="Grup Seçiminiz"></option>
                @foreach (var item in Model.SalaryPeriodGroups)
                {
                    <option value="@(item.ID)" @(Model.Filters?.GroupID == item.ID ? "selected" : "")>@(Html.Raw($"<strong>{item.GroupName}</strong>"))</option>
                }
            </select>
        </div>

        <div class="form-group col-md-2 d-flex align-items-end">
            <select class="form-control" id="StatusID" name="StatusID">
                <option value="" label="Durum Seçiminiz"></option>
                @foreach (var item in Model.SalaryPeriodStatus)
                {
                    <option value="@(item.ID)" @(Model.Filters?.StatusID == item.ID ? "selected" : "")>@(Html.Raw($"<strong>{item.StatusName}</strong>"))</option>
                }
            </select>
        </div>

        <div class="form-group col-md-2 d-flex align-items-end ">
            <button class="btn btn-info btn-block" type="submit" id="btnsearch">Ara</button>
        </div>

        <div class="form-group col-md-2 d-flex align-items-end ">
            <a href="/Salary/SalaryResult" class="btn btn-primary btn-block">Maaş Cetveli</a>
        </div>
    </div>

    }



    <div>
        @if (Model.SalaryPeriods != null && Model.SalaryPeriods.Count > 0)
        {
            <div class="table table-striped">
                <table class="table table-sm table-hover">
                    <thead>

                        <tr class="tx-16">
                            <th>Kodu</th>
                            <th>Grubu</th>
                            <th>Durumu</th>
                            <th>Bölümü</th>
                            <th>Başlangıç</th>
                            <th>Bitiş</th>

                            <th class="text-right">Hakediş</th>
                            <th class="text-right">Ödeme</th>
                            <th class="text-right">Bakiye</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.SalaryPeriods)
                        {
                            <tr>
                                <td class="tx-sm-13 font-weight-bold"><a href="@("/Salary/DetailSalaryPeriod/" + @item.UID)">@item.PeriodCode</a></td>
                                <td class="tx-sm-13 font-weight-bold" style="color:@(item.SalaryPeriodGroupID == 1 ? "darkorchid": item.SalaryPeriodGroupID == 2 ? "darkblue": item.SalaryPeriodGroupID == 3 ? "darkorange":"black");">@(item.GroupName)</td>
                                <td class="tx-sm-13 font-weight-bold">@(item.StatusName)</td>
                                <td class="tx-sm-13">@(item.AreaName)</td>
                                <td class="tx-sm-13">@(item.DateBegin?.ToLongDateString())</td>
                                <td class="tx-sm-13">@(item.DateEnd?.ToLongDateString())</td>


                                <td class="tx-sm-13 text-right">@(item.TotalAmount?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right">@(item.PaymentAmount?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right">@(item.BalanceAmount?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right">@(item.Currency)</td>
                                <td class="tx-sm-13 text-right">
                                    <a href="@("/Salary/DetailSalaryPeriod/" + @item.UID)" style="color:darkblue;">
                                        <svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" height="24px" viewBox="0 0 24 24" width="24px" fill="darkblue"><g><rect fill="none" height="24" width="24" /><path d="M20,6h-8l-2-2H4C2.9,4,2.01,4.9,2.01,6L2,18c0,1.1,0.9,2,2,2h16c1.1,0,2-0.9,2-2V8C22,6.9,21.1,6,20,6z M20,18L4,18V6h5.17 l2,2H20V18z M18,12H6v-2h12V12z M14,16H6v-2h8V16z" /></g></svg>
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        }
        else
        {
            <div class="table">
                Sonuç Bulanamadı. Lütfen filtreleme yapınız.
            </div>
        }

        <footer class="content-footer">
            <div>
                <span>&copy; @DateTime.Now.Year UFE Group LLC </span>
            </div>

        </footer>

    </div>
</div>


@section scripts {

    <script>
        $(function () {

            $('.select2').select2({
                placeholder: 'Lokasyon Seçiminiz',
                searchInputPlaceholder: 'Search options',
                allowClear: true
            });



        });


    </script>
    <script>
        $(function () {
            'use strict'

            $('.off-canvas-menu').on('click', function (e) {
                e.preventDefault();
                var target = $(this).attr('href');
                $(target).addClass('show');
            });


            $('.off-canvas .close').on('click', function (e) {
                e.preventDefault();
                $(this).closest('.off-canvas').removeClass('show');
            })

            $(document).on('click touchstart', function (e) {
                e.stopPropagation();

                if (!$(e.target).closest('.off-canvas-menu').length) {
                    var offCanvas = $(e.target).closest('.off-canvas').length;
                    if (!offCanvas) {
                        $('.off-canvas.show').addClass('show');
                    }
                }
            });


        });
    </script>
    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}
