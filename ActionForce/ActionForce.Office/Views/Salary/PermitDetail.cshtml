@model SalaryControlModel
@{
    ViewBag.Title = "Çalışan İzin İşlemleri";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Çalışan İzin Detayı</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body  mg-t-40 mg-lg-t-0">
                <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
                    <div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                                <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Çalışan İzin İşlemleri</li>
                            </ol>
                        </nav>
                        <h4 class="mg-b-0 tx-spacing--1">İzin Detayı</h4>
                    </div>
                    <div class="d-none d-md-block">
                        <a href="/Salary/Permit" class="btn btn-primary btn-uppercase"><i data-feather="list"></i> &nbsp; İzin Listesi</a>
                    </div>
                </div>


                @using (Html.BeginForm("EditPermit", "Salary", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="row row-xs">
                        <div class="col-lg-12">

                            <div class="form-group row mg-b-0">
                                <label for="ActionTypeName" class="col-sm-3 col-form-label">İşlem Türü</label>
                                <div class="col-sm-6">
                                    <span id="ActionTypeName" name="ActionTypeName" class="tx-light tx-15">@(Model.CurrentPermit?.ActionTypeName?.ToString())</span>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5">
                                <label for="DocumentNumber" class="col-sm-3 col-form-label">Doküman No</label>
                                <div class="col-sm-6">
                                    <input id="DocumentNumber" name="DocumentNumber" type="text" class="form-control" autocomplete="off" placeholder="Doküman No" value="@(Model.CurrentPermit.DocumentNumber)" required readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="DocumentDate" class="col-sm-3 col-form-label">Tarih</label>
                                <div class="col-sm-6">
                                    <input id="Date" name="Date" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Tarih" value="@(Model.CurrentPermit.Date?.ToString("yyyy-MM-dd"))" required>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5 bg-gray-50">
                                <label for="LocationID" class="col-sm-3 col-form-label">Lokasyon</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="LocationID" name="LocationID" required>
                                        @foreach (var item in Model.LocationList.OrderBy(x => x.SortBy))
                                        {
                                            <option value="@item.LocationID" @(item.LocationID == Model.CurrentPermit.LocationID ? "selected" : "")>@($"{item?.SortBy?.Trim()} {item?.LocationName} {item?.Description} {item?.State}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row bg-gray-50">
                                <label for="EmployeeID" class="col-sm-3 col-form-label">Çalışan</label>
                                <div class="col-sm-6">
                                    <select class="form-control select2" id="EmployeeID" name="EmployeeID" required>
                                        @foreach (var item in Model.EmployeeList.OrderBy(x => x.FullName))
                                        {
                                            <option value="@item.EmployeeID" @(item.EmployeeID == Model.CurrentPermit.EmployeeID ? "selected" : "")>@($"{item.FullName} ({item.IsActive})" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row bg-gray-100">
                                <label for="PermitTypeID" class="col-sm-3 col-form-label">İzin Türü</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="PermitTypeID" name="PermitTypeID" required>
                                        @foreach (var item in Model.PermitTypes.Where(x => x.IsActive == true).OrderBy(x => x.SortBy))
                                        {
                                            <option value="@item.ID" @(item.ID == Model.CurrentPermit.PermitTypeID ? "selected" : "")>@($"{item.TypeCode.Trim()} - {item.PermitTypeName.Trim()} ({(item.IsPaidTo == true ? "Ücretli (Ücreti Ödenir)" : "Ücretsiz (Ücreti Kesilir)")})" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row  mg-b-5">
                                <label for="DateBegin" class="col-sm-3 col-form-label">İzin Başlangıç Tarihi</label>
                                <div class="col-sm-3">
                                    <input id="DateBegin" name="DateBegin" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Tarih" value="@(Model.CurrentPermit.DateBegin?.Date.ToString("yyyy-MM-dd"))" required>
                                </div>
                                <div class="col-sm-3">
                                    <input id="DateBeginHour" name="DateBeginHour" type="text" class="form-control hourfull" autocomplete="off" placeholder="Saat" value="@(Model.CurrentPermit.DateBegin?.ToString("HH\\:mm\\:ss"))" required>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row  mg-b-5">
                                <label for="DateEnd" class="col-sm-3 col-form-label">İzin Bitiş Tarihi</label>
                                <div class="col-sm-3">
                                    <input id="DateEnd" name="DateEnd" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Tarih" value="@(Model.CurrentPermit.DateEnd?.Date.ToString("yyyy-MM-dd"))" required>
                                </div>
                                <div class="col-sm-3">
                                    <input id="DateEndHour" name="DateEndHour" type="text" class="form-control hourfull" autocomplete="off" placeholder="Saat" value="@(Model.CurrentPermit.DateEnd?.ToString("HH\\:mm\\:ss"))" required>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="ReturnWorkDate" class="col-sm-3 col-form-label">İşe Başlangıç Tarihi</label>
                                <div class="col-sm-3">
                                    <input id="ReturnWorkDate" name="ReturnWorkDate" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Tarih" value="@(Model.CurrentPermit.ReturnWorkDate?.Date.ToString("yyyy-MM-dd"))" required>
                                </div>
                                <div class="col-sm-3"> </div>
                                <div class="col-sm-3">
                                </div>
                            </div>



                            <div class="form-group row mg-b-5">
                                <label for="UnitPrice" class="col-sm-3 col-form-label">Saat Ücreti</label>
                                <div class="col-sm-3">
                                    <input id="UnitPrice" name="UnitPrice" type="text" class="form-control money text-right" autocomplete="off" placeholder="Saat Ücreti" value="@(Model.CurrentPermit.UnitPrice?.ToString("N2"))" readonly>
                                </div>
                                <div class="col-sm-3">
                                    <input id="Currency" name="Currency" type="text" class="form-control" autocomplete="off" placeholder="Para" value="@(Model.CurrentPermit.Currency)" readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row mg-b-5">
                                <label for="MinuteDuration" class="col-sm-3 col-form-label">İzinli Olduğu Süre (Dk)</label>
                                <div class="col-sm-3">
                                    <input id="MinuteDuration" name="MinuteDuration" type="text" class="form-control money text-right" autocomplete="off" placeholder="İzinli Olduğu Süre" value="@(Model.CurrentPermit.MinuteDuration?.ToString("N2"))" readonly>
                                </div>
                                <div class="col-sm-3">
                                    <input id="MinuteDurationdk" name="MinuteDurationdk" type="text" class="form-control" autocomplete="off" placeholder="Para" value="Dakika" readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>
                            <div class="form-group row mg-b-5">
                                <label for="QuantityHour" class="col-sm-3 col-form-label">Kesinti Uygulanacak Saat</label>
                                <div class="col-sm-3">
                                    <input id="QuantityHour" name="QuantityHour" type="text" class="form-control money text-right" autocomplete="off" placeholder="Kesinti Uygulanacak Saat" value="@(Model.CurrentPermit.QuantityHour?.ToString("N2"))" readonly>
                                </div>
                                <div class="col-sm-3">
                                    <input id="Currency" name="Currency" type="text" class="form-control" autocomplete="off" placeholder="Saat" value="Saat" readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="TotalAmount" class="col-sm-3 col-form-label">Kesinti Uygulanacak Tutar</label>
                                <div class="col-sm-3">
                                    <input id="TotalAmount" name="TotalAmount" type="text" class="form-control money text-right" autocomplete="off" placeholder="İzin Kesinti Tutarı" value="@(Model.CurrentPermit.TotalAmount?.ToString("N2"))" readonly>
                                </div>
                                <div class="col-sm-3">
                                    <input id="Currency" name="Currency" type="text" class="form-control" autocomplete="off" placeholder="Para" value="@(Model.CurrentPermit.Currency)" readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>








                            <div class="form-group row">
                                <label for="Description" class="col-sm-3 col-form-label">Açıklama</label>
                                <div class="col-sm-6">
                                    <textarea id="Description" name="Description" rows="5" cols="20" class="form-control" style="width:100% !important;">@(Model.CurrentPermit.Description)</textarea>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row bg-gray-50">
                                <label for="StatusID" class="col-sm-3 col-form-label">Aşaması</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="StatusID" name="StatusID" required>
                                        @foreach (var item in Model.PermitStatus.OrderBy(x => x.SortBy))
                                        {
                                            <option value="@item.ID" @(item.ID == Model.CurrentPermit.StatusID ? "selected" : "") @(item.ID == 2 ? "style=color:red;" : "")>@($"{item.StatusName}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-0">
                                <label for="IsActive" class="col-sm-3 col-form-label">Aktif mi?</label>
                                <div class="col-sm-6">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="IsActive" name="IsActive" value="1" @(Model.CurrentPermit.IsActive == true ? "checked" : "")>
                                        <label class="custom-control-label" for="IsActive">Aktif</label>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-0">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-6">
                                    <input id="ID" name="ID" type="hidden" value="@(Model.CurrentPermit.ID)" />
                                    <input id="UID" name="UID" type="hidden" value="@(Model.CurrentPermit.UID)" />
                                    <input id="ActionTypeID" name="ActionTypeID" type="hidden" value="@(Model.CurrentPermit.ActionTypeID)" />

                                    <button type="submit" class="btn btn-primary btn-block">Çalışan İznini Güncelle</button>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                        </div>
                    </div>
                }

                <div class="row row-xs bg-gray-100 mg-b-0 mg-t-40">
                    <div class="col-sm-3 pd-t-10 pd-b-10">
                        <b>Kayıt Tarihçesi</b>
                    </div>
                    <div class="col-sm-3 pd-t-10">@(Html.Raw($"<b>Kayıt Yeri </b> : {Model.CurrentPermit.EnvironmentName}")) </div>
                    <div class="col-sm-3 pd-t-10">@(Html.Raw($"<b>Kaydeden </b> : {Model.CurrentPermit.RecorderEmployeeFullName} {Model.CurrentPermit.RecordDate} ")) </div>
                    <div class="col-sm-3 pd-t-10">@(Model.CurrentPermit.UpdateDate != null ? Html.Raw($"<b>Güncelleyen </b> : {Model.CurrentPermit.UpdaterEmployeeFullName} {Model.CurrentPermit.UpdateDate} ") : Html.Raw("")) </div>

                </div>

                @if (Model.LogList != null && Model.LogList.Count() > 0)
                {
                    <div class="row row-xs">
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Kişi</th>
                                    <th>Ortam</th>
                                    <th>İşlem</th>
                                    <th>Açıklama</th>
                                    <th>Alan</th>
                                    <th>Önceki</th>
                                    <th>Yeni</th>
                                    <th>Başarılı?</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.LogList.OrderBy(x => x.RecordDate))
                                {
                                    <tr>
                                        <td>@(item.RecordDate)</td>
                                        <td>@(item.RecordEmployee)</td>
                                        <td>@(item.Environment)</td>
                                        <td>@(item.ProcessType)</td>
                                        <td>@(item.ResultMessage)</td>
                                        <td>@(item.FieldName)</td>
                                        <td>@(item.OldValue)</td>
                                        <td>@(item.NewValue)</td>
                                        <td>@(item.IsSuccess)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

