@model SalaryControlModel

<table class="table table-primary table-hover table-striped mg-b-0">
    <thead>
        <tr class="table-active">
            <th></th>
            <th scope="col">
                Adı Soyadı
            </th>
            <th>Tarih</th>
            <th class="tx-right">Saat Ücreti</th>
            <th>Birim</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.UnitSalaryDistList)
        {
            <tr>
                <td><span class="@(employee.IsActive == true ? "tx-success":"tx-danger")">&#8226;</span></td>
                <td scope="row" class="@(employee.IsActive == true ? "":"tx-danger")"><a href="#" onclick="SalaryUnit(@employee.EmployeeID);"><b>@(employee.FullName)</b></a></td>
                <td>@(employee.DateStart?.Date.ToShortDateString() )</td>
                <td class="tx-right font-weight-bold">@(employee.Hourly?.ToString("N2"))</td>
                <td>@(employee.Money)</td>
            </tr>
        }
    </tbody>
</table>
