@model SalaryControlModel
@{
    ViewBag.Title = "Çalışan Cari İşlemleri";
}

@section style{
    <style type="text/css">
        .form-group {
            margin-bottom: 8px;
        }
    </style>
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Ücret Hakediş Ekleme</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body  mg-t-40 mg-lg-t-0">
                <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
                    <div>
                        <h4 class="mg-b-0 tx-spacing--1">Yeni Hakediş</h4>
                    </div>
                    <div class="d-none d-md-block">
                        <a href="/Salary/Index" class="btn btn-primary btn-uppercase"><i data-feather="list"></i> &nbsp; Hakediş Listesi</a>
                    </div>
                </div>


                @using (Html.BeginForm("AddSalaryEarn", "Salary", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="row row-xs">
                        <div class="col-lg-12">

                            <div class="form-group row mg-b-0 bg-gray-50  font-weight-bold">
                                <label for="ActionTypeID" class="col-sm-3 col-form-label">İşlem Kategorisi</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="ActionTypeID" name="ActionTypeID">
                                        @foreach (var item in Model.CashActionTypes)
                                        {
                                            <option value="@item.ID">@($"{item.SortBy} ({item.Name})")</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                           

                            <div class="form-group row  bg-gray-50">
                                <label for="DocumentDate" class="col-sm-3 col-form-label">Tarih</label>
                                <div class="col-sm-6">
                                    <input id="DocumentDate" name="DocumentDate" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Tarih" value="@(DateTime.Now.ToString("yyyy-MM-dd"))" required>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5 bg-gray-50">
                                <label for="LocationID" class="col-sm-3 col-form-label">Lokasyon</label>
                                <div class="col-sm-6">
                                    <select class="form-control select2" id="LocationID" name="LocationID" required>
                                        @foreach (var item in Model.LocationList)
                                        {
                                            <option value="@item.LocationID">@($"{item.SortBy}  {item.LocationName} {item.State} {item.Description}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row bg-gray-50 font-weight-bold">
                                <label for="EmployeeID" class="col-sm-3 col-form-label">Çalışan</label>
                                <div class="col-sm-6">
                                    <select class="form-control select2" id="EmployeeID" name="EmployeeID" required>
                                        @foreach (var item in Model.EmployeeList)
                                        {
                                            <option value="@item.EmployeeID">@(Html.Raw($"{item.FullName} ({item.IsActive})"))</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            

                             <div class="form-group row mg-b-5 bg-gray-50 font-weight-bold">
                                <label for="Price" class="col-sm-3 col-form-label">Tutar</label>
                                <div class="col-sm-6">
                                    <input id="Price" name="Price" type="text" class="form-control money" autocomplete="off" placeholder="Tutar" required>
                                    <input id="Currency" name="Currency" type="hidden" value="TRL" />
                                </div>
                                <div class="col-sm-3">₺</div>
                            </div>

                          

                            <div class="form-group row">
                                <label for="Description" class="col-sm-3 col-form-label">Açıklama</label>
                                <div class="col-sm-6">
                                    <textarea id="Description" name="Description" rows="3" cols="20" class="form-control" style="width:100% !important;"></textarea>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-0">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-primary btn-block">Hakediş Ekle</button>
                                </div>
                                <div class="col-sm-3">
                                    
                                </div>
                            </div>

                        </div>
                    </div>




                }
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script>

        $(function () {
            'use strict'
            $('#LocationID').select2({
                placeholder: 'Lokasyon Seçiminiz',
                searchInputPlaceholder: 'Search options',
                allowClear: true
            });

            $('#EmployeeID').select2({
                placeholder: 'Çalışan Seçiminiz',
                searchInputPlaceholder: 'Search options',
                allowClear: true
            });

            $('#DocumentDate').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });

        });
        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.quantity').mask("#.##0", { reverse: true });
            $('.number').mask("##0", { reverse: true });
            $('.money').mask("#.##0,00", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
        });

        

    </script>


    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}



