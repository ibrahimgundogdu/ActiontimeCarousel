@model SalaryControlModel
@{
    ViewBag.Title = "Çalışan Mesai Ücretleri";
}

@section style{

}



<div class="row no-gutters">



    <div class="col-md-4 mg-t-0 pd-r-0 pd-l-0 pd-t-0">
        <div class="df-example demo-forms pd-5">
            <div class="card ht-100p">
                <div class="card-body pd-20">
                    <div class="form-row align-items-end col-md-12">
                        <div class="form-group col-md-3 d-flex align-items-end">
                            <div class="search-form">
                                <input id="srcEmployeeName" type="search" class="form-control" placeholder="İsim Ara">
                                <button id="srcEmployee" onclick="Unit()" class="btn" type="button"><i data-feather="search"></i></button>
                            </div>
                        </div>
                        <div class="form-group col-md-2 d-flex align-items-end">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" checked id="srcActive">
                                <label class="custom-control-label" for="srcActive">IsActive?</label>
                            </div>
                        </div>
                        <div class="form-group col-md-1 d-flex align-items-end ">
                            <button class="btn btn-primary" type="submit" id="btnsearch">Ara</button>
                        </div>
                    </div>
                    

                </div>
                <div id="scrollEmployee" class="card-body pd-0  pos-relative bd ht-100v">

                    <div class="contact-list">
                        <div class="table-responsive">
                            <table class="table table-primary table-hover table-striped mg-b-0">
                                <thead>
                                    <tr class="table-active">
                                        <th scope="col">Çalışan</th>
                                        <th>Tarih</th>
                                        <th class="tx-right">Saat Ücreti</th>
                                        <th>Birim</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in Model.UnitSalaryList)
                                    {
                                        <tr>
                                            <td scope="row" class="@(employee.IsActive == true ? "":"tx-danger")"><a href="@("/Salary/Unit/?locationId=" + employee.EmployeeID)"><b>@(employee.FullName)</b></a></td>
                                            <td>@(employee.DateStart?.Date.ToShortDateString() )</td>
                                            <td class="tx-right font-weight-bold">@(employee.Hourly?.ToString("N2"))</td>
                                            <td>@(employee.Money)</td>


                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>


                </div>
            </div>

        </div>

    </div>
    <div class="col-md-8 mg-t-0 pd-r-0 pd-l-0 pd-t-0">
        <div class="df-example demo-forms pd-5">
            <div class="card ht-100p">
                @{Html.RenderPartial("_PartialAddEmployeeSalary", Model);}
            </div>
        </div>

    </div>
</div>



@section scripts {


    <script>
        $(function () {
            'use strict'
            //$(".content").addClass("app-contact");


            $('.shifttime').mask('00:00');
            $('.shiftdate').mask('0000-00-00');


            const scrollEmployee = new PerfectScrollbar('#scrollEmployee', {
                suppressScrollX: true
            });

