@model SalaryControlModel
@{
    ViewBag.Title = "Çalışan Mesai Ücretleri";
}

@section style{

}



<div class="row no-gutters">



    <div class="col-md-4 mg-t-0 pd-r-0 pd-l-0 pd-t-0">
        <div id="scrollEmployee" class="card-body pd-0  pos-relative bd ht-100v">

            <div class="contact-list">
                <div class="table-responsive">
                    <table class="table table-primary table-hover table-striped mg-b-0">
                        <thead>
                            <tr class="table-active">
                                <th scope="col">Çalışan</th>
                                <th>Tarih</th>
                                <th class="tx-right">Saat Ücreti</th>
                                <th>Birim</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model.UnitSalaryList.Where(x => x.IsActive == true).OrderBy(x => x.FullName))
                            {
                                <tr>
                                    <td scope="row" class="@(employee.IsActive == true ? "":"tx-danger")"><a href="@("/Salary/Unit/?locationId=" + employee.EmployeeID)" ><b>@(employee.FullName)</b></a></td>
                                    <td>@(employee.DateStart?.Date.ToShortDateString() )</td>
                                    <td class="tx-right font-weight-bold">@(employee.Hourly?.ToString("N2"))</td>
                                    <td>@(employee.Money)</td>


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
    @{Html.RenderPartial("_PartialAddEmployeeSalary", Model);}
</div>



@section scripts {


    <script>
        $(function () {
            'use strict'
            //$(".content").addClass("app-contact");
            var dateFormat = 'yy-mm-dd',
                from = $('#dateFrom')
                    .datepicker({
                        defaultDate: '+1w',
                        numberOfMonths: 2,
                        dateFormat: "yy-mm-dd",
                        dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                        monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                        firstDay: 1
                    })
                    .on('change', function () {
                        to.datepicker('option', 'minDate', getDate(this));
                    }),
                to = $('#dateTo').datepicker({
                    defaultDate: '+1w',
                    numberOfMonths: 2,
                    dateFormat: "yy-mm-dd",
                    dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                    monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                    firstDay: 1
                })
                    .on('change', function () {
                        from.datepicker('option', 'maxDate', getDate(this));
                    });

            $('#DateStart').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });

            var cleaveC = new Cleave('#DateStart', {
                date: true,
                delimiter: '-',
                datePattern: ['Y', 'm', 'd'],

            });
            //var cleave = new Cleave('#Amount', {
            //    numeral: true
            //});
            //var cleave2 = new Cleave('#Exchange', {
            //    numeral: true
            //});
            function getDate(element) {
                var date;
                try {
                    date = $.datepicker.parseDate(dateFormat, element.value);
                } catch (error) {
                    date = null;
                }

                return date;

            }

            $('.shifttime').mask('00:00');
            $('.shiftdate').mask('0000-00-00');


            const scrollEmployee = new PerfectScrollbar('#scrollEmployee', {
                suppressScrollX: true
            });

        });

        function SalaryUnit(id) {
            $.ajax({
                method: "GET",
                url: "/Salary/SalaryUnit",
                data: { id: id }

            }).done(function (d) {
                $("#EmployeeID").val(d);


            });
        }
    </script>



    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}
