@model SalaryControlModel
@{
    ViewBag.Title = "Çalışan Cari İşlemleri";
}

@section style{

}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Ücret Hakediş</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                    <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Ücretli Ücretsiz İzin İşlemleri</li>
                </ol>
            </nav>
            <h4 class="mg-b-0 tx-spacing--1">Ücretli Ücretsiz İzin</h4>
        </div>
        <div class="d-none d-md-block">
            <a href="/Salary/AddPermit" class="btn btn-primary btn-uppercase"><i data-feather="plus-square"></i> &nbsp; İzin Ekle</a>
        </div>
    </div>
    <!--<div id="OffCanvasAddCashCollect" class="off-canvas off-canvas-overlay off-canvas-right">
             any content goes here
        form
    </div>-->




    @using (Html.BeginForm("PermitFilter", "Salary", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-row align-items-end">
            <div class="form-group col-md-3 d-flex align-items-end">
                <select class="form-control select2" id="employeeID" name="employeeID">
                    <option value="" label="Çalışan Seçiminiz"></option>
                    @foreach (var item in Model.EmployeeList.OrderBy(x=> x.FullName))
                    {
                        <option value="@item.EmployeeID" @(Model.Filters.EmployeeID == item.EmployeeID ? "selected" : "")>@(Html.Raw($"<strong>{item.FullName}</strong> ({item.IsActive})"))</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-3 d-flex align-items-end">
                <select class="form-control" id="permitType" name="permitType">
                    <option value="" label="İzin Türü Seçiminiz"></option>
                    @foreach (var item in Model.PermitTypes)
                    {
                        <option value="@item.ID" @(Model.Filters.TypeID == item.ID ? "selected" : "")>@(Html.Raw($"{item.TypeCode} - <strong>{item.PermitTypeName}</strong> {(item.IsPaidTo == true ? "Ücretli (Ücreti Ödenir)":"Ücretsiz (Ücreti Kesilir)")}"))</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-2 d-flex align-items-end">
                <input type="text" id="dateFrom" name="beginDate" class="form-control" autocomplete="off" placeholder="Başlangıç Tarihi" value="@(Model.Filters.DateBegin.Value.ToString("yyyy-MM-dd"))">
            </div>
            <div class="form-group col-md-2 d-flex align-items-end">
                <input type="text" id="dateTo" name="endDate" class="form-control" autocomplete="off" placeholder="Bitiş Tarihi" value="@(Model.Filters.DateEnd.Value.ToString("yyyy-MM-dd"))">
            </div>
            <div class="form-group col-md-1 d-flex align-items-end ">
                <button class="btn btn-primary" type="submit" id="btnsearch">Ara</button>
            </div>
        </div>

    }



    <div>
        <div class="table">
            <table class="table table-sm table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tarih</th>
                        <th>Belge No</th>
                        <th>Çalışan</th>
                        <th>İşlem</th>
                        <th>İzin Türü</th>
                        <th>Aşama</th>
                        <th>Kesinti</th>
                        <th>Birim Fiyat</th>
                        <th>Saat</th>
                        <th>Tutar</th>
                        <th>Para Br.</th>
                        <th>Açıklama</th>
                        <th>Kaydeden</th>
                        <th>Kayıt Tarihi</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.Permits)
                    {
                    <tr style='@(item.IsActive == false ? "color: red" : "")'>

                        <td class="tx-sm-13 bold">@item.ID</td>
                        <td class="tx-sm-13">@item.Date.Value.ToShortDateString()</td>
                        <td class="tx-sm-13"><a href="@("/Salary/PermitDetail/" + @item.UID)">@item.DocumentNumber</a></td>
                        <td class="tx-sm-13">@item.EmployeeFullName</td>
                        <td class="tx-sm-13">@item.ActionTypeName</td>
                        <td class="tx-sm-13">@item.PermitTypeName </td>
                        <td class="tx-sm-13">@item.StatusName </td>
                        <td class="tx-sm-13">@(item.IsPaidTo == true ? "Kesinti Yok" : "Kesinti Var") </td>
                        <td class="tx-sm-13">@(item.UnitPrice != null ? item.UnitPrice.Value.ToString("N2") : "")</td>
                        <td class="tx-sm-13">@(item.QuantityHour != null ? item.QuantityHour.Value.ToString("N2") : "")</td>
                        <td class="tx-sm-13 text-right bg-primary-light font-weight-bold">@(item.TotalAmount != null ? item.TotalAmount.Value.ToString("N2") : "")</td>
                        <td class="tx-sm-13">@(item.Currency)</td>
                        <td class="tx-sm-13">@item.Description</td>
                        <td class="tx-sm-13">@item.RecorderEmployeeFullName</td>
                        <td class="tx-sm-13 text-right">@item.RecordDate</td>


                    </tr>
                    }

                </tbody>
            </table>
        </div>


        <footer class="content-footer">
            <div>
                <span>&copy; @DateTime.Now.Year UFE Group LLC </span>
            </div>

        </footer>

    </div>
</div>


@section canvasmenu {
    @*@{Html.RenderPartial("_PartialDocumentForms", Model);}*@
}

@section scripts {
    <script src="/lib/cleave.js/cleave.min.js"></script>

    <script>
        $(function () {

            $('.select2').select2({
                placeholder: 'Çalışan Seçiminiz',
                searchInputPlaceholder: 'Search options'
            });

            var dateFormat = 'yy-mm-dd',
                from = $('#dateFrom')
                    .datepicker({
                        defaultDate: '+1w',
                        numberOfMonths: 2,
                        dateFormat: "yy-mm-dd",
                        dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                        monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                        firstDay: 1
                    })
                    .on('change', function () {
                        to.datepicker('option', 'minDate', getDate(this));
                    }),
                to = $('#dateTo').datepicker({
                    defaultDate: '+1w',
                    numberOfMonths: 2,
                    dateFormat: "yy-mm-dd",
                    dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                    monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                    firstDay: 1
                })
                    .on('change', function () {
                        from.datepicker('option', 'maxDate', getDate(this));
                    });

            $('#DocumentDate').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });
            function getDate(element) {
                var date;
                try {
                    date = $.datepicker.parseDate(dateFormat, element.value);
                } catch (error) {
                    date = null;
                }

                return date;

            }

        });

