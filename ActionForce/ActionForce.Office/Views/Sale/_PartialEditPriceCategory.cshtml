@model SaleControlModel
<a href="" role="button" class="close pos-absolute t-15 r-15" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
</a>
<div>
    <h4><span class="font-weight-bold text-black-50">Fiyat Kategorisi Ekle</span></h4>

    @using (Ajax.BeginForm("EditPriceCategory", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "PriceCategoryList", InsertionMode = InsertionMode.Replace, OnSuccess = "OnCategoryEditSuccess" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group row">
            <label for="OurCompanyID" class="col-sm-3 col-form-label">Our Company</label>
            <div class="col-sm-9">
                <select class="form-control" id="OurCompanyID" name="OurCompanyID" required>
                    @foreach (var item in Model.OurCompanyList)
                    {
                        <option value="@item.CompanyID" @(Model.PriceCategory.OurCompanyID == item.CompanyID ? "selected" : "")>@($"{item.Code} {item.CompanyName}")</option>
                    }
                </select>
            </div>


        </div>
        <div class="form-group row bg-gray-50 mg-b-5">
            <label for="TicketTypeID" class="col-sm-3 col-form-label">Bilet Türü</label>
            <div class="col-sm-9">
                <select class="form-control" id="TicketTypeID" name="TicketTypeID" required>
                    @foreach (var item in Model.TicketTypeList)
                    {
                        <option value="@item.ID">@($"{item.TicketTypeName}")</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row bg-gray-50 mg-b-5">
            <label for="CategoryCode" class="col-sm-3 col-form-label">Kategori Kodu</label>
            <div class="col-sm-9">
                <input id="CategoryCode" name="CategoryCode" type="text" class="form-control" autocomplete="off" placeholder="Kodu" value="@(Model.PriceCategory.CategoryCode)">
            </div>
        </div>

        <div class="form-group row bg-gray-50 mg-b-5">
            <label for="CategoryName" class="col-sm-3 col-form-label">Kategori Adı</label>
            <div class="col-sm-9">
                <input id="CategoryName" name="CategoryName" type="text" class="form-control" autocomplete="off" placeholder="Adı" value="@(Model.PriceCategory.CategoryName)" required>
            </div>
        </div>

        <div class="form-group row bg-gray-50">
            <label for="SortBy" class="col-sm-3 col-form-label">Sırası</label>
            <div class="col-sm-9">
                <input id="SortBy" name="SortBy" type="text" class="form-control" autocomplete="off" placeholder="Sıra" value="@(Model.PriceCategory.SortBy)">
            </div>
        </div>

        <div class="form-group row mg-b-0">
            <label for="IsMaster" class="col-sm-3 col-form-label">Birincil mi?</label>
            <div class="col-sm-9">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="IsMaster" name="IsMaster" value="1" @(Model.PriceCategory.IsMaster == true ? "checked" : "")>
                    <label class="custom-control-label" for="IsMaster">Birincil</label>
                </div>
            </div>
        </div>

        <div class="form-group row mg-b-0">
            <label for="IsActive" class="col-sm-3 col-form-label">Aktif mi?</label>
            <div class="col-sm-9">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="IsActive" name="IsActive" value="1" @(Model.PriceCategory.IsActive == true ? "checked" : "")>
                    <label class="custom-control-label" for="IsActive">Aktif</label>
                </div>
            </div>
        </div>




        <div class="form-group row mg-b-0">
            <div class="col-sm-3"></div>
            <div class="col-sm-9">
                <input id="ID" name="ID" type="hidden" value="@(Model.PriceCategory.ID)" />
                <button type="submit" class="btn btn-primary btn-block">Fiyat Kategorisi Güncelle</button>
            </div>
        </div>

    }


</div>
