@model SaleControlModel
<a href="" role="button" class="close pos-absolute t-15 r-15" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
</a>
<div>
    <h4><span class="font-weight-bold text-black-50">Bilet Ürünü Güncelle</span></h4>

    @using (Ajax.BeginForm("EditTicketProduct", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "TicketProductList", InsertionMode = InsertionMode.Replace, OnSuccess = "OnProductEditSuccess" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group row">
            <label for="OurCompanyID" class="col-sm-3 col-form-label">Our Company</label>
            <div class="col-sm-9">
                <select class="form-control" id="OurCompanyID" name="OurCompanyID" required>
                    @foreach (var item in Model.OurCompanyList)
                    {
                        <option value="@item.CompanyID" @(Model.TicketProduct.OurCompanyID == item.CompanyID ? "selected" : "")>@($"{item.Code} {item.CompanyName}")</option>
                    }
                </select>
            </div>

        </div>

        <div class="form-group row bg-gray-50 mg-b-5">
            <label for="TicketTypeID" class="col-sm-3 col-form-label">Bilet Türü</label>
            <div class="col-sm-9">
                <select class="form-control" id="TicketTypeID" name="TicketTypeID" required>
                    @foreach (var item in Model.TicketTypeList)
                    {
                        <option value="@item.ID" @(Model.TicketProduct.TicketTypeID == item.ID ? "selected" : "")>@($"{item.TicketTypeName}")</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group row bg-gray-50 mg-b-5">
            <label for="CategoryID" class="col-sm-3 col-form-label">Kategorisi</label>
            <div class="col-sm-9">
                <select class="form-control" id="CategoryID" name="CategoryID" required>
                    @foreach (var item in Model.TicketProductCategoryList)
                    {
                        <option value="@item.ID" @(Model.TicketProduct.CategoryID == item.ID ? "selected" : "")>@($"{item.ProductCategoryName}")</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group row bg-gray-50 mg-b-5">
            <label for="ProductName" class="col-sm-3 col-form-label">Bilet Ürünü Adı</label>
            <div class="col-sm-9">
                <input id="ProductName" name="ProductName" type="text" class="form-control" autocomplete="off" placeholder="Ürün Adı" value="@(Model.TicketProduct.ProductName)" required>
            </div>
        </div>

        <div class="form-group row bg-gray-50 mg-b-5">
            <label for="TaxRate" class="col-sm-3 col-form-label">Vergi Oranı</label>
            <div class="col-sm-9">
                <select class="form-control" id="TaxRate" name="TaxRate" required>
                    @foreach (var item in Model.TaxList.OrderBy(x=> x.Rate).ToList())
                    {
                        <option value="@item.Rate" @(Model.TicketProduct.TaxRate == item.Rate ? "selected" : "")>@($"{item.Code}")</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group row bg-gray-50 mg-b-5">
            <label for="Unit" class="col-sm-3 col-form-label">Birim (Dakika)</label>
            <div class="col-sm-9">
                <input id="Unit" name="Unit" type="text" class="form-control" autocomplete="off" placeholder="Birim" value="@(Model.TicketProduct.Unit)" required>
            </div>
        </div>

        <div class="form-group row bg-gray-50">
            <label for="Description" class="col-sm-3 col-form-label">Açıklaması</label>
            <div class="col-sm-9">
                <textarea id="Description" name="Description" type="text" class="form-control" autocomplete="off" placeholder="Açıklama" rows="3">@(Model.TicketProduct.Description)</textarea>
            </div>
        </div>

        <div class="form-group row mg-b-0">
            <label for="IsActive" class="col-sm-3 col-form-label">Aktif mi?</label>
            <div class="col-sm-9">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="IsActive" name="IsActive" value="1" @(Model.TicketProduct.IsActive == true ? "checked" : "")>
                    <label class="custom-control-label" for="IsActive">Aktif</label>
                </div>
            </div>
        </div>

        <div class="form-group row mg-b-0">
            <div class="col-sm-3"></div>
            <div class="col-sm-9">
                <input id="ID" name="ID" type="hidden" value="@(Model.TicketProduct.ID)" />
                <button type="submit" class="btn btn-primary btn-block">Bilet Ürünü Güncelle</button>
            </div>
        </div>

    }


</div>

