@model SaleControlModel
@{
    ViewBag.Title = "Bilet Ürünleri";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Fiyat Listesi</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body mg-t-40 mg-lg-t-0">

                <div class="card mg-b-20 mg-lg-b-25">
                    <div class="card-header pd-y-15 pd-x-20 d-flex align-items-center justify-content-between">
                        <h6 class="tx-13 tx-spacing-1 tx-uppercase tx-semibold mg-b-0">@(Model.Price != null ? $"{Model.Price.CategoryName} Kategorisi Tüm Fiyatları" : "Kategori Fiyatları")</h6>
                        <nav class="nav">
                            <a href="/Sale/AddPrice" class="btn btn-success mg-l-10"><span class="d-none d-sm-inline">Toplu Fiyat Ekle</span></a>
                        </nav>
                    </div>
                    <div class="card-body pd-0" id="PriceList">
                        @{Html.RenderPartial("_PartialEditablePriceList", Model);}
                    </div>
                    <div class="card-footer bg-transparent pd-y-10 pd-sm-y-15 pd-x-10 pd-sm-x-20">
                        <nav class="nav nav-with-icon tx-13">
                            <a href="/Sale/ExportToExcel" class="nav-link"><i data-feather="download"></i> Excel Olarak İndir </a>
                        </nav>
                    </div>
                </div>

                <footer class="content-footer">
                    <div>
                        <span>&copy; @DateTime.Now.Year UFE Group LLC </span>
                    </div>
                </footer>

            </div>

        </div>
    </div>
</div>




@section scripts {

    <script>
        $(function () {
            'use strict'
            $("body").addClass("page-profile");
        });

        $(function () {
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.money').mask("#.##0,00", { reverse: true });

            $('.shiftdate').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });
        });

        function PriceCatEdit(id) {

            var priceval = $('#Price_' + id).val();
            var datebeginval = $('#DateBegin_' + id).val();
            var datebeginhourval = $('#DateBeginHour_' + id).val();
            var usesaleval = 0;
            if ($('#UseSale_' + id).is(":checked")) {
                usesaleval = 1;
            }

            var isactiveval = 0;
            if ($('#IsActive_' + id).is(":checked")) {
                isactiveval = 1;
            }            

            var data = new FormData();
            data.append('id', id);
            data.append('_price', priceval);
            data.append('_datebegin', datebeginval);
            data.append('_datebeginhour', datebeginhourval);
            data.append('_usesale', usesaleval);
            data.append('_isactive', isactiveval);

            console.log(data);

            $.ajax({
                url: '@Url.Action("CatPriceEdit", "Sale")',
                cache: false,
                contentType: false,
                processData: false,
                method: 'POST',
                type: 'POST',
                data: data
            }).done(function (d) {
                $('#PriceList').html(d);
            });
        };

    </script>

    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}
