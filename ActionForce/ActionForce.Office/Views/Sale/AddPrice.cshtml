@model SaleControlModel
@{
    ViewBag.Title = "Fiyat Ekle";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Fiyat Listesi</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body mg-t-40 mg-lg-t-0">



                <div class="card mg-b-20 mg-lg-b-25">
                    <div class="card-header pd-y-15 pd-x-20 d-flex align-items-center justify-content-between">
                        <h6 class="tx-13 tx-spacing-1 tx-uppercase tx-semibold mg-b-0">Yeni Fiyat Ekleme Sihirbazı</h6>
                        <nav class="nav">
                            <a href="/Sale/Price" class="link-03 mg-l-10"><span class="d-none d-sm-inline">Fiyat Listesi</span></a>
                        </nav>
                    </div>
                    <div class="card-body pd-10" id="PriceDetail">

                        @using (Html.BeginForm("AddNewPrice", "Sale", FormMethod.Post))
                        {
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label for="CompanyName" class="col-sm-3 col-form-label">Our Company</label>
                                    <div class="col-sm-6">
                                        <input id="CompanyName" name="CompanyName" type="text" class="form-control" autocomplete="off" value="@(Model.Authentication.ActionEmployee.OurCompany.CompanyName)" readonly>
                                    </div>
                                    <div class="col-sm-3"></div>
                                </div>
                                @*<div class="form-group row mg-b-5 bg-gray-50">
                                    <label for="TicketTypeName" class="col-sm-3 col-form-label">Bilet Tipi</label>
                                    <div class="col-sm-6">
                                        <select class="form-control" id="TicketTypeID" name="TicketTypeID" required>
                                            <option value="">Bilet Türünü Seçiniz</option>
                                            @foreach (var item in Model.TicketTypeList)
                                            {
                                                <option value="@item.ID">@($"{item.TicketTypeName}")</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-sm-3"></div>
                                </div>*@
                                <div class="form-group row mg-b-5 bg-gray-50">
                                    <label for="CategoryName" class="col-sm-3 col-form-label">Fiyat Kategorisi</label>
                                    <div class="col-sm-6">
                                        <select class="form-control" id="CategoryID" name="CategoryID" required>
                                            <option value="">Fiyat Kategorisini Seçiniz</option>
                                            @foreach (var item in Model.PriceCategoryList.OrderBy(x=> x.TicketTypeName).ThenBy(x=> x.CategoryName))
                                            {
                                                <option value="@item.ID">@($"{item.TicketTypeName} - {item.CategoryName}")</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-sm-3"></div>
                                </div>
                                <div class="form-group row bg-gray-50">
                                    <label for="DateBegin" class="col-sm-3 col-form-label">Fiyat Başlangıç Tarih Saati</label>
                                    <div class="col-sm-3">
                                        <input id="DateBegin" name="DateBegin" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Tarih" value="@(DateTime.Now.ToString("yyyy-MM-dd"))" required>
                                    </div>
                                    <div class="col-sm-3">
                                        <input id="DateBeginHour" name="DateBeginHour" type="text" class="form-control hourfull" autocomplete="off" placeholder="Saat" value="@(DateTime.Now.ToString("HH\\:mm\\:ss"))" required>
                                    </div>
                                    <div class="col-sm-3">
                                    </div>
                                </div>
                                <div class="form-group row mg-b-0">
                                    <div class="col-sm-12" id="PriceList">
                                        @*@{Html.RenderPartial("_PartialAddPriceList", Model);}*@
                                    </div>
                                </div>
                                <div class="form-group row mg-b-0">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-6">
                                        <button type="submit" class="btn btn-success btn-block">Fiyat Ekle</button>
                                    </div>
                                    <div class="col-sm-3">
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <footer class="content-footer">
                    <div>
                        <span>&copy; @DateTime.Now.Year UFE Group LLC </span>
                    </div>
                </footer>

            </div>

        </div>
    </div>
</div>




@section scripts {

    <script>
        $(function () {
            'use strict'
            $("body").addClass("page-profile");
        });

        $(function () {
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.money').mask("#.##0,00", { reverse: true });

            $('#DateBegin').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1,
            });


        });

        //$('#TicketTypeID').on('change', function () {

        //    FillPriceList();
        //});

        $('#CategoryID').on('change', function () {
            FillPriceList();
        });

        function FillPriceList() {

            //var tickettypeid = $('#TicketTypeID').val();
            var pricecategoryid = $('#CategoryID').val();
           

            var data = new FormData();
            //data.append('TicketTypeID', tickettypeid);
            data.append('CategoryID', pricecategoryid);


            $.ajax({
                url: '@Url.Action("FillPriceList", "Sale")',
                cache: false,
                contentType: false,
                processData: false,
                method: 'POST',
                type: 'POST',
                data: data
            }).done(function (d) {
                $('#PriceList').html(d);
            });
        };

    </script>

    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}
