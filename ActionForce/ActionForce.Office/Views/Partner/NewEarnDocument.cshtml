@model PartnerControlModel
@{
    ViewBag.Title = "İş Ortakları - Ödeme Dokümanları";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Yeni Hakediş Dokümanı</span>
    </div>
    <nav class="nav">
        <a href="/Partner/Earns"> <i data-feather="menu"></i> </a> &nbsp;
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body  mg-t-40 mg-lg-t-0">
                <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
                    <div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                                <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                                <li class="breadcrumb-item active" aria-current="page"> <a href="/Partner/Earns">İş Ortakları - Hakediş Dokümanları</a></li>
                            </ol>
                        </nav>
                        <h4 class="mg-b-0 tx-spacing--1">Hakediş Dokümanı Oluştur / Güncelle</h4>
                    </div>
                </div>


                @using (Html.BeginForm("AddEarn", "Partner", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="row row-xs">
                        <div class="col-lg-12">

                            <div class="form-group row mg-b-5 bg-gray-50">
                                <label for="PartnerID" class="col-sm-3 col-form-label tx-sm-13">Ortakçı</label>
                                <div class="col-sm-6">
                                    <select class="form-control font-weight-bold" id="PartnerID" name="PartnerID" required>
                                        <option value="">Ortakçı Seçiminiz</option>
                                        @foreach (var item in Model.Partners.OrderBy(x => x.FullName))
                                        {
                                            <option value="@(item.ID)">@($"{item.AccountCode} - {item.FullName}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>


                            <div class="form-group row mg-b-5 bg-gray-50">
                                <label for="ExpensePeriodCode" class="col-sm-3 col-form-label">Hakediş Periyodu</label>
                                <div class="col-sm-6">
                                    <select class="form-control font-weight-bold" id="ExpensePeriodCode" name="ExpensePeriodCode" required>
                                        <option value="">Periyot Seçiminiz</option>
                                        @foreach (var item in Model.ExpensePeriods)
                                        {
                                            <option value="@(item.PeriodCode)">@($"{item.PeriodCode} " )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>


                            <div class="form-group row mg-b-0">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-primary btn-block">Hakediş Dokümanı Oluştur / Güncelle</button>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


@section canvasmenu {

}

@section scripts {


    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}

