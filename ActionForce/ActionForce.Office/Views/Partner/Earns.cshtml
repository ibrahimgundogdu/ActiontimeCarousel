@model PartnerControlModel
@{
    ViewBag.Title = "İş Ortakları - Ödeme Dokümanları";
}
@section style{

}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">İş Ortakları - Hakediş Dokümanları</span>
    </div>
    <nav class="nav">
        <a href="/Partner/Earns"> <i data-feather="menu"></i> </a> &nbsp;
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())

    </nav>
</div>
<div class="content-body">
    @using (Html.BeginForm("EarnsFilter", "Partner", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-row align-items-end">

            <div class="form-group col-md-3 d-flex align-items-end">
                <select class="form-control select2" id="PartnerID" name="PartnerID">
                    <option value="" label="Ortakçı Seçiminiz"></option>
                    @foreach (var item in Model.Partners.OrderBy(x => x.FullName))
                    {
                        <option value="@item.ID" @(Model.Filters.PartnerID == item.ID ? "selected" : "")>@(Html.Raw($"<strong>{item.AccountCode} {item.FullName}</strong> ({item.IsActive}) "))</option>
                    }
                </select>
            </div>

            <div class="form-group col-md-4 d-flex align-items-end">
                <select class="form-control select2" id="LocationID" name="LocationID">
                    <option value="" label="Lokasyon Seçiminiz"></option>
                    @foreach (var item in Model.Locations.OrderBy(x => x.SortBy))
                    {
                        <option value="@item.LocationID" @(Model.Filters.LocationID == item.LocationID ? "selected" : "")>@(Html.Raw($"<strong>{item.LocationFullName}</strong>"))</option>
                    }
                </select>
            </div>

            <div class="form-group col-md-2 d-flex align-items-end">
                <select class="form-control select2" id="ExpensePeriodCode" name="ExpensePeriodCode">
                    <option value="" label="Dönem Seçiminiz"></option>
                    @foreach (var item in Model.ExpensePeriods.OrderBy(x => x.DateBegin))
                    {
                        <option value="@item.PeriodCode" @(Model.Filters.ExpensePeriodCode == item.PeriodCode ? "selected" : "")>@(Html.Raw($"<strong>{item.PeriodCode}</strong>"))</option>
                    }
                </select>
            </div>

            @*<div class="form-group col-md-1 d-flex align-items-end">
                <input type="text" id="DTBG" name="DateBegin" class="form-control" autocomplete="off" placeholder="Başlangıç Tarihi" value="@(Model.Filters.DateBegin.Value.ToString("yyyy-MM-dd"))">
            </div>
            <div class="form-group col-md-1 d-flex align-items-end">
                <input type="text" id="DTEN" name="DateEnd" class="form-control" autocomplete="off" placeholder="Bitiş Tarihi" value="@(Model.Filters.DateEnd.Value.ToString("yyyy-MM-dd"))">
            </div>*@
            <div class="form-group col-md-3 d-flex align-items-end ">
                <button class="btn btn-primary btn-block" type="submit" id="btnsearch">Ara</button> &nbsp;
                <a href="/Partner/NewEarnDocument" class="btn btn-warning btn-block font-weight-bold">Oluştur, Güncelle</a>
            </div>

        </div>
    }

    @if (Model.DocumentPartnerEarns != null && Model.DocumentPartnerEarns.Count > 0)
    {
        <div>
            <div class="table">
                <table class="table table-sm table-hover">
                    <thead>

                        <tr>
                            <th>#</th>
                            <th>Doküman No</th>
                            <th>Tarih</th>
                            <th>#</th>
                            <th>Partner</th>
                            <th>#</th>
                            <th>Lokasyon</th>
                            <th>Dönemi</th>
                            <th class="text-right">Oran (%)</th>
                            <th class="text-right">Kapasite</th>
                            <th class="text-right">Genel</th>
                            <th class="text-right">Tutar</th>
                            <th class="text-right">Hakediş</th>
                            <th></th>
                            <th>Kayıt</th>
                            <th>Aktif</th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var exp in Model.DocumentPartnerEarns.OrderByDescending(x => x.DocumentDate).ThenByDescending(x => x.RecordDate))
                        {
                        <tr>

                            <td class="tx-sm-13">@(exp.ID)</td>
                            <td class="tx-sm-13 font-weight-bold"><a href="/Partner/EarnDetail/@(exp.UID)" target="_blank" class="@(exp.IsActive == false ? "text-danger":"")"> @(exp.DocumentNumber)</a></td>
                            <td class="tx-sm-13 font-weight-bold">@(exp.DocumentDate.Value.ToString("d"))</td>
                            <td class="tx-sm-13">@(exp.PartnerID)</td>
                            <td class="tx-sm-13 font-weight-bold">@(exp.FullName)</td>
                            <td class="tx-sm-13">@(exp.LocationID)</td>
                            <td class="tx-sm-13">@(exp.LocationFullName)</td>
                            <td class="tx-sm-13 font-weight-bold">@(exp.PeriodCode)</td>
                            <td class="tx-sm-13 font-weight-bold text-right">@(exp.PartnerRate?.ToString("N2"))</td>
                            <td class="tx-sm-13 font-weight-bold text-right">@(exp.CapacityRate?.ToString("N2"))</td>
                            <td class="tx-sm-13 font-weight-bold text-right">@(exp.GrossAmount?.ToString("N2"))</td>
                            <td class="tx-sm-13 font-weight-bold text-right">@(exp.Amount?.ToString("N2"))</td>
                            <td class="tx-sm-13 font-weight-bold text-right">@(exp.AmountEarned?.ToString("N2"))</td>
                            <td class="tx-sm-13">@(exp.Currency)</td>
                            <td class="tx-sm-13">@(exp.RecordDate)</td>
                            <td class="tx-sm-13">@(exp.IsActive == true ? "Aktif":"Pasif")</td>
                            <td class="tx-sm-13"><a href="/Partner/EarnDetail/@(exp.UID)" target="_blank" class="@(exp.IsActive == false ? "text-danger":"")"> <i data-feather="file-text"></i></a></td>

                        </tr>
                        }


                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="11"></th>
                            <th class="tx-sm-13 font-weight-bold text-right">@(Model.DocumentPartnerEarns.Sum(x=> x.Amount)?.ToString("N2"))</th>
                            <th class="tx-sm-13 font-weight-bold text-right">@(Model.DocumentPartnerEarns.Sum(x=> x.AmountEarned)?.ToString("N2"))</th>
                            <th colspan="4"></th>

                        </tr>
                    </tfoot>

                </table>
            </div>


            <footer class="content-footer">
                <div>
                    <span>&copy; @DateTime.Now.Year UFE Group LLC </span>
                </div>

            </footer>

        </div>
    }
</div>



@section scripts {
    <script>
        $(function () {

            $('#PartnerID').select2({
                placeholder: 'Ortakçı Seçiminiz',
                searchInputPlaceholder: 'Search options',
                allowClear: true
            });

            $('#LocationID').select2({
                placeholder: 'Lokasyon Seçiminiz',
                searchInputPlaceholder: 'Search options',
                allowClear: true
            });

            $('#PeriodCode').select2({
                placeholder: 'Periyot Seçiminiz',
                searchInputPlaceholder: 'Search options',
                allowClear: true
            });

            var dateFormat = 'yy-mm-dd',
                from = $('#DTBG')
                    .datepicker({
                        defaultDate: '+1w',
                        numberOfMonths: 2,
                        dateFormat: "yy-mm-dd",
                        dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                        monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                        firstDay: 1
                    })
                    .on('change', function () {
                        to.datepicker('option', 'minDate', getDate(this));
                    }),
                to = $('#DTEN').datepicker({
                    defaultDate: '+1w',
                    numberOfMonths: 2,
                    dateFormat: "yy-mm-dd",
                    dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                    monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                    firstDay: 1
                })
                    .on('change', function () {
                        from.datepicker('option', 'maxDate', getDate(this));
                    });

            function getDate(element) {
                var date;
                try {
                    date = $.datepicker.parseDate(dateFormat, element.value);
                } catch (error) {
                    date = null;
                }

                return date;

            }
        });


    </script>


    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}