@model PartnerControlModel
@{
    ViewBag.Title = "İş Ortakları - Ödeme Dokümanları";
}
@section style{

}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">İş Ortakları - Cari Hesap Ekstresi</span>
    </div>
    <nav class="nav">

        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())

    </nav>
</div>
<div class="content-body">
    @using (Html.BeginForm("ActionFilter", "Partner", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-row align-items-end">

            <div class="form-group col-md-3 d-flex align-items-end">
                <select class="form-control select2" id="PartnerID" name="PartnerID">
                    <option value="" label="Ortakçı Seçiminiz"></option>
                    @foreach (var item in Model.Partners.OrderBy(x => x.FullName))
                    {
                        <option value="@item.ID" @(Model.Filters.PartnerID == item.ID ? "selected" : "")>@(Html.Raw($"<strong>{item.AccountCode} {item.FullName}</strong> ({item.IsActive}) "))</option>
                    }
                </select>
            </div>

            <div class="form-group col-md-3 d-flex align-items-end">
                <select class="form-control select2" id="LocationID" name="LocationID">
                    <option value="" label="Lokasyon Seçiminiz"></option>
                    @foreach (var item in Model.Locations.OrderBy(x => x.SortBy))
                    {
                        <option value="@item.LocationID" @(Model.Filters.LocationID == item.LocationID ? "selected" : "")>@(Html.Raw($"<strong>{item.LocationFullName}</strong>"))</option>
                    }
                </select>
            </div>

            <div class="form-group col-md-2 d-flex align-items-end">
                <select class="form-control select2" id="PeriodCodeBegin" name="PeriodCodeBegin">
                    <option value="" label="İlk Dönemi Seçiminiz"></option>
                    @foreach (var item in Model.ExpensePeriods.OrderBy(x => x.DateBegin))
                    {
                        <option value="@item.PeriodCode" @(Model.Filters.PeriodCodeBegin == item.PeriodCode ? "selected" : "")>@(Html.Raw($"<strong>{item.PeriodCode}</strong>"))</option>
                    }
                </select>
            </div>

            <div class="form-group col-md-2 d-flex align-items-end">
                <select class="form-control select2" id="PeriodCodeEnd" name="PeriodCodeEnd">
                    <option value="" label="Son Dönemi Seçiminiz"></option>
                    @foreach (var item in Model.ExpensePeriods.OrderBy(x => x.DateBegin))
                    {
                        <option value="@item.PeriodCode" @(Model.Filters.PeriodCodeEnd == item.PeriodCode ? "selected" : "")>@(Html.Raw($"<strong>{item.PeriodCode}</strong>"))</option>
                    }
                </select>
            </div>

            <div class="form-group col-md-2 d-flex align-items-end ">
                <button class="btn btn-primary btn-block" type="submit" id="btnsearch">Listele</button> &nbsp;
            </div>

        </div>
    }

    @if (Model.PartnerActions != null && Model.PartnerActions.Count > 0)
    {
        <div>
            <div class="table">
                <table class="table table-sm table-hover">
                    <thead>

                        <tr>
                            <th></th>
                            <th>Doküman No</th>
                            <th>Tarih</th>
                            <th>Partner</th>
                            <th>Lokasyon</th>
                            <th>Dönemi</th>
                            <th>İşlem</th>
                            <th class="text-right">Oran (%)</th>
                            <th class="text-right">Kapasite</th>
                            <th class="text-right">Hakediş</th>
                            <th class="text-right">Tahsilat</th>
                            <th class="text-right">Tutar</th>
                            <th class="text-right">Bakiye</th>
                            <th></th>
                            <th>Kayıt</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sira = 1;
                            double balanceTotal = 0;
                            string balanceCurrency = "TRL";
                            double balanceAmount = 0 + balanceTotal;

                        }

                        <tr>
                            <th colspan="9" class="tx-sm-16 text-right">Devir Bakiyesi</th>
                            <th class="tx-sm-16 text-right">@(Model.OldPartnerActions.Sum(x => x.Collection)?.ToString("N2"))</th>
                            <th class="tx-sm-16 text-right">@(Model.OldPartnerActions.Sum(x => x.Payment)?.ToString("N2"))</th>
                            <th class="tx-sm-16 text-right">@(Model.OldPartnerActions.Sum(x => x.Amount).ToString("N2"))</th>
                            <th class="tx-sm-16 font-weight-bold text-right">@(Model.OldPartnerActions.Sum(x => x.Amount).ToString("N2"))</th>
                            <th colspan="3">@(balanceCurrency)</th>

                        </tr>

                        @foreach (var exp in Model.PartnerActions.OrderBy(x => x.ActionDate).ThenBy(x => x.RecordDate))
                        {
                            balanceAmount += exp.Amount;

                            <tr>

                                <td class="tx-sm-13">@(sira)</td>
                                <td class="tx-sm-13 font-weight-bold" title="@(exp.ID)"><a href="@(exp.ActionTypeID == 1 ? $"/Partner/EarnDetail/{exp.ProcessUID}":exp.ActionTypeID == 2 ? $"/Partner/PaymentDetail/{exp.ProcessUID}":"#")" target="_blank"> @(exp.DocumentNumber)</a></td>
                                <td class="tx-sm-13 font-weight-bold">@(exp.ActionDate.Value.ToString("d"))</td>
                                <td class="tx-sm-13 font-weight-bold" title="@(exp.PartnerID)">@(exp.FullName)</td>
                                <td class="tx-sm-13" title="@(exp.LocationID)">@(exp.LocationFullName)</td>
                                <td class="tx-sm-13 font-weight-bold">@(exp.PeriodCode)</td>
                                <td class="tx-sm-13 font-weight-bold @(exp.ActionTypeID == 2 ? "text-success":"")">@(exp.ProcessName)</td>
                                <td class="tx-sm-13 text-right">@(exp.PartnershipRate?.ToString("N2"))</td>
                                <td class="tx-sm-13 text-right">@(exp.CapacityRate?.ToString("N2"))</td>
                                <td class="tx-sm-14 @(exp.Collection != 0 ? "font-weight-bold":"") text-right">@(exp.Collection?.ToString("N2"))</td>
                                <td class="tx-sm-14 @(exp.Payment != 0 ? "font-weight-bold":"") text-right @(exp.ActionTypeID == 2 ? "text-success":"")">@(exp.Payment?.ToString("N2"))</td>
                                <td class="tx-sm-14 font-weight-bold text-right">@(exp.Amount.ToString("N2"))</td>
                                <td class="tx-sm-16 font-weight-bold text-right bg-success-light">@(balanceAmount.ToString("N2"))</td>
                                <td class="tx-sm-16">@(exp.Currency)</td>
                                <td class="tx-sm-13">@(exp.RecordDate)</td>

                            </tr>

                            sira++;
                        }


                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="9" class="tx-sm-16 text-right">Dönem Bakiyesi</td>
                            <td class="tx-sm-16 text-right">@(Model.PartnerActions.Sum(x=> x.Collection)?.ToString("N2"))</td>
                            <td class="tx-sm-16 text-right">@(Model.PartnerActions.Sum(x=> x.Payment)?.ToString("N2"))</td>
                            <td class="tx-sm-16 text-right">@(Model.PartnerActions.Sum(x=> x.Amount).ToString("N2"))</td>
                            <td class="tx-sm-16 font-weight-bold text-right">@(balanceAmount.ToString("N2"))</td>
                            <td colspan="3" class="tx-sm-16 font-weight-bold">@(balanceCurrency)</td>

                        </tr>
                        <tr>
                            <td colspan="9" class="tx-sm-16 text-right">Toplam Cari Bakiyesi</td>
                            <td class="tx-sm-16 text-right">@((Model.OldPartnerActions.Sum(x => x.Collection) + Model.PartnerActions.Sum(x=> x.Collection))?.ToString("N2"))</td>
                            <td class="tx-sm-16 text-right">@((Model.OldPartnerActions.Sum(x => x.Payment) + Model.PartnerActions.Sum(x=> x.Payment))?.ToString("N2"))</td>
                            <td class="tx-sm-16 text-right">@((Model.OldPartnerActions.Sum(x => x.Amount) + Model.PartnerActions.Sum(x=> x.Amount)).ToString("N2"))</td>
                            <td class="tx-sm-16 font-weight-bold text-right">@((balanceAmount + Model.OldPartnerActions.Sum(x => x.Amount)).ToString("N2"))</td>
                            <td colspan="3" class="tx-sm-16 font-weight-bold">@(balanceCurrency)</td>

                        </tr>
                    </tfoot>

                </table>
            </div>


            <footer class="content-footer">
                <div>
                    <span>&copy; @DateTime.Now.Year UFE Group LLC </span>
                </div>

            </footer>

        </div>
    }
</div>



@section scripts {
    <script>
        $(function () {

            $('#PartnerID').select2({
                placeholder: 'Ortakçı Seçiminiz',
                searchInputPlaceholder: 'Search options',
                allowClear: true
            });

            $('#LocationID').select2({
                placeholder: 'Lokasyon Seçiminiz',
                searchInputPlaceholder: 'Search options',
                allowClear: true
            });

            $('#PeriodCode').select2({
                placeholder: 'Periyot Seçiminiz',
                searchInputPlaceholder: 'Search options',
                allowClear: true
            });

            var dateFormat = 'yy-mm-dd',
                from = $('#DTBG')
                    .datepicker({
                        defaultDate: '+1w',
                        numberOfMonths: 2,
                        dateFormat: "yy-mm-dd",
                        dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                        monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                        firstDay: 1
                    })
                    .on('change', function () {
                        to.datepicker('option', 'minDate', getDate(this));
                    }),
                to = $('#DTEN').datepicker({
                    defaultDate: '+1w',
                    numberOfMonths: 2,
                    dateFormat: "yy-mm-dd",
                    dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                    monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                    firstDay: 1
                })
                    .on('change', function () {
                        from.datepicker('option', 'maxDate', getDate(this));
                    });

            function getDate(element) {
                var date;
                try {
                    date = $.datepicker.parseDate(dateFormat, element.value);
                } catch (error) {
                    date = null;
                }

                return date;

            }
        });


    </script>


    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}