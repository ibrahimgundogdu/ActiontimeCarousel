@model ScheduleControlModel
@{
    ViewBag.Title = "Lokasyon Mesai Takvimi";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Çalışan Mesai Takvimleri</span>
        <input type="hidden" id="CurrentLocationID" value="@(Model.LocationID)" />
        <input type="hidden" id="CurrentWeekCode" value="@(Model.WeekCode)" />
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body mg-t-40 mg-lg-t-0">
                <div class="profile-update-option bg-white ht-50 bd d-flex justify-content-end mg-b-20 mg-lg-b-20 rounded">
                    <div class="d-flex align-items-center pd-x-5 mg-r-auto">
                        <span class="tx-15 pd-r-10">
                            <select name="listLocations" id="listLocations" class="custom-select">
                                @foreach (var location in Model.LocationList)
                                {
                                    <option value="@($"{location.LocationID}&week={Model.WeekCode}")" @(location.LocationID == Model.CurrentLocation.LocationID ? "selected" : "")>@($"{location.SortBy.Trim()} {location.LocationName} {location.Description} {location.State}")</option>
                                }
                            </select>
                        </span>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="#" id="LocationScheduleDate" class="link-03" title="Tarih Seç">
                            <i data-feather="calendar"></i>
                            <input type="hidden" id="DatePicker" />
                            <div></div>
                        </a>
                        <input id="LocationID" type="hidden" value="@Model.CurrentLocation.LocationID" />
                        <input id="WeekCode" type="hidden" value="@Model.WeekCode" />
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Schedule/Employee?week=@(Model.PrevWeekCode)&locationid=@(Model.CurrentLocation.LocationID)" class="link-03" title="Bir Önceki Hafta"><i data-feather="arrow-left"></i></a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Schedule/Employee?date=@(DateTime.Now.ToString("yyyy-MM-dd"))&locationid=@(Model.CurrentLocation.LocationID)" class="link-03" title="Bu Hafta"><i data-feather="target"></i></a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Schedule/Employee?week=@(Model.NextWeekCode)&locationid=@(Model.CurrentLocation.LocationID)" class="link-03" title="Bir Sonraki Hafta"><i data-feather="arrow-right"></i></a>
                    </div>

                </div>



                <div class="card mg-b-20 mg-lg-b-25">
                    <div class="card-header pd-y-15 pd-x-20 d-flex align-items-center justify-content-between">
                        <h6 class="tx-13 tx-spacing-1 tx-uppercase tx-semibold mg-b-0">@(Model.WeekCode). Hafta</h6>
                        <nav class="nav">
                            <a href="" class="link-03 mg-l-10"><span class="d-none d-sm-inline">@(Model.FirstWeekDay.DateKey.ToLongDateString())</span> <i data-feather="more-horizontal"></i> @(Model.LastWeekDay.DateKey.ToLongDateString())</a>
                        </nav>
                    </div><!-- card-header -->
                    <div class="card-body pd-0">
                        <div class="table-responsive">
                            <table class="table table-primary table-hover table-striped mg-b-0">
                                <thead>
                                    <tr class="table-active">
                                        <th scope="col" style="width:3%;">#</th>
                                        <th scope="col">Lokasyon / Çalışan</th>
                                        @foreach (var day in Model.WeekList.OrderBy(x => x.DateKey))
                                        {
                                            <th scope="col" style="width:10%;" class="text-center @(day.DateKey == Model.FirstWeekDay.DateKey ? "bd-l":day.DateKey == Model.LastWeekDay.DateKey ? "bd-r":"")">@($"{day.Day} {day.MonthNameTR} {day.DayNameTR}")</th>
                                        }
                                        <th scope="col" style="width:3%;" class="text-center"></th>
                                        <th scope="col" style="width:3%;" class="text-center"></th>
                                    </tr>
                                    <tr class="bd-b">
                                        <td>@Model.CurrentLocation.SortBy</td>
                                        <td><span class="font-weight-bold">@($"{Model.CurrentLocation.LocationName} {Model.CurrentLocation.Description} {Model.CurrentLocation.State}")</span></td>

                                        @foreach (var weekday in Model.WeekList.OrderBy(x => x.DateKey))
                                        {
                                            var locationschedule = Model.VLocationSchedule.FirstOrDefault(x => x.ShiftDate == weekday.DateKey);

                                            <td class="text-center @(weekday.DateKey == Model.FirstWeekDay.DateKey ? "bd-l":weekday.DateKey == Model.LastWeekDay.DateKey ? "bd-r":"")">
                                                @if (locationschedule != null)
                                                {
                                                    @(locationschedule?.ShiftDateStart != null ? locationschedule.ShiftDateStart.Value.ToShortDateString() : "") <b>@(locationschedule?.ShiftDateStart != null ? locationschedule.ShiftDateStart.Value.ToString("HH\\:mm") : "")</b> <br />@(locationschedule?.ShiftdateEnd != null ? locationschedule.ShiftdateEnd.Value.ToShortDateString() : "") <b>@(locationschedule?.ShiftdateEnd != null ? locationschedule.ShiftdateEnd.Value.ToString("HH\\:mm") : "")</b>

                                                }
                                            </td>

                                        }
                                        <td scope="col" style="width:3%;" class="text-center">Saat</td>
                                        <td class="text-center bd-l "><a href="#modalLocationSchedule" data-toggle="modal" class="text-sm-center d-sm-inline outline-none text-white" onclick="AddLocationSchedule(@Model.CurrentLocation.LocationID, '@(Model.WeekCode)')"> <i data-feather="calendar"></i></a></td>
                                    </tr>
                                </thead>
                                <tbody>





                                    @foreach (var employee in Model.Employees)
                                    {
                                        double totalduration = 0;

                                    <tr>
                                        <th scope="row" class="@(employee.IsActive == true ? "":"tx-danger")"> @employee.EmployeeID</th>

                                        <td><b>@(employee.FullName)</b></td>
                                        @foreach (var weekday in Model.WeekList.OrderBy(x => x.DateKey))
                                        {
                                            var schedule = Model.EmployeeSchedule.FirstOrDefault(x => x.EmployeeID == employee.EmployeeID && x.ShiftDate == weekday.DateKey);

                                            <td class="text-center @(weekday.DateKey == Model.FirstWeekDay.DateKey ? "bd-l":weekday.DateKey == Model.LastWeekDay.DateKey ? "bd-r":"")">
                                                @if (schedule != null)
                                                {
                                                    @(schedule?.ShiftDateStart != null ? schedule.ShiftDateStart.Value.ToShortDateString() : "") <b>@(schedule?.ShiftDateStart != null ? schedule.ShiftDateStart.Value.ToString("HH\\:mm") : "")</b> <br />@(schedule?.ShiftdateEnd != null ? schedule.ShiftdateEnd.Value.ToShortDateString() : "") <b>@(schedule?.ShiftdateEnd != null ? schedule.ShiftdateEnd.Value.ToString("HH\\:mm") : "")</b>

                                                }
                                            </td>

                                            totalduration += schedule != null && schedule.DurationMinute >0 ? schedule.DurationMinute.Value : 0;
                                        }
                                        <td scope="col" style="width:3%;" class="text-center">@(totalduration > 0 ? (totalduration/(double)60) : 0 )</td>
                                        <td class="text-center bd-l"><a href="#modalEmployeeSchedule" data-toggle="modal" class="text-sm-center d-sm-inline outline-none" onclick="AddEmployeeSchedule(@Model.CurrentLocation.LocationID, @employee.EmployeeID, '@(Model.WeekCode)')"> <i data-feather="calendar"></i></a></td>
                                    </tr>
                                    }



                                </tbody>
                            </table>
                        </div>
                    </div>


                    <div class="card-footer bg-transparent pd-y-10 pd-sm-y-15 pd-x-10 pd-sm-x-20">
                        <nav class="nav nav-with-icon tx-13">
                            <a href="/Schedule/ExportToExcel" class="nav-link"><i data-feather="download"></i> Excel Olarak İndir</a>
                        </nav>
                    </div><!-- card-footer -->
                </div>



            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="modalLocationSchedule" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body pd-20 pd-sm-40" id="AddLocationSchedule">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEmployeeSchedule" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body pd-20 pd-sm-40" id="AddEmployeeSchedule">

            </div>
        </div>
    </div>
</div>
@section scripts {


    <script>
        $(function () {
            'use strict'
            $("body").addClass("page-profile");

            $('#DatePicker').datepicker({
                showOtherMonths: true,
                selectOtherMonths: true,
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1,
                onSelect: function (dateText, inst) {

                    var locationid = $("#LocationID").val();
                    var parameters = dateText + "&locationid=" + locationid;
                    window.location.href = "/Schedule/Employee?date=" + parameters;
                },
                beforeShow: function (event, ui) {
                    var $link = $("#LocationScheduleDate");
                    ui.dpDiv.offset({
                        top: $link.offset().top + 10,
                        left: $link.offset().left + 10
                    });
                }
            });

            $("#LocationScheduleDate").click(function () {
                $("#DatePicker").datepicker("show");
            });

            $('.shifttime').mask('00:00');
            $('.shiftdate').mask('0000-00-00');

        });

        $('#listLocations').on('change', function () {
            window.location.href = "/Schedule/Employee?locationid=" + this.value;
        });

        var _locationid = $('#CurrentLocationID').val();
        var locationid = parseInt(_locationid);

        var weekcode = $('#CurrentWeekCode').val();

        if (locationid != null && locationid > 0) {

            console.log(locationid);
            console.log(weekcode);

            $('#modalLocationSchedule').modal('show');
            AddLocationSchedule(locationid, weekcode);

        }

        function AddLocationSchedule(locationid, weekcode) {
            //console.log(locationid);
            //console.log(weekcode);
            $.ajax({
                method: "GET",
                url: "/Schedule/AddLocationSchedule",
                data: { id: locationid, week: weekcode }
            }).done(function (d) {
                $("#AddLocationSchedule").html(d);
            });
        }

        function AddEmployeeSchedule(locationid, employeeid, weekcode) {
            //console.log(locationid);
            //console.log(weekcode);
            $.ajax({
                method: "GET",
                url: "/Schedule/AddEmployeeSchedule",
                data: { id: locationid, empid: employeeid, week: weekcode }
            }).done(function (d) {
                $("#AddEmployeeSchedule").html(d);
            });
        }

    </script>



    @if (Model.ResultMessage != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.ResultMessage.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}
