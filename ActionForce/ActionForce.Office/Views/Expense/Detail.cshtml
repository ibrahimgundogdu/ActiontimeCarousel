@model ExpenseControlModel
@{
    ViewBag.Title = "Masraf Merkezi İşlemleri";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Masraf Dökümanı Detayı</span>
    </div>
    <nav class="nav">
        <a href="/Expense"> <i data-feather="menu"></i> </a> &nbsp;
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body  mg-t-40 mg-lg-t-0">
                <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
                    <div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                                <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                                <li class="breadcrumb-item active" aria-current="page"> <a href="/Expense">Masraf Yönetimi - Masraf Dokümanları</a></li>
                            </ol>
                        </nav>
                        <h4 class="mg-b-0 tx-spacing--1">@($"{Model.ExpenseDocument.PeriodCode} - {Model.ExpenseDocument.DocumentNumber}")</h4>
                    </div>
                    <div class="d-none d-md-block">
                        <a href="/Expense" class="btn btn-primary btn-uppercase"><i data-feather="menu"></i> &nbsp; Masraf Listesi</a> &nbsp;
                        <a href="/Expense/Chart/@(Model.ExpenseDocument.UID)" class="btn btn-warning btn-uppercase"><i data-feather="list"></i> &nbsp; Masraf Dağılımı</a>
                        <a href="/Expense/Rows/@(Model.ExpenseDocument.UID)" class="btn btn-warning btn-uppercase"><i data-feather="list"></i> &nbsp; Kaynak Satırları</a>
                    </div>
                </div>


                @using (Html.BeginForm("EditExpense", "Expense", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="row row-xs">
                        <div class="col-lg-12">

                            <div class="form-group row mg-b-5 ">
                                <label for="DocumentNumber" class="col-sm-3 col-form-label">Belge No</label>
                                <div class="col-sm-6">
                                    <input id="DocumentNumber" name="DocumentNumber" type="text" class="form-control font-weight-bold" autocomplete="off" placeholder="Belge No" value="@(Model.ExpenseDocument.DocumentNumber)" required readonly>
                                </div>
                                <div class="col-sm-3">
                                    <input id="ExpenseDocumentID" name="ExpenseDocumentID" type="hidden" value="@(Model.ExpenseDocument.ID)" />
                                    <input id="UID" name="UID" type="hidden" value="@(Model.ExpenseDocument.UID)" />
                                </div>
                            </div>

                            <div class="form-group row mg-b-5 ">
                                <label for="DocumentDate" class="col-sm-3 col-form-label">Belge Tarihi</label>
                                <div class="col-sm-6">
                                    <input id="DocumentDate" name="DocumentDate" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Tarih" value="@(Model.ExpenseDocument.DocumentDate?.ToString("yyyy-MM-dd"))" required>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5">
                                <label for="StatusName" class="col-sm-3 col-form-label">Durumu</label>
                                <div class="col-sm-6">
                                    <input id="StatusName" name="StatusName" type="text" class="form-control font-weight-bold" autocomplete="off" placeholder="Belge No" value="@(Model.ExpenseDocument.StatusName)" required readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="DocumentSource" class="col-sm-3 col-form-label">Referans</label>
                                <div class="col-sm-6">
                                    <input id="DocumentSource" name="DocumentSource" type="text" class="form-control font-weight-bold" maxlength="50" autocomplete="off" placeholder="Kaynak" value="@(Model.ExpenseDocument.DocumentSource)" required readonly>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>


                            <div class="form-group row mg-b-5 bg-gray-50">
                                <label for="ExpenseCenterID" class="col-sm-3 col-form-label tx-sm-13">Masraf Merkezi</label>
                                <div class="col-sm-6">
                                    <select class="form-control font-weight-bold select2" id="ExpenseCenterID" name="ExpenseCenterID" required>
                                        @foreach (var item in Model.ExpenseCenters.OrderBy(x => x.SortBy))
                                        {
                                            <option value="@(item.ID)" data-group="@(item.ProfitCenter)" @(Model.ExpenseDocument.ExpenseCenterID == item.ID ? "selected" : "")>@($"{item.ExpenseCenterName}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5 bg-gray-50">
                                <label for="ExpenseItemID" class="col-sm-3 col-form-label">Masraf Kalemi</label>
                                <div class="col-sm-6">
                                    <select class="form-control font-weight-bold" id="ExpenseItemID" name="ExpenseItemID" required>
                                        @foreach (var item in Model.ExpenseItems.OrderBy(x => x.SortBy))
                                        {
                                            <option value="@(item.ID)" @(Model.ExpenseDocument.ExpenseItemID == item.ID ? "selected" : "")>@($"{item.ExpenseItemName}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row bg-gray-50">
                                <label for="ExpenseGroupID" class="col-sm-3 col-form-label">Masraf Grubu</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="ExpenseGroupID" name="ExpenseGroupID" required>
                                        @foreach (var item in Model.ExpenseGroups.OrderBy(x => x.SortBy))
                                        {
                                            <option value="@(item.ID)" @(Model.ExpenseDocument.ExpenseGroupID == item.ID ? "selected" : "")>@($"{item.ExpenseGroupName}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row bg-gray-50">
                                <label for="ExpenseChartGroupID" class="col-sm-3 col-form-label">Dağıtım Grubu</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="ExpenseChartGroupID" name="ExpenseChartGroupID" readonly>
                                        @foreach (var item in Model.ExpenseChartGroups.OrderBy(x => x.SortBy))
                                        {
                                            <option value="@(item.ID)" @(Model.ExpenseDocument.DistributeGroupID == item.ID ? "selected" : "")>@($"{item.GroupCode} {item.GroupName}" )</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>


                            <div class="form-group row">
                                <label for="ExpensePeriod" class="col-sm-3 col-form-label">Belge Dönemi Başlangıcı</label>
                                <div class="col-sm-6">
                                    <input id="ExpensePeriod" name="ExpensePeriod" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Tarih" value="@(Model.ExpenseDocument.ExpensePeriod?.ToString("yyyy-MM-dd"))" required>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-5 bg-gray-50">
                                <label for="TaxRate" class="col-sm-3 col-form-label">KDV Oranı (0, 8, 18)</label>
                                <div class="col-sm-6">
                                    <input id="TaxRate" name="TaxRate" type="text" class="form-control font-weight-bold tx-15 text-right money" autocomplete="off" min="0" placeholder="KDV Oranı" value="@(Model.ExpenseDocument.TaxRate?.ToString("N2"))" required>
                                </div>
                                <div class="col-sm-3 form-control-plaintext font-weight-bold">%</div>
                            </div>

                            <div class="form-group row mg-b-5 bg-gray-50">
                                <label for="TotalAmount" class="col-sm-3 col-form-label">Masraf Tutarı (KDV Dahil)</label>
                                <div class="col-sm-6">
                                    <input id="TotalAmount" name="TotalAmount" type="text" class="form-control font-weight-bold tx-15 text-right money" autocomplete="off" min="0" placeholder="Masraf Tutarı" value="@(Model.ExpenseDocument.TotalAmount?.ToString("N2"))" required>
                                </div>
                                <div class="col-sm-3 form-control-plaintext font-weight-bold">@(Model.Authentication.ActionEmployee.OurCompany.Currency)</div>
                            </div>

                            <div class="form-group row bg-gray-50">
                                <label for="DistributionAmount" class="col-sm-3 col-form-label">Dağılım Tutarı (KDV Dahil)</label>
                                <div class="col-sm-6">
                                    <input id="DistributionAmount" name="DistributionAmount" type="text" class="form-control font-weight-bold tx-15 text-right money" autocomplete="off" min="0" placeholder="Dağılım Tutarı" value="@(Model.ExpenseDocument.DistributionAmount?.ToString("N2"))" required>
                                </div>
                                <div class="col-sm-3 form-control-plaintext font-weight-bold">
                                    <input id="Currency" name="Currency" type="hidden" value="@(Model.Authentication.ActionEmployee.OurCompany.Currency)" />
                                    @(Model.Authentication.ActionEmployee.OurCompany.Currency)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="ExpenseDescription" class="col-sm-3 col-form-label">Açıklama</label>
                                <div class="col-sm-6">
                                    <textarea id="ExpenseDescription" name="ExpenseDescription" rows="2" cols="20" class="form-control" style="width:100% !important;">@(Model.ExpenseDocument.ExpenseDescription)</textarea>
                                </div>
                                <div class="col-sm-3">
                                </div>
                            </div>

                            <div class="form-group row mg-b-0">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-primary btn-block">Masraf Dokümanı Güncelle</button>
                                </div>
                                <div class="col-sm-3">
                                    @if (Model.ExpenseDocument.StatusID == 0 && Model.ExpenseDocument.AutoComputeTypeID == null)
                                    {
                                        <a href="/Expense/Remove/@(Model.ExpenseDocument.UID)" class="btn btn-danger btn-uppercase" onclick="return confirm('Maliyet Dokümanını Silmek İstediğinize Emin misiniz?')"><i data-feather="trash-2"></i> &nbsp; Masraf Dokümanını Sil</a>
                                    }

                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@section canvasmenu {

}

@section scripts {
    <script src="~/assets/js/ActionForceScript.js"></script>
    <script>
        $(function () {
            'use strict'
            $('.select2').select2({
                placeholder: 'Masraf Merkezi Seçiminiz',
                searchInputPlaceholder: 'Search options',
                allowClear: true
            });
            $('#DocumentDate').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });

            $('#ExpensePeriod').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });



            $('#DateBegin').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });

            $('#DateEnd').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });

            $('#ReturnWorkDate').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });
        });
        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.fulldate').mask('0000-00-00 00:00:00');
            $('.money').mask("#.##0,00", { reverse: true });
            $('.quantity').mask("##0", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
        });

        $(document).ready(function () {

            $("#ExpenseCenterID").change(function () {

                //var centerID = $("#ExpenseCenterID").val();
                var isprofit = $(this).find(':selected').data('group');

                if (isprofit == 'True') {

                    $("#ExpenseGroupID").find('option').remove().end();
                    //$("#ExpenseGroupID").append("<option value=''>Masraf Grubu Seçiminiz</option>");
                    $("#ExpenseGroupID").append("<option value='1'>Lokasyon</option>");

                }
                else {

                    $("#ExpenseGroupID").find('option').remove().end();
                    //$("#ExpenseGroupID").append("<option value=''>Masraf Grubu Seçiminiz</option>");
                    $("#ExpenseGroupID").append("<option value='2'>Ofis</option>");
                    $("#ExpenseGroupID").append("<option value='3'>Genel</option>");

                }
            });
        });

    </script>

    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}

