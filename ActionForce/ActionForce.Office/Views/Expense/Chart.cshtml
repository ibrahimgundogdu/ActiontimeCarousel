        });
        $(function () {
            $('.shiftbegintime').mask('00:00');
            $('.hour').mask('00:00');
            $('.hourfull').mask('00:00:00');
            $('.shiftdate').mask('0000-00-00');
            $('.fulldate').mask('0000-00-00 00:00:00');
            $('.money').mask("#.##0,00", { reverse: true });
            $('.quantity').mask("##0", { reverse: true });
            $('.money4').mask("#.##0,0000", { reverse: true });
        });

        function ComputeAmount(id) {

            var amount = $('#DistributedAmount' + id).val().replace('.', '').replace(',', '.');
            var totalamount = @(Model.ExpenseDocument.DistributionAmount);
            var rate = (parseFloat(amount) / parseFloat(totalamount) * 100) || 0.0000;

            $("#DistributedRate" + id).val(rate.toFixed(4).toString());

            $.ajax({
                method: "GET",
                url: "/Expense/SetExpenseChart",
                contentType: 'application/json',
                data: { id, amount: parseFloat(amount) }
            }).done(function (data) {

                $("#UpdateDate" + data.ID).html(data.UpdateDate);
                $("#UpdaterFullName" + data.ID).html(data.UpdateEmployee);

                $("#DistributedRate").html('% '+data.DistRate);
                $("#DistributedAmount").html(data.DistAmount);

                $("#BDistributedRate").html('% ' + data.BalanceRate);
                $("#BDistributedAmount").html(data.BalanceAmount);

                if (data.ShowButton == 1) {
                    $('#CreateCost').show();
                }
                else {
                    $('#CreateCost').hide();
                }
                //console.log(data);
            });
        };

