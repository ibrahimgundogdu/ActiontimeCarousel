@model ExpenseControlModel
@{
    ViewBag.Title = "Masraf Merkezi İşlemleri";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Masraf Dökümanı Dağılım Detayı</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body  mg-t-40 mg-lg-t-0">
                <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
                    <div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                                <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                                <li class="breadcrumb-item active" aria-current="page"> <a href="/Expense">Masraf Yönetimi - Masraf Dokümanları</a></li>
                            </ol>
                        </nav>
                        <h4 class="mg-b-0 tx-spacing--1">@($"{Model.ExpenseDocument.PeriodCode} - {Model.ExpenseDocument.DocumentNumber}")</h4>
                    </div>
                    <div class="d-none d-md-block">
                        <a href="/Expense" class="btn btn-primary btn-uppercase"><i data-feather="menu"></i> &nbsp; Masraf Listesi</a> &nbsp;
                        <a href="/Expense/Detail/@(Model.ExpenseDocument.UID)" class="btn btn-warning btn-uppercase"><i data-feather="file-text"></i> &nbsp; Masraf Detayı</a>
                    </div>
                </div>



                <div class="row row-xs">
                    <div class="col-lg-12">

                        <div class="form-group row mg-b-5 ">
                            <label for="DocumentNumber" class="col-sm-3 col-form-label">Belge No</label>
                            <div class="col-sm-6">
                                <input id="DocumentNumber" name="DocumentNumber" type="text" class="form-control font-weight-bold" autocomplete="off" placeholder="Belge No" value="@(Model.ExpenseDocument.DocumentNumber)" readonly>
                            </div>
                            <div class="col-sm-3">
                                <input id="ExpenseDocumentID" name="ExpenseDocumentID" type="hidden" value="@(Model.ExpenseDocument.ID)" />
                                <input id="UID" name="UID" type="hidden" value="@(Model.ExpenseDocument.UID)" />
                            </div>
                        </div>

                        <div class="form-group row mg-b-5 ">
                            <label for="DocumentDate" class="col-sm-3 col-form-label">Belge Tarihi</label>
                            <div class="col-sm-6">
                                <input id="DocumentDate" name="DocumentDate" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Tarih" value="@(Model.ExpenseDocument.DocumentDate?.ToString("yyyy-MM-dd"))" readonly>
                            </div>
                            <div class="col-sm-3">
                            </div>
                        </div>

                        <div class="form-group row mg-b-5">
                            <label for="StatusName" class="col-sm-3 col-form-label">Durumu</label>
                            <div class="col-sm-6">
                                <input id="StatusName" name="StatusName" type="text" class="form-control font-weight-bold" autocomplete="off" value="@(Model.ExpenseDocument.StatusName)" readonly>
                            </div>
                            <div class="col-sm-3">
                            </div>
                        </div>

                        <div class="form-group row mg-b-5 bg-gray-50">
                            <label for="ExpenseCenterID" class="col-sm-3 col-form-label tx-sm-13">Masraf Merkezi</label>
                            <div class="col-sm-6">
                                <input id="ExpenseCenterID" name="ExpenseCenterID" type="text" class="form-control font-weight-bold" autocomplete="off" value="@(Model.ExpenseDocument.ExpenseCenterName)" readonly>
                            </div>
                            <div class="col-sm-3">
                            </div>
                        </div>

                        <div class="form-group row mg-b-5 bg-gray-50">
                            <label for="ExpenseItemID" class="col-sm-3 col-form-label">Masraf Kalemi</label>
                            <div class="col-sm-6">
                                <input id="ExpenseItemID" name="ExpenseItemID" type="text" class="form-control font-weight-bold" autocomplete="off" value="@(Model.ExpenseDocument.ExpenseItemName)" readonly>
                            </div>
                            <div class="col-sm-3">
                            </div>
                        </div>

                        <div class="form-group row bg-gray-50">
                            <label for="ExpenseGroupID" class="col-sm-3 col-form-label">Masraf Grubu</label>
                            <div class="col-sm-6">
                                <input id="ExpenseGroupID" name="ExpenseGroupID" type="text" class="form-control font-weight-bold" autocomplete="off" value="@(Model.ExpenseDocument.ExpenseGroupName)" readonly>
                            </div>
                            <div class="col-sm-3">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="ExpensePeriod" class="col-sm-3 col-form-label">Belge Dönemi Başlangıcı</label>
                            <div class="col-sm-6">
                                <input id="ExpensePeriod" name="ExpensePeriod" type="text" class="form-control shiftdate" autocomplete="off" placeholder="Tarih" value="@(Model.ExpenseDocument.ExpensePeriod?.ToString("yyyy-MM-dd"))" readonly>
                            </div>
                            <div class="col-sm-3">
                            </div>
                        </div>

                        <div class="form-group row mg-b-5 bg-gray-50">
                            <label for="TotalAmount" class="col-sm-3 col-form-label">Masraf Tutarı</label>
                            <div class="col-sm-6">
                                <input id="TotalAmount" name="TotalAmount" type="text" class="form-control font-weight-bold tx-15 text-right money" autocomplete="off" min="0" placeholder="Masraf Tutarı" value="@(Model.ExpenseDocument.TotalAmount?.ToString("N2"))" readonly>
                            </div>
                            <div class="col-sm-3 form-control-plaintext font-weight-bold">@(Model.Authentication.ActionEmployee.OurCompany.Currency)</div>
                        </div>

                        <div class="form-group row bg-gray-50">
                            <label for="DistributionAmount" class="col-sm-3 col-form-label">Dağılım Tutarı</label>
                            <div class="col-sm-6">
                                <input id="DistributionAmount" name="DistributionAmount" type="text" class="form-control font-weight-bold tx-15 text-right money" autocomplete="off" min="0" placeholder="Dağılım Tutarı" value="@(Model.ExpenseDocument.DistributionAmount?.ToString("N2"))" readonly>
                            </div>
                            <div class="col-sm-3 form-control-plaintext font-weight-bold">@(Model.Authentication.ActionEmployee.OurCompany.Currency)</div>
                        </div>

                    </div>
                </div>

                <div class="row row-xs">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped table-dashboard">
                            <thead>
                                <tr>
                                    <th colspan="8">
                                        <a href="/Expense/DistributeEQ/@(Model.ExpenseDocument.UID)" class="btn btn-brand-01 btn-xs font-weight-bold"> <i data-feather="more-vertical"></i>  Eşit Olarak Dağıt</a>
                                    </th>
                                </tr>
                                <tr>
                                    <th>Merkez</th>
                                    <th>Masraf Kalemi</th>
                                    <th class="text-right">Dağıtılan (@(Model.ExpenseDocument.Currency))</th>
                                    <th class="text-right">Oran (%)</th>
                                    <th class="text-right">Tutar (@(Model.ExpenseDocument.Currency))</th>
                                    <th></th>
                                    <th>Güncelleme</th>
                                    <th>Güncelleyen</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ExpenseDocumentCharts)
                                {
                                    <tr>
                                        <td>@(item.ExpenseCenterName)</td>
                                        <td>@(item.ExpenseItemName)</td>
                                        <td class="text-right tx-15">@(item.DistributionAmount?.ToString("N2"))</td>
                                        <td class="p-0"><input id="DistributedRate@(item.ID)" type="text" class="form-control font-weight-bold tx-15 text-right money4" autocomplete="off" min="0" data-itemid="@(item.ID)" onchange="ComputeRate(@(item.ID))" value="@(item.DistributedRate?.ToString("N4"))"></td>
                                        <td class="p-0"><input id="DistributedAmount@(item.ID)" type="text" class="form-control font-weight-bold tx-15 text-right money4" autocomplete="off" min="0" data-itemid="@(item.ID)" onchange="ComputeAmount(@(item.ID))" value="@(item.DistributedAmount?.ToString("N4"))"></td>
                                        <td>@(item.Currency)</td>
                                        <td>@(item.UpdateDate != null ? item.UpdateDate : item.RecordDate)</td>
                                        <td>@(item.UpdaterFullName != null ? item.UpdaterFullName : item.RecorderFullName)</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-right">Dağıtılan</td>
                                    <td class="font-weight-bold tx-15 text-right"> % @(Model.ExpenseDocumentCharts.Sum(x=> x.DistributedRate)?.ToString("N4"))</td>
                                    <td class="font-weight-bold tx-15 text-right"> @(Model.ExpenseDocumentCharts.Sum(x=> x.DistributedAmount)?.ToString("N4"))</td>
                                    <td>@(Model.ExpenseDocument.Currency)</td>
                                    <td colspan="2"></td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-right">Kalan</td>
                                    <td class="font-weight-bold tx-15 text-right"> % @((100 - Model.ExpenseDocumentCharts.Sum(x=> x.DistributedRate))?.ToString("N4"))</td>
                                    <td class="font-weight-bold tx-15 text-right"> @((Model.ExpenseDocument.DistributionAmount - Model.ExpenseDocumentCharts.Sum(x=> x.DistributedAmount))?.ToString("N4"))</td>
                                    <td>@(Model.ExpenseDocument.Currency)</td>
                                    <td colspan="2"></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section canvasmenu {

}

