@model EmployeeControlModel


<table class="table table-dark table-hover table-striped mg-b-0">
    <tbody class="table-hover table-striped">
        <tr>
            <td>Ad Soyad</td>
            <td>@(Model.EmpList.FullName)</td>
        </tr>
        <tr>
            <td>E-Posta</td>
            <td>@(Model.EmpList.EMail)</td>
        </tr>
        <tr>
            <td>Mobil</td>
            <td>@(Model.EmpList.Mobile)</td>
        </tr>
        <tr>
            <td>Rol</td>
            <td>@(Model.EmpList.GroupName)</td>
        </tr>
        <tr>
            <td>Alanı</td>
            <td>@(Model.EmpList.AreaName)</td>
        </tr>
        <tr>
            <td>Oryantasyon Seviyesi</td>
            <td>@(Model.EmpList.SequenceName)</td>
        </tr>
        <tr>
            <td>Departman</td>
            <td>@(Model.EmpList.DepartmentName)</td>
        </tr>
        <tr>
            <td>Pozisyon</td>
            <td>@(Model.EmpList.PositionName)</td>
        </tr>
        <tr>
            <td>Kategori</td>
            <td>@(Model.EmpList.SalaryCategoryName)</td>
        </tr>
        <tr>
            <td>Durum</td>
            <td>@(Model.EmpList.Name)</td>
        </tr>
        <tr>
            <td>Çalışma Türü</td>
            <td>@(Model.EmpList.TypeName)</td>
        </tr>
        <tr>
            <td>Açıklama</td>
            <td>@(Model.EmpList.Description)</td>
        </tr>
    </tbody>
</table>


    <div class="row row-xs bg-gray-100 mg-b-0 mg-t-40">
        <div class="col-sm-3 pd-t-10 pd-b-10">
            <b>Kayıt Tarihçesi</b>
        </div>

        <div class="col-sm-3 pd-t-10">@(Html.Raw($"<b>Kaydeden </b> : {Model.EmpList.RecordFullName} {Model.EmpList.RecordDate} ")) </div>
            <div class="col-sm-3 pd-t-10">@(Model.EmpList.UpdateDate != null ? Html.Raw($"<b>Güncelleyen </b> : {Model.EmpList.UpdateFullName} {Model.EmpList.UpdateDate} ") : Html.Raw("")) </div>

    </div>

    @if (Model.LogList != null && Model.LogList.Count() > 0)
    {
        <div class="row row-xs">
            <table class="table table-sm table-bordered">
                <thead>
                    <tr>
                        <th>Tarih</th>
                        <th>Kişi</th>
                        <th>Ortam</th>
                        <th>İşlem</th>
                        <th>Açıklama</th>
                        <th>Alan</th>
                        <th>Önceki</th>
                        <th>Yeni</th>
                        <th>Başarılı?</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.LogList.OrderBy(x => x.RecordDate))
                    {
                        <tr>
                            <td>@(item.RecordDate)</td>
                            <td>@(item.RecordEmployee)</td>
                            <td>@(item.Environment)</td>
                            <td>@(item.ProcessType)</td>
                            <td>@(item.ResultMessage)</td>
                            <td>@(item.FieldName)</td>
                            <td>@(item.OldValue)</td>
                            <td>@(item.NewValue)</td>
                            <td>@(item.IsSuccess)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
