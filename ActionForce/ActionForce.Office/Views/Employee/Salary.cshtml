@model EmployeeControlModel
@{
    ViewBag.Title = "Employee Ücret Tanımlamaları";
}
@section style{
    <link href="/lib/animate.css/animate.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/dashforge.demo.css">
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}
<div class="content-header">
    <div class="content-search col-lg">
        <span class="tx-20"> @(Model.Employee != null ? Model.Employee.FullName + " " + Model.Employee.ShiftTypeName : "") - Ücret Tanımlamaları</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="profile-sidebar profile-sidebar-three">
                <div class="row">
                    @{Html.RenderPartial("_PartialProfileSideBar", Model);}
                </div>
            </div>
            <div class="media-body mg-t-40 mg-lg-t-0 pd-lg-x-10">
                
                <div class="card mg-b-20 mg-lg-b-25">
                    
                    <div class="card-body pd-0">
                        <div class="table-responsive">
                            @using (Ajax.BeginForm("AddEmployeeSalary", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "EmployeeSalary", InsertionMode = InsertionMode.Replace }))
                            {
                                @Html.AntiForgeryToken()

                                <table class="table table-warning table-sm tx-13 tx-nowrap mb-0">
                                    <tbody>
                                        <tr class="bg-white">
                                            <td class="wd-5p"></td>
                                            <td class="text-right wd-10p" style="padding:2px !important;"><input type="text" id="DateStart" name="DateStart" class="form-control form-control-sm datepicker shiftdate" placeholder="@DateTime.Now.ToString("yyyy-MM-dd")"></td>
                                            <td class="text-right wd-10p" style="padding:2px !important;"><input type="text" id="Hourly" name="Hourly" class="form-control form-control-sm" placeholder="Saatlik Ücret"></td>
                                            <td class="text-right wd-10p" style="padding:2px !important;"><input type="text" id="Monthly" name="Monthly" class="form-control form-control-sm" placeholder="Aylık Ücret"></td>
                                            <td class="text-right wd-10p" style="padding:2px !important;"><input type="text" id="HourlyExtend" name="HourlyExtend" class="form-control form-control-sm money" placeholder="Mesai"></td>
                                            <td class="text-right wd-5p" style="padding:2px !important;"><input type="text" id="ExtendMultiplyRate" name="ExtendMultiplyRate" class="form-control form-control-sm money text-right" placeholder="Çarpan"></td>

                                            <td class="wd-15p" style="padding:2px !important;">
                                                <input name="EmployeeID" type="hidden" value="@(Model.Employee.EmployeeID)" />
                                                <button type="submit" class="btn btn-xs btn-dark btn-block">Ücret Tanımı Ekle</button>
                                            </td>
                                            <td class="wd-5p" style="padding:2px !important;"></td>

                                        </tr>
                                    </tbody>
                                </table>
                            }

                            <div id="EmployeeSalary">
                                @{ Html.RenderPartial("_PartialEmployeeSalary", Model);}
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>


