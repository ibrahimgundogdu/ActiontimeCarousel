@model EmployeeControlModel
@{
    ViewBag.Title = "Çalışan İşlemleri";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Çalışan Ekleme</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body  mg-t-40 mg-lg-t-0">
                <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
                    <div>

                        <h4 class="mg-b-0 tx-spacing--1">01. Temel Bilgiler</h4>
                    </div>
                    <div class="d-none d-md-block">
                        <a href="/Employee/" class="btn btn-primary btn-uppercase"><i data-feather="list"></i> &nbsp; Çalışan Listesi</a>
                    </div>
                </div>
                <div id="employeeStatus">
                    <div class="row no-gutters">
                        <div class="col-lg-12">
                            @using (Html.BeginForm("AddEmployee2", "Employee", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group row mg-b-5 bg-gray-50">
                                    <label for="Identityx" class="col-sm-3 col-form-label">Kimlik Türü / Numarası</label>
                                    <div class="col-sm-2">
                                        <select class="form-control tx-15" id="IdentityType" name="IdentityType" required>
                                            @foreach (var item in Model.IdentityTypes)
                                            {
                                                <option value="@item.TypeCode">@item.TypeName</option>
                                            }

                                        </select>
                                    </div>
                                    <div class="col-sm-4">
                                        <input id="IdentityNumber" name="IdentityNumber" type="text" maxlength="11" class="form-control tx-15" autocomplete="off" placeholder="TCKN" required>
                                    </div>
                                    <div class="col-sm-3">
                                        <label for="Identityx" class="col-form-label" title="Gerekli Alan"> * </label>
                                    </div>
                                </div>
                                <div class="form-group row mg-b-5 bg-gray-50">
                                    <label for="FullNamex" class="col-sm-3 col-form-label">Adı Soyadı</label>
                                    <div class="col-sm-6">
                                        <input id="FullName" name="FullName" type="text" class="form-control tx-15" autocomplete="off" placeholder="Ad Soyad" required>
                                    </div>
                                    <div class="col-sm-3"><label for="Identityx" class="col-form-label" title="Gerekli Alan"> * </label></div>
                                </div>
                                <div class="form-group row mg-b-5 bg-gray-50">
                                    <label for="EMailx" class="col-sm-3 col-form-label">E-Posta Adresi</label>
                                    <div class="col-sm-6">
                                        <input id="EMail" name="EMail" type="email" class="form-control tx-15" autocomplete="off" placeholder="E-Posta Adresi">
                                    </div>
                                    <div class="col-sm-3">
                                    </div>
                                </div>
                                <div class="form-group row mg-b-5 bg-gray-50">
                                    <label for="Mobilex" class="col-sm-3 col-form-label">Telefonu</label>
                                    <div class="col-sm-2">
                                        <select class="form-control tx-15" id="PhoneCode" name="PhoneCode">
                                            @foreach (var item in Model.PhoneCodes)
                                            {
                                                <option value="@item.Code">@(item.Code) @(item.Country)</option>
                                            }

                                        </select>
                                    </div>
                                    <div class="col-sm-4">
                                        <input id="Mobile" name="Mobile" type="tel" class="form-control phone tx-15" autocomplete="off" placeholder="(000) 000 00 00">
                                    </div>
                                    <div class="col-sm-3">
                                    </div>
                                </div>
                                <div class="form-group row mg-b-0">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-6">
                                        <button type="submit" class="btn btn-primary btn-block tx-15">Çalışan Ekle</button>
                                    </div>
                                    <div class="col-sm-3">
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
</div>

