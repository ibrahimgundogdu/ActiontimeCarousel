@model EmployeeControlModel
@{
    ViewBag.Title = "Employee Takvim";
}
@section style{
    <link href="/lib/animate.css/animate.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/dashforge.demo.css">
    <link rel="stylesheet" href="/assets/css/dashforge.css">
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}
<div class="content-header">
    <div class="content-search col-lg">
        <span class="tx-20"> @(Model.EmpList != null ? Model.EmpList.FullName + " " + Model.EmpList.TypeName : "") - Takvim</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="profile-sidebar profile-sidebar-two pd-lg-r-15">
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg mg-t-20 mg-sm-t-0">
                        <nav class="nav flex-column demo-animate-list">
                            <a href="/Employee/Schedule/@(Model.EmpList.EmployeeUID)" class="nav-link">Schedule (Takvim)</a>
                            <a href="/Employee/Shift/@(Model.EmpList.EmployeeUID)" class="nav-link">Shift (Mesai Mola)</a>
                            <a href="/Employee/Action/@(Model.EmpList.EmployeeUID)" class="nav-link">Cari Hesap</a>
                            <a href="#" class="nav-link">Set Card</a>
                            <a href="#" class="nav-link">Lokasyonlar</a>
                            <a href="#" class="nav-link">Özlük Belgeleri</a>
                            <a href="#" class="nav-link">Puanlama Skorlama</a>
                            <a href="#" class="nav-link">Check Liste</a>
                            <a href="#" class="nav-link">Çalışma Dönemleri</a>
                            <a href="#" class="nav-link">Ücret Tanımlamaları</a>
                            <a href="/Employee/Edit/@(Model.EmpList.EmployeeUID)" class="nav-link">Güncelle</a>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="media-body mg-t-40 mg-lg-t-0 pd-lg-x-10">
                <div class="profile-update-option bg-white ht-50 bd d-flex justify-content-end mg-b-20 mg-lg-b-20 rounded">
                    <div class="d-flex align-items-center pd-x-5 mg-r-auto">

                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="#" id="EmployeeScheduleDate" class="link-03" title="Tarih Seç">
                            <i class="fa fa-calendar"></i>
                            <input type="hidden" id="DatePicker" />
                            <div></div>
                        </a>
                        <input id="EmployeeID" type="hidden" value="@Model.EmpList.EmployeeID" />
                        <input id="WeekCode" type="hidden" value="@Model.WeekCode" />
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Employee/Schedule?week=@(Model.PrevWeekCode)&id=@(Model.EmpList.EmployeeUID)" class="link-03" title="Bir Önceki Hafta"><i class="fa fa-arrow-left"></i></a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Employee/Schedule?date=@(DateTime.Now.ToString("yyyy-MM-dd"))&id=@(Model.EmpList.EmployeeUID)" class="link-03" title="Bu Hafta"><i class="fa fa-bullseye"></i></a>
                    </div>
                    <div class="wd-50 bd-l d-flex align-items-center justify-content-center">
                        <a href="/Employee/Schedule?week=@(Model.NextWeekCode)&id=@(Model.EmpList.EmployeeUID)" class="link-03" title="Bir Sonraki Hafta"><i class="fa fa-arrow-right"></i></a>
                    </div>

                </div>
                @{Html.RenderPartial("_PartialEmployeeSchedule", Model);}
            </div>
        </div>
    </div>
</div>

