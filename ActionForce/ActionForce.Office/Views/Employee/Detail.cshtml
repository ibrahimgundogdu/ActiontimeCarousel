@model EmployeeControlModel
@{
    ViewBag.Title = "Çalışan İşlemleri";
}

@section style{
    <link href="/lib/animate.css/animate.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/dashforge.demo.css">
    <link rel="stylesheet" href="/assets/css/dashforge.css">
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Çalışan Detayı</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="profile-sidebar profile-sidebar-two pd-lg-r-15">
                <div class="row">
                    <div class="col-sm-3 col-md-2 col-lg">
                        <div class="avatar avatar-xxl">
                            <img src="http://office.ufegrup.com/img/Employee/@(Model.EmpList.FotoFile)" class="rounded-10 w-100" alt="">
                        </div>
                    </div><!-- col -->
                    <div class="col-sm-8 col-md-7 col-lg mg-t-20 mg-sm-t-0 mg-lg-t-25">
                        <nav class="nav flex-column demo-animate-list">
                            <a href="#" onclick="EmployeeCalendar(@Model.EmpList.EmployeeID);" class="nav-link">Takvim</a>
                            <a href="#" onclick="EmployeeShift(@Model.EmpList.EmployeeID);" class="nav-link">Mesai Mola</a>
                            <a href="#" class="nav-link">Cari Hesap</a>
                            <a href="#" class="nav-link">Set Card</a>
                            <a href="#" class="nav-link">Lokasyonlar</a>
                            <a href="#" class="nav-link">Özlük Belgeleri</a>
                            <a href="#" class="nav-link">Puanlama Skorlama</a>
                            <a href="#" class="nav-link">Check Liste</a>
                            <a href="#" class="nav-link">Çalışma Dönemleri</a>
                            <a href="#" class="nav-link">Ücret Tanımlamaları</a>
                            <a href="#" onclick="EmployeeUpdate(@Model.EmpList.EmployeeID);" class="nav-link">Güncelle</a>
                        </nav>
                    </div>
                </div>
            </div>

            <div class="media-body mg-t-40 mg-lg-t-0 pd-lg-x-10" id="employeeList">
                @{Html.RenderPartial("_PartialEmployeeDetail", Model);}
            </div>







        </div>
    </div>
</div>

@section scripts {
    <script src="/lib/cleave.js/cleave.min.js"></script>

    

    <script>
        $(function () {

            $('.select2').select2({
                placeholder: 'Çalışan Seçiminiz',
                searchInputPlaceholder: 'Search options'
            });

            var dateFormat = 'yy-mm-dd',
                from = $('#dateFrom')
                    .datepicker({
                        defaultDate: '+1w',
                        numberOfMonths: 2,
                        dateFormat: "yy-mm-dd",
                        dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                        monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                        firstDay: 1
                    })
                    .on('change', function () {
                        to.datepicker('option', 'minDate', getDate(this));
                    }),
                to = $('#dateTo').datepicker({
                    defaultDate: '+1w',
                    numberOfMonths: 2,
                    dateFormat: "yy-mm-dd",
                    dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                    monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                    firstDay: 1
                })
                    .on('change', function () {
                        from.datepicker('option', 'maxDate', getDate(this));
                    });

            $('#DocumentDate').datepicker({
                dateFormat: "yy-mm-dd",
                dayNamesMin: ["Pz", "Pt", "Sa", "Ca", "Pe", "Cu", "Ct"],
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                firstDay: 1
            });
            function getDate(element) {
                var date;
                try {
                    date = $.datepicker.parseDate(dateFormat, element.value);
                } catch (error) {
                    date = null;
                }

                return date;

            }

        });

        function EmployeeUpdate(id) {
            $.ajax({
                method: "GET",
                url: "/Employee/EmployeeUpdate",
                data: { id: id }
            }).done(function (d) {
                $("#employeeList").html(d);
            });
        }
        function EmployeeCalendar(id) {
            $.ajax({
                method: "GET",
                url: "/Employee/EmployeeCalendar",
                data: { id: id }
            }).done(function (d) {
                $("#employeeList").html(d);
            });
        }
        function EmployeeShift(id, week) {

            console.log(id);
            console.log(week);

            $.ajax({
                method: "GET",
                url: "/Employee/EmployeeShift",
                data: { id: id, week: week }
            }).done(function (d) {
                $("#employeeList").html(d);
            });
        }
        
    </script>
    <script>
        $(function () {
            'use strict'

            $('.off-canvas-menu').on('click', function (e) {
                e.preventDefault();
                var target = $(this).attr('href');
                $(target).addClass('show');
            });


            $('.off-canvas .close').on('click', function (e) {
                e.preventDefault();
                $(this).closest('.off-canvas').removeClass('show');
            })

            $(document).on('click touchstart', function (e) {
                e.stopPropagation();

                if (!$(e.target).closest('.off-canvas-menu').length) {
                    var offCanvas = $(e.target).closest('.off-canvas').length;
                    if (!offCanvas) {
                        $('.off-canvas.show').addClass('show');
                    }
                }
            });


        });
    </script>
    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}