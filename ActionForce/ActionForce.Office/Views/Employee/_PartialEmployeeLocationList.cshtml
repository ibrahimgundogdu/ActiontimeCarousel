@model EmployeeControlModel
<table class="table table-dark table-hover table-striped mg-b-0">
    <thead>
        <tr>
            <th>#</th>
            <th>Lokasyon</th>
            <th>Çalışan</th>
            <th>Pozisyonu</th>
            <th class="text-center">Master?</th>
            <th class="text-center">Aktif?</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EmployeeLocationPositions)
        {
            <tr>
                <td>@(item.ID)</td>
                <td class="tx-sm-13 bold">@item.LocationFullName</td>
                <td class="tx-sm-13 bold">@item.EmployeeFullName</td>
                <td class="tx-sm-13 bold">@item.PositionName</td>
                <td class="tx-sm-13">@item.IsMaster</td>
                <td class="tx-sm-13">@item.IsActive</td>
                <td class="tx-sm-13 text-center">
                    <a href="#" class="text-primary" onclick="return confirm('Silmek istediğinize emin misiniz ?') ? DeleteEmployeeLocation(@item.ID):false;">
                        <i data-feather="minus-square"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(function () {
        feather.replace();
    });

</script>