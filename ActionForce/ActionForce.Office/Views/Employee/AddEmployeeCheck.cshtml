@model EmployeeControlModel
@{
    ViewBag.Title = "Çalışan İşlemleri";
}

@section style{
    <link rel="stylesheet" href="/assets/css/dashforge.profile.css">
}

<div class="content-header">
    <div class="content-search">
        <h4>Yeni Çalışan Ekleme</h4>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="pd-x-0 tx-13">
        <div class="media d-block d-lg-flex">
            <div class="media-body  mg-t-40 mg-lg-t-0">
                <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30 row">
                    <div class=" col-md-4">
                        <a href="/Employee/AddEmployee" class="btn btn-warning btn-uppercase"><i data-feather="chevron-left"></i> &nbsp; 01. Temel Bilgiler </a>
                    </div>
                    <div class="col-md-4 tx-center">
                        <h4 class="mg-b-0 tx-spacing--1">02. Kontrol Listesi</h4>
                    </div>
                    <div class="d-none d-md-block col-md-4 tx-right">
                        <a href="/Employee/" class="btn btn-primary btn-uppercase"><i data-feather="users"></i> &nbsp; Çalışanlar Listesi</a>
                    </div>
                </div>
                <div id="employeeStatus">
                    <div class="row no-gutters">
                        <div class="col-lg-12">
                            @if (Model.AbsoluteEmployees != null && Model.AbsoluteEmployees.Count() > 0)
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover table-primary">
                                        <thead>
                                            <tr>
                                                <th colspan="9" class="tx-16">Tam Uyanlar</th>
                                            </tr>
                                            <tr>
                                                <th style="width:5%;">#</th>
                                                <th style="width:15%;">Firma</th>
                                                <th style="width:15%;">Kimlik Tür</th>
                                                <th style="width:10%;">Kimlik No</th>
                                                <th style="width:15%;">Adı Soyadı</th>
                                                <th style="width:15%;">E-Posta</th>
                                                <th style="width:10%;">Telefon</th>
                                                <th style="width:10%;">Durumu</th>
                                                <th style="width:5%;"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.AbsoluteEmployees)
                                            {
                                                <tr>
                                                    <td>@(item.EmployeeID)</td>
                                                    <td>@(item?.OurCompany.CompanyName)</td>
                                                    <td>@(item.IdentityType)</td>
                                                    <td>@(item.IdentityNumber)</td>
                                                    <td><a href="/Employee/Detail/@(item.EmployeeUID)" class="active tx-primary tx-15"> @(item.FullName.ToUpper().Trim())</a></td>
                                                    <td>@(item.EMail)</td>
                                                    <td>@(item.CountryPhoneCode) @(item.Mobile)</td>
                                                    <td>@(item.IsActive == true ? "Aktif" : "Pasif")</td>
                                                    <td class="text-right">
                                                        <a href="/Employee/Detail/@(item.EmployeeUID)" class="btn btn-primary btn-icon btn-sm">
                                                            <i data-feather="arrow-right"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }

                            @if (Model.OptionalEmployees != null && Model.OptionalEmployees.Count() > 0)
                            {
                                <div class="table">
                                    <table class="table table-hover table-warning">
                                        <thead>
                                            <tr>
                                                <th colspan="9" class="tx-16">Benzeyenler</th>
                                            </tr>
                                            <tr>
                                                <th style="width:5%;">#</th>
                                                <th style="width:15%;">Firma</th>
                                                <th style="width:15%;">Kimlik Tür</th>
                                                <th style="width:10%;">Kimlik No</th>
                                                <th style="width:15%;">Adı Soyadı</th>
                                                <th style="width:15%;">E-Posta</th>
                                                <th style="width:10%;">Telefon</th>
                                                <th style="width:10%;">Durumu</th>
                                                <th style="width:5%;"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.OptionalEmployees)
                                            {
                                                <tr>
                                                    <td>@(item.EmployeeID)</td>
                                                    <td>@(item?.OurCompany.CompanyName)</td>
                                                    <td>@(item.IdentityType)</td>
                                                    <td>@(item.IdentityNumber)</td>
                                                    <td><a href="/Employee/Detail/@(item.EmployeeUID)" class="tx-primary tx-15"> @(item.FullName.ToUpper().Trim())</a></td>
                                                    <td>@(item.EMail)</td>
                                                    <td>@(item.CountryPhoneCode) @(item.Mobile)</td>
                                                    <td>@(item.IsActive == true ? "Aktif" : "Pasif")</td>
                                                    <td class="text-right">
                                                        <a href="/Employee/Detail/@(item.EmployeeUID)" class="btn btn-warning btn-icon btn-sm">
                                                            <i data-feather="arrow-right"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }

                            @if (Model.AbsoluteEmployees.Count() <= 0)
                            {
                                <div class="form-group row mg-b-5 bg-gray-50">
                                    <label for="FullName" class="col-sm-3 col-form-label">Ekleyeceğiniz çalışan listede yok ise</label>
                                    <div class="col-sm-6">
                                        <a href="/Employee/AddEmployeeComplete" class="btn btn-primary btn-block tx-15"> Çalışan Eklemeye Devam Et</a>
                                    </div>
                                    <div class="col-sm-3"><label for="Identityx" class="col-form-label"> Var ise çalışan detayına git </label></div>
                                </div>
                            }
                            @if (Model.AbsoluteEmployees != null && Model.AbsoluteEmployees.Count() > 0)
                            {
                                <div class="form-group row mg-b-5 bg-gray-50">
                                    <label for="FullName" class="col-sm-3 col-form-label">Ekleyeceğiniz kişi listede zaten var</label>
                                    <div class="col-sm-6">
                                        <a href="/Employee/Detail/@(Model.AbsoluteEmployees.FirstOrDefault()?.EmployeeUID)" class="btn btn-light btn-block tx-15"> Çalışan Detayına Git</a>
                                    </div>
                                    <div class="col-sm-3"><label for="Identityx" class="col-form-label">  </label></div>
                                </div>
                            }

                        </div>

                    </div>
                </div>



            </div>
        </div>
    </div>
</div>

