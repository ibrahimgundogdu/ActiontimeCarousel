@model EmployeeControlModel

<table class="table table-light table-hover mg-b-0">
    <thead>
        <tr>
            <th>Adres</th>
            <th>PK/ZIP</th>
            <th>Şehir</th>
            <th>Eyalet</th>
            <th>Ülke</th>
            <th>Tür</th>
            <th>Açıklama</th>
            <th>Birincil</th>
            <th>Aktif</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EmployeeAddress)
        {
        <tr>
            <td class="tx-black tx-15">@(item.Address)</td>
            <td>@(item.PostCode)</td>
            <td>@(item.CityName)</td>
            <td>@(item.StateName)</td>
            <td>@(item.CountryName)</td>
            <td>@(item.AddressTypeName)</td>
            <td>@(item.Description)</td>
            <td>@(item.IsMaster)</td>
            <td>@(item.IsActive)</td>
            <td class="tx-right">
                <a href="#modalEmployeeAddress" data-toggle="modal" class="link-03 lh-0 tx-primary btn-xxs btn-light" style="padding:10px 10px 5px 10px;" title="Güncelle" onclick="EditEmployeeAddress(@(item.ID),@(item.EmployeeID));"><i class="icon ion-md-checkmark-circle-outline tx-15"></i></a>
                <a href="#" class="link-03 lh-0 tx-primary btn-xxs btn-light" style="padding:10px 10px 5px 10px;" title="Birincil Yap" onclick="return confirm('Birincil yapmak istediğinize emin misiniz?') ? MakeMasterEmployeeAddress(@(item.ID),@(item.EmployeeID)):'';"><i class="icon ion-md-arrow-up tx-15"></i></a>
                <a href="#" class="link-03 lh-0 tx-primary btn-xxs btn-light" style="padding:10px 10px 5px 10px;" title="Kaldır" onclick="return confirm('Kaldırmak istediğinize emin misiniz?') ? RemoveEmployeeAddress(@(item.ID),@(item.EmployeeID)):'';"><i class="icon ion-md-close-circle-outline tx-15"></i></a>
            </td>
        </tr>
        }

    </tbody>
</table>


