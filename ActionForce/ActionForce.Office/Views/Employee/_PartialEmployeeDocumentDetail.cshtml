@model EmployeeControlModel


<table class="table table-light table-bordered table-hover table-sm tx-13 tx-nowrap mg-b-0">
    <thead>
        <tr class="tx-10 tx-spacing-1 tx-color-03 tx-uppercase">
            <th class="wd-5p">#</th>
            <th class="wd-20p">Döküman Türü</th>
            <th class="wd-15p">Açıklama</th>
            <th class="wd-10p">Döküman</th>
            <th class="wd-15p">Güncelleme</th>
            <th class="wd-5p"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var param in Model.PersonalDocument)
        {
            <tr>
                <td class="text-left">
                    @(param.ID)
                </td>
                <td class="tx-medium" style="padding:2px 2px 2px 17px !important;">@($"{param.DocumentTypeName}")</td>

                <td class="" style="padding:2px !important;">@(param.DocumentDescription)</td>
                <td class="" style="padding:2px !important;"><img src="~/Document/Employee/Document/@param.DocumentFile" class="img-thumbnail" alt="Responsive image" width="100"></td>
                <td class="" style="padding:2px !important;">
                    <small class="tx-12 tx-color-03">@(param.UpdateDate ?? param.RecordDate)</small>
                </td>
                <td class="text-center">
                    <button type="button" class="btn btn-icon btn-xs" onclick="confirm('Silmek İstediğinize Emin misiniz?') ? DeleteEmployeeDocument(@(param.ID)) : ''">
                        <i class="tx-danger" data-feather="trash"></i> &nbsp;
                    </button>
                </td>
            </tr>
        }

    </tbody>
</table>
<script>
    $(function () {
        feather.replace();

        
    });
</script>