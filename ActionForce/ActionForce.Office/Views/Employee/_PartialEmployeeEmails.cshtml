@model EmployeeControlModel

<table class="table table-light table-hover mg-b-0">
    <thead>
        <tr>
            <th>E-Posta</th>
            <th>Tür</th>
            <th>Açıklama</th>
            <th>Birincil</th>
            <th>Aktif</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EmployeeEmails)
        {
            <tr>
                <td class="tx-black tx-15">@(item.EMail)</td>
                <td>@(item.EmailTypeName)</td>
                <td>@(item.Description)</td>
                <td>@(item.IsMaster)</td>
                <td>@(item.IsActive)</td>
                <td class="tx-right">
                    <a href="#" class="link-03 lh-0 tx-primary btn-xxs btn-light" style="padding:10px 10px 5px 10px;" title="Güncelle"><i class="icon ion-md-checkmark-circle-outline tx-15"></i></a>
                    <a href="#" class="link-03 lh-0 tx-primary btn-xxs btn-light" style="padding:10px 10px 5px 10px;" title="Birincil Yap" onclick="return confirm('Birincil yapmak istediğinize emin misiniz?') ? MakeMasterEmployeeEmail(@(item.ID),@(item.EmployeeID)):'';"><i class="icon ion-md-arrow-up tx-15"></i></a>
                    <a href="#" class="link-03 lh-0 tx-primary btn-xxs btn-light" style="padding:10px 10px 5px 10px;" title="Kaldır" onclick="return confirm('Kaldırmak istediğinize emin misiniz?') ? RemoveEmployeeEmail(@(item.ID),@(item.EmployeeID)):'';"><i class="icon ion-md-close-circle-outline tx-15"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>

