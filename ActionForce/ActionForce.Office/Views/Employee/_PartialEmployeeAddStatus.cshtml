                        <span>@(ls.Mobile)</span>
                    </div>
                    <div class="col-lg-1">
                        <span><a href="@("/Employee/Detail/" + ls.EmployeeID)" class="btn btn-xs btn-danger"><i class="fa fa-link"></i></a></span>
                    </div>

