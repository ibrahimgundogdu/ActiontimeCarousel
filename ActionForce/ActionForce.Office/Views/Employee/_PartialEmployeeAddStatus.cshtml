                    </div>
                    <div class="col-lg-1">
                        <span><a href="@("/Employee/Detail/" + ls.EmployeeID)" class="btn btn-xs btn-danger"><i class="fa fa-link"></i></a></span>
                    </div>

                </li>
            }
        </ul>
    }
    if (Model.Wizard.Mobiles?.Count() > 0)
    {
        <ul class="list-group wd-md-100p mg-b-20">
            <li class="list-group-item d-flex align-items-center active">
                Mobil
            </li>
            @foreach (var item in Model.Wizard.Mobiles.ToList())
            {
                var ls = Model.EmployeeList.FirstOrDefault(x => x.Mobile == item);

                <li class="list-group-item d-flex align-items-center">
                    <div class="col-lg-3">
                        <span>@(ls.IdentityNumber)</span>
                    </div>
                    <div class="col-lg-3">
                        <span>@(ls.FullName)</span>
                    </div>
                    <div class="col-lg-3">
