                    </div>

                </li>
            }
        </ul>
    }
    if (Model.Wizard.EMails?.Count() > 0)
    {
        <ul class="list-group wd-md-100p mg-b-20">
            <li class="list-group-item d-flex align-items-center active">
                E-Posta
            </li>
            @foreach (var item in Model.Wizard.EMails.ToList())
            {
                var ls = Model.EmployeeList.FirstOrDefault(x => x.EMail == item);

                <li class="list-group-item d-flex align-items-center">
