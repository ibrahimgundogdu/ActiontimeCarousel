@model DefinitionControlModel

<div class="card-body pd-0">

    <div class="contact-list">
        <div class="table-responsive">
            <table class="table table-primary table-hover table-striped mg-b-0">
                <thead>
                    <tr class="table-active">
                        <th>Hesap Adı</th>
                        <th>Şube Adı</th>
                        <th>Şube Kodu</th>
                        <th>Yönlendirme No</th>
                        <th>Hesap Numarası</th>
                        <th class="tx-right">IBAN</th>
                        <th>Para Birim</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var bank in Model.BankAccountList)
                    {
                    <tr>
                        <td>@(bank.AccountName)</td>
                        <td>@(bank.BranchName)</td>
                        <td>@(bank.BranchCode)</td>
                        <td>@(bank.RoutingNumber)</td>
                        <td>@(bank.AccountNumber)</td>
                        <td class="tx-right font-weight-bold">@(bank.IBAN)</td>
                        <td>@(bank.Currency)</td>
                        <td class="tx-right font-weight-bold"><a href="#" class="text-danger" onclick="if(confirm('@bank.AccountName banka hesap numarasını silmek istediğine emin misin? Bu işlem geri alınamaz')) DeleteBankAccount(@bank.ID)"><i class="fas fa-trash"></i></a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</div>

@if (Model.Results != null)
{
    <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Results.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
    </script>
}