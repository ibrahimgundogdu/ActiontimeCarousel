@model DefinitionControlModel
@{
    ViewBag.Title = "Tanımlar";
}

@section style{

}

<div class="content-header">
    <div class="content-search">
        <span class="tx-20">Tanımlar</span>
    </div>
    <nav class="nav">
        @(DateTime.UtcNow.AddHours(Model.Authentication.ActionEmployee.OurCompany.TimeZone.Value).ToLongDateString())
    </nav>
</div>
<div class="content-body">
    <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                    <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Tanımlar</li>
                </ol>
            </nav>
            <h4 class="mg-b-0 tx-spacing--1">Kasalar</h4>
        </div>
        <div class="d-none d-md-block">
            @{Html.RenderPartial("_PartialAddDefinitionMenu");}
        </div>
    </div>
    <!--<div id="OffCanvasAddCashCollect" class="off-canvas off-canvas-overlay off-canvas-right">
             any content goes here
        form
    </div>-->




    @using (Html.BeginForm("Filter", "Definition", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-row align-items-end">
            <div class="form-group col-md-3 d-flex align-items-end">
                <select class="form-control select2" id="locationId" name="locationId">
                    <option value="" label="Lokasyon Seçiminiz"></option>
                    @foreach (var item in Model.LocationList)
                    {
                        <option value="@item.LocationID" @(Model.Filters.LocationID == item.LocationID ? "selected" : "")>@(Html.Raw($"<strong>{item.SortBy}</strong> {item.LocationName} {item.Description} {item.State}"))</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-1 d-flex align-items-end ">
                <button class="btn btn-primary" type="submit" id="btnsearch">Ara</button>
            </div>
        </div>

    }



    <div>
        <div class="table">
            <table class="table table-sm table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Lokasyon</th>
                        <th>Kasa</th>
                        <th>Para Br.</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.CashList)
                    {
                        <tr style='@(item.cIsActive == false ? "color: red" : "")'>

                            <td class="tx-sm-13 bold">@item.ID</td>
                            <td class="tx-sm-13">@item.LocationFullName</td>
                            <td class="tx-sm-13">@item.CashName</td>
                            <td class="tx-sm-13">@(item.Currency)</td>
                            <td class="tx-sm-13 text-right"><a href="@("/Definition/Detail/" + @item.ID)" class="btn btn-xs btn-primary btn-icon"><i data-feather="edit"></i></a></td>
                            @if (item.IsActive == true)
                            {
                                <td class="tx-sm-13 text-right"><a href="/Definition/Index" class="btn btn-xs btn-danger btn-icon" onclick="if(confirm('@item.CashName kasayı iptal etmek istediğine emin misin?')) DeleteCash(@item.ID)"><i data-feather="trash-2"></i></a></td>
                            }
                        </tr>
                    }

                </tbody>
            </table>
        </div>


        <footer class="content-footer">
            <div>
                <span>&copy; @DateTime.Now.Year UFE Group LLC </span>
            </div>

        </footer>

    </div>
</div>


@section canvasmenu {
    @{Html.RenderPartial("_PartialDocumentForms", Model);}
}

@section scripts {
    <script src="/lib/cleave.js/cleave.min.js"></script>
    <script>
        

        function DeleteCash(id) {
            $.ajax({
                method: "GET",
                url: "/Definition/DeleteCash",
                data: { id: id }
            }).done(function (d) {
                $("#DeleteCash").html(d);
            });
        }



    </script>

    <script>


        $(function () {
            'use strict'

            $('.off-canvas-menu').on('click', function (e) {
                e.preventDefault();
                var target = $(this).attr('href');
                $(target).addClass('show');
            });


            $('.off-canvas .close').on('click', function (e) {
                e.preventDefault();
                $(this).closest('.off-canvas').removeClass('show');
            })

            $(document).on('click touchstart', function (e) {
                e.stopPropagation();

                if (!$(e.target).closest('.off-canvas-menu').length) {
                    var offCanvas = $(e.target).closest('.off-canvas').length;
                    if (!offCanvas) {
                        $('.off-canvas.show').addClass('show');
                    }
                }
            });


        });
    </script>
    @if (Model.Result != null) //
    {
        <script type="text/javascript">
        $.toast({
            heading: 'Information',
            text: '@Model.Result.Message ',
            showHideTransition: 'slide',
            icon: 'info',
            hideAfter: 5000,
            position: 'bottom-right',
        });
        </script>
    }
}
